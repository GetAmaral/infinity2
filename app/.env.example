# Infrastructure Configuration (Docker Compose)
POSTGRES_DB=luminai_db
POSTGRES_USER=luminai_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION

# Application Configuration (Symfony)
DATABASE_URL="postgresql://luminai_user:CHANGE_THIS_PASSWORD_IN_PRODUCTION@database:5432/luminai_db?serverVersion=18&charset=utf8"
APP_ENV=dev
APP_SECRET=CHANGE_THIS_SECRET_IN_PRODUCTION
FRANKENPHP_NUM_THREADS=4

# Routing
DEFAULT_URI=http://localhost
APP_BASE_DOMAIN=localhost

# Session Configuration (empty for localhost, set domain for production)
# Use empty for localhost to avoid browser security restrictions
# Production example: .avelum.com.br
SESSION_COOKIE_DOMAIN=

# Messenger
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0

# Mailer
MAILER_DSN=null://null

# CORS (Update for production domains)
CORS_ALLOW_ORIGIN="^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$"

# Redis Configuration (No password for local dev, use password in production)
REDIS_URL=redis://redis:6379/0

# Security Configuration
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_MONITORING_ENABLED=true

# Performance Configuration
CACHE_ENABLED=true
OPCACHE_ENABLED=true
