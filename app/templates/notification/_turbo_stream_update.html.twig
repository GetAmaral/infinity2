<turbo-stream action="replace" target="notification-{{ notification.id }}">
    <template>
        <tr id="notification-{{ notification.id }}">

            <td>{{ notification.event }}</td>

            <td>{{ notification.attendee }}</td>

            <td>{{ notification.reminder }}</td>

            <td>{{ notification.type }}</td>

            <td>{{ notification.communicationMethod }}</td>

            <td>{{ notification.sentAt }}</td>

            <td>{{ notification.notificationStatus }}</td>

            <td>{{ notification.talkMessage }}</td>

            <td>{{ notification.message }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('notification_show', {id: notification.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('notification_edit', {id: notification.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('notification_delete', {id: notification.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ notification.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'Notification'|trans }} updated successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
