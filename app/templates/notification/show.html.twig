{% extends 'base.html.twig' %}

{% block title %}{{ 'Notification'|trans }} - {{ notification }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2>
                            <i class="bi-circle me-2"></i>
                            {{ 'Notification'|trans }} Details
                        </h2>
                        <div class="btn-group">
                            <a href="{{ path('notification_edit', {id: notification.id}) }}"
                               class="btn btn-warning">
                                <i class="bi bi-pencil me-1"></i>
                                {{ 'action.edit'|trans }}
                            </a>
                            <a href="{{ path('notification_index') }}"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                {{ 'action.back'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-3">{{ 'Event'|trans }}</dt>
                        <dd class="col-sm-9">{{ notification.event }}</dd>

                        <dt class="col-sm-3">{{ 'Attendee'|trans }}</dt>
                        <dd class="col-sm-9">{{ notification.attendee }}</dd>

                        <dt class="col-sm-3">{{ 'Reminder'|trans }}</dt>
                        <dd class="col-sm-9">{{ notification.reminder }}</dd>

                        <dt class="col-sm-3">{{ 'Type'|trans }}</dt>
                        <dd class="col-sm-9">{{ notification.type }}</dd>

                        <dt class="col-sm-3">{{ 'CommunicationMethod'|trans }}</dt>
                        <dd class="col-sm-9">{{ notification.communicationMethod }}</dd>

                        <dt class="col-sm-3">{{ 'SentAt'|trans }}</dt>
                        <dd class="col-sm-9">{{ notification.sentAt }}</dd>

                        <dt class="col-sm-3">{{ 'NotificationStatus'|trans }}</dt>
                        <dd class="col-sm-9">{{ notification.notificationStatus }}</dd>

                        <dt class="col-sm-3">{{ 'TalkMessage'|trans }}</dt>
                        <dd class="col-sm-9">{{ notification.talkMessage }}</dd>

                        <dt class="col-sm-3">{{ 'Message'|trans }}</dt>
                        <dd class="col-sm-9">{{ notification.message }}</dd>

                        <dt class="col-sm-3">{{ 'field.created_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ notification.createdAt|date('Y-m-d H:i:s') }}</dd>

                        <dt class="col-sm-3">{{ 'field.updated_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ notification.updatedAt|date('Y-m-d H:i:s') }}</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form method="post"
                          action="{{ path('notification_delete', {id: notification.id}) }}"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ notification.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>
                            {{ 'action.delete'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
