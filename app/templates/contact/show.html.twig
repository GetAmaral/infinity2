{% extends 'base.html.twig' %}

{% block title %}{{ 'Contact'|trans }} - {{ contact }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2>
                            <i class="bi-circle me-2"></i>
                            {{ 'Contact'|trans }} Details
                        </h2>
                        <div class="btn-group">
                            <a href="{{ path('contact_edit', {id: contact.id}) }}"
                               class="btn btn-warning">
                                <i class="bi bi-pencil me-1"></i>
                                {{ 'action.edit'|trans }}
                            </a>
                            <a href="{{ path('contact_index') }}"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                {{ 'action.back'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-3">{{ 'Name'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.name }}</dd>

                        <dt class="col-sm-3">{{ 'Organization'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.organization }}</dd>

                        <dt class="col-sm-3">{{ 'Company'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.company }}</dd>

                        <dt class="col-sm-3">{{ 'Origin'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.origin }}</dd>

                        <dt class="col-sm-3">{{ 'AccountManager'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.accountManager }}</dd>

                        <dt class="col-sm-3">{{ 'Nickname'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.nickname }}</dd>

                        <dt class="col-sm-3">{{ 'Ranking'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.ranking }}</dd>

                        <dt class="col-sm-3">{{ 'Email'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.email }}</dd>

                        <dt class="col-sm-3">{{ 'Phone'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.phone }}</dd>

                        <dt class="col-sm-3">{{ 'Address'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.address }}</dd>

                        <dt class="col-sm-3">{{ 'Neighborhood'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.neighborhood }}</dd>

                        <dt class="col-sm-3">{{ 'City'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.city }}</dd>

                        <dt class="col-sm-3">{{ 'PostalCode'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.postalCode }}</dd>

                        <dt class="col-sm-3">{{ 'Geo'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.geo }}</dd>

                        <dt class="col-sm-3">{{ 'BirthDate'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.birthDate }}</dd>

                        <dt class="col-sm-3">{{ 'Gender'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.gender }}</dd>

                        <dt class="col-sm-3">{{ 'Document'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.document }}</dd>

                        <dt class="col-sm-3">{{ 'Score'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.score }}</dd>

                        <dt class="col-sm-3">{{ 'Notes'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.notes }}</dd>

                        <dt class="col-sm-3">{{ 'FirstTalkDate'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.firstTalkDate }}</dd>

                        <dt class="col-sm-3">{{ 'LastTalkDate'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.lastTalkDate }}</dd>

                        <dt class="col-sm-3">{{ 'ProfilePictureUrl'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.profilePictureUrl }}</dd>

                        <dt class="col-sm-3">{{ 'Status'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.status }}</dd>

                        <dt class="col-sm-3">{{ 'BillingAddress'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.billingAddress }}</dd>

                        <dt class="col-sm-3">{{ 'BillingCity'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.billingCity }}</dd>

                        <dt class="col-sm-3">{{ 'field.created_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.createdAt|date('Y-m-d H:i:s') }}</dd>

                        <dt class="col-sm-3">{{ 'field.updated_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ contact.updatedAt|date('Y-m-d H:i:s') }}</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form method="post"
                          action="{{ path('contact_delete', {id: contact.id}) }}"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>
                            {{ 'action.delete'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
