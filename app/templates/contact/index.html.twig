                    <tbody id="contact-list">
                        {% for item in items %}
                        <tr id="contact-{{ item.id }}">

                            <td>{{ item.name }}</td>

                            <td>{{ item.organization }}</td>

                            <td>{{ item.company }}</td>

                            <td>{{ item.origin }}</td>

                            <td>{{ item.accountManager }}</td>

                            <td>{{ item.nickname }}</td>

                            <td>{{ item.ranking }}</td>

                            <td>{{ item.email }}</td>

                            <td>{{ item.phone }}</td>

                            <td>{{ item.address }}</td>

                            <td>{{ item.neighborhood }}</td>

                            <td>{{ item.city }}</td>

                            <td>{{ item.postalCode }}</td>

                            <td>{{ item.geo }}</td>

                            <td>{{ item.birthDate }}</td>

                            <td>{{ item.gender }}</td>

                            <td>{{ item.document }}</td>

                            <td>{{ item.score }}</td>

                            <td>{{ item.notes }}</td>

                            <td>{{ item.firstTalkDate }}</td>

                            <td>{{ item.lastTalkDate }}</td>

                            <td>{{ item.profilePictureUrl }}</td>

                            <td>{{ item.status }}</td>

                            <td>{{ item.billingAddress }}</td>

                            <td>{{ item.billingCity }}</td>

                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('contact_show', {id: item.id}) }}"
                                       class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('contact_edit', {id: item.id}) }}"
                                       class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post"
                                          action="{{ path('contact_delete', {id: item.id}) }}"
                                          class="d-inline"
                                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
