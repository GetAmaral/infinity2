<turbo-stream action="prepend" target="calendar-list">
    <template>
        <tr id="calendar-{{ calendar.id }}">

            <td>{{ calendar.name }}</td>

            <td>{{ calendar.organization }}</td>

            <td>{{ calendar.user }}</td>

            <td>{{ calendar.description }}</td>

            <td>{{ calendar.timeZone }}</td>

            <td>{{ calendar.color }}</td>

            <td>{{ calendar.primary }}</td>

            <td>{{ calendar.visible }}</td>

            <td>{{ calendar.accessRole }}</td>

            <td>{{ calendar.calendarType }}</td>

            <td>{{ calendar.externalLink }}</td>

            <td>{{ calendar.externalApiKey }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('calendar_show', {id: calendar.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('calendar_edit', {id: calendar.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('calendar_delete', {id: calendar.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ calendar.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'Calendar'|trans }} created successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
