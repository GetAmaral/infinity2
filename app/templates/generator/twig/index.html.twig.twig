{% verbatim %}{% extends 'base.html.twig' %}

{% block title %}{{ '{% endverbatim %}{{ entity.pluralLabel }}{% verbatim %}'|trans }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="{% endverbatim %}{{ entity.icon }}{% verbatim %} me-2"></i>
            {{ '{% endverbatim %}{{ entity.pluralLabel }}{% verbatim %}'|trans }}
        </h1>
        <a href="{{ path('{% endverbatim %}{{ entity.getSnakeCaseName() }}{% verbatim %}_new') }}"
           class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>
            {{ 'action.create'|trans }}
        </a>
    </div>

    {# Search and Filter #}
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" data-turbo="true">
                <div class="row g-3">
                    <div class="col-md-6">
                        <input type="search"
                               name="q"
                               value="{{ app.request.query.get('q') }}"
                               class="form-control"
                               placeholder="{{ 'action.search'|trans }}...">
                    </div>
{% endverbatim %}{% for property in entity.properties %}{% if property.filterable %}{% verbatim %}
                    <div class="col-md-3">
                        <select name="filter_{% endverbatim %}{{ property.propertyName }}{% verbatim %}" class="form-select">
                            <option value="">{{ '{% endverbatim %}{{ property.propertyLabel }}{% verbatim %}'|trans }}</option>
                        </select>
                    </div>
{% endverbatim %}{% endif %}{% endfor %}{% verbatim %}
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-secondary w-100">
                            <i class="bi bi-search me-1"></i>
                            {{ 'action.search'|trans }}
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {# Data Table #}
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
{% endverbatim %}{% for property in entity.properties %}{% if property.showInList %}{% verbatim %}
                            <th>
{% endverbatim %}{% if property.sortable %}{% verbatim %}
                                <a href="{{ path('{% endverbatim %}{{ entity.getSnakeCaseName() }}{% verbatim %}_index', {sort: '{% endverbatim %}{{ property.propertyName }}{% verbatim %}', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ '{% endverbatim %}{{ property.propertyLabel }}{% verbatim %}'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>
{% endverbatim %}{% else %}{% verbatim %}
                                {{ '{% endverbatim %}{{ property.propertyLabel }}{% verbatim %}'|trans }}
{% endverbatim %}{% endif %}{% verbatim %}
                            </th>
{% endverbatim %}{% endif %}{% endfor %}{% verbatim %}
                            <th>{{ 'action.label'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody id="{% endverbatim %}{{ entity.getLowercaseName() }}{% verbatim %}-list">
                        {% for item in items %}
                        <tr id="{% endverbatim %}{{ entity.getLowercaseName() }}{% verbatim %}-{{ item.id }}">
{% endverbatim %}{% for property in entity.properties %}{% if property.showInList %}{% if property.isRelationship() and not property.isCollection() %}{% verbatim %}
                            <td>{{ item.{% endverbatim %}{{ property.propertyName }}{% verbatim %} }}</td>
{% endverbatim %}{% elseif not property.isRelationship() %}{% verbatim %}
                            <td>{{ item.{% endverbatim %}{{ property.propertyName }}{% verbatim %} }}</td>
{% endverbatim %}{% endif %}{% endif %}{% endfor %}{% verbatim %}
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('{% endverbatim %}{{ entity.getSnakeCaseName() }}{% verbatim %}_show', {id: item.id}) }}"
                                       class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('{% endverbatim %}{{ entity.getSnakeCaseName() }}{% verbatim %}_edit', {id: item.id}) }}"
                                       class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post"
                                          action="{{ path('{% endverbatim %}{{ entity.getSnakeCaseName() }}{% verbatim %}_delete', {id: item.id}) }}"
                                          class="d-inline"
                                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Pagination #}
            {% if items.haveToPaginate %}
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    {{ knp_pagination_render(items) }}
                </ul>
            </nav>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}{% endverbatim %}
