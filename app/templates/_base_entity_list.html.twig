{% block entity_list_scripts %}
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('{{ entity_name }}SearchInput');
        const clearBtn = document.getElementById('clearSearchBtn');
        const originalContent = document.getElementById('{{ entity_name_plural }}-grid').innerHTML;
        let isSearching = false;

        // Table scroll fade indicators management
        function setupTableScrollFade() {
            const tableWrapper = document.querySelector('.table-scroll-wrapper');
            if (!tableWrapper) return;

            function updateFadeIndicators() {
                const scrollLeft = tableWrapper.scrollLeft;
                const scrollWidth = tableWrapper.scrollWidth;
                const clientWidth = tableWrapper.clientWidth;
                const maxScroll = scrollWidth - clientWidth;

                // Remove all scroll classes
                tableWrapper.classList.remove('scrolled-left', 'scrolled-right', 'scrolled-middle');

                if (maxScroll <= 0) {
                    // No scroll needed, hide both fades
                    return;
                }

                if (scrollLeft <= 5) {
                    // At the start
                    tableWrapper.classList.add('scrolled-left');
                } else if (scrollLeft >= maxScroll - 5) {
                    // At the end
                    tableWrapper.classList.add('scrolled-right');
                } else {
                    // In the middle
                    tableWrapper.classList.add('scrolled-middle');
                }
            }

            // Listen for scroll events
            tableWrapper.addEventListener('scroll', updateFadeIndicators);

            // Update on window resize
            window.addEventListener('resize', updateFadeIndicators);

            // Initial update
            setTimeout(updateFadeIndicators, 100);

            // Update when table view becomes visible
            const observer = new MutationObserver(function(mutations) {
                mutations.forEach(function(mutation) {
                    if (mutation.target.style.display !== 'none') {
                        setTimeout(updateFadeIndicators, 100);
                    }
                });
            });

            const tableView = document.getElementById('{{ entity_name_plural }}-table');
            if (tableView) {
                observer.observe(tableView, { attributes: true, attributeFilter: ['style'] });
            }
        }

        // Initialize table scroll fade
        setupTableScrollFade();

        // Handle ALL dropdowns (grid, list, table) with global dropdown container
        function setupGlobalDropdowns() {
            const globalDropdown = document.getElementById('globalTableDropdown');
            if (!globalDropdown) return;

            let currentToggle = null;

            // Intercept all dropdown button clicks in all views
            document.addEventListener('click', function(event) {
                const dropdownButton = event.target.closest('[data-bs-toggle="dropdown"]');

                // If clicking inside global dropdown, allow normal behavior
                if (event.target.closest('#globalTableDropdown')) {
                    return;
                }

                // If clicking dropdown button
                if (dropdownButton) {
                    event.preventDefault();
                    event.stopPropagation();

                    // Find the original dropdown menu
                    const originalDropdown = dropdownButton.nextElementSibling;
                    if (!originalDropdown || !originalDropdown.classList.contains('dropdown-menu')) return;

                    // Toggle: if clicking same button, close
                    if (currentToggle === dropdownButton && globalDropdown.style.display === 'block') {
                        globalDropdown.style.display = 'none';
                        currentToggle = null;
                        return;
                    }

                    // Close any existing dropdown
                    globalDropdown.style.display = 'none';

                    // Clone the dropdown content
                    globalDropdown.innerHTML = originalDropdown.innerHTML;

                    // Get button position
                    const rect = dropdownButton.getBoundingClientRect();

                    // Position the global dropdown to the right of the button
                    globalDropdown.style.top = rect.top + 'px';
                    globalDropdown.style.left = (rect.right + 5) + 'px'; // 5px gap from button
                    globalDropdown.style.display = 'block';

                    currentToggle = dropdownButton;
                } else {
                    // Click outside - close dropdown
                    globalDropdown.style.display = 'none';
                    currentToggle = null;
                }
            });

            // Close dropdown when scrolling (any container)
            window.addEventListener('scroll', function() {
                globalDropdown.style.display = 'none';
                currentToggle = null;
            }, true); // Use capture phase to catch all scroll events

            // Close on ESC key
            document.addEventListener('keydown', function(event) {
                if (event.key === 'Escape') {
                    globalDropdown.style.display = 'none';
                    currentToggle = null;
                }
            });
        }

        // Initialize global dropdowns for all views
        setupGlobalDropdowns();

        if (searchInput && clearBtn) {
            // Track search state
            searchInput.addEventListener('input', function() {
                if (this.value.trim().length > 0) {
                    isSearching = true;
                } else {
                    if (isSearching) {
                        restoreOriginalContent();
                        isSearching = false;
                    }
                }
            });

            // Clear button click handler
            clearBtn.addEventListener('click', function(e) {
                e.preventDefault();
                searchInput.value = '';
                restoreOriginalContent();
                searchInput.focus();

                // Trigger input event to update view toggle controller
                searchInput.dispatchEvent(new Event('input', { bubbles: true }));
            });

            // ESC key handler
            searchInput.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' || e.key === 'Esc') {
                    e.preventDefault();
                    this.value = '';
                    restoreOriginalContent();
                    this.blur();

                    // Trigger input event to update view toggle controller
                    this.dispatchEvent(new Event('input', { bubbles: true }));
                }
            });
        }

        function initializeTooltips() {
            if (typeof bootstrap === 'undefined' || typeof bootstrap.Tooltip === 'undefined') {
                return;
            }

            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.forEach(function (tooltipTriggerEl) {
                const existingTooltip = bootstrap.Tooltip.getInstance(tooltipTriggerEl);
                if (existingTooltip) {
                    existingTooltip.dispose();
                }
                new bootstrap.Tooltip(tooltipTriggerEl, {
                    trigger: 'hover',
                    delay: { show: 300, hide: 100 }
                });
            });
        }

        function restoreOriginalContent() {
            const container = document.getElementById('{{ entity_name_plural }}-grid');
            container.innerHTML = originalContent;
            initializeTooltips();
        }

        const observer = new MutationObserver(function() {
            initializeTooltips();
        });

        const gridContainer = document.getElementById('{{ entity_name_plural }}-grid');
        if (gridContainer) {
            observer.observe(gridContainer, {
                childList: true,
                subtree: true
            });
        }

        {% block additional_scripts %}
