<turbo-stream action="prepend" target="meetingdata-list">
    <template>
        <tr id="meetingdata-{{ meetingdata.id }}">

            <td>{{ meetingdata.platform }}</td>

            <td>{{ meetingdata.event }}</td>

            <td>{{ meetingdata.url }}</td>

            <td>{{ meetingdata.meetingId }}</td>

            <td>{{ meetingdata.secret }}</td>

            <td>{{ meetingdata.recordUrl }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('meeting_data_show', {id: meetingdata.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('meeting_data_edit', {id: meetingdata.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('meeting_data_delete', {id: meetingdata.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ meetingdata.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'MeetingData'|trans }} created successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
