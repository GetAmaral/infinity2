<turbo-stream action="replace" target="tag-{{ tag.id }}">
    <template>
        <tr id="tag-{{ tag.id }}">

            <td>{{ tag.name }}</td>

            <td>{{ tag.organization }}</td>

            <td>{{ tag.color }}</td>

            <td>{{ tag.description }}</td>

            <td>{{ tag.sentiment }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('tag_show', {id: tag.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('tag_edit', {id: tag.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('tag_delete', {id: tag.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'Tag'|trans }} updated successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
