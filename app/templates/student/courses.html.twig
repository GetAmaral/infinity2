{% extends 'base.html.twig' %}

{% block title %}{{ 'student.my.courses'|trans({}, 'course') }} - {{ 'page.luminai.suffix'|trans }}{% endblock %}

{% block body %}
<!-- Page Header -->
<div class="mb-4">
    <div class="ai-dashboard-header">
        <div class="d-flex justify-content-between align-items-start">
            <div class="d-flex align-items-center">
                <div class="p-3 rounded-3 me-4" style="background: var(--luminai-ai-gradient);">
                    <i class="bi bi-book text-white fs-2"></i>
                </div>
                <div>
                    <h1 class="text-gradient mb-2">{{ 'student.my.courses'|trans({}, 'course') }}</h1>
                    <p class="text-secondary mb-0 fs-5">{{ 'student.courses.subtitle'|trans({}, 'course') }}</p>
                </div>
            </div>
            <div class="d-flex gap-2">
                <div class="ai-status-indicator">
                    <i class="bi bi-star-fill"></i> {{ enrollments|length }} {{ 'student.enrolled'|trans({}, 'course') }}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- OpenAI API Key Card -->
{% if app.user.openAiApiKey %}
<div class="row mb-4">
    <div class="col-12">
        <div class="luminai-card ai-enhanced p-4">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <div class="p-3 rounded-3 me-3" style="background: linear-gradient(135deg, #10A37F 0%, #1A7F64 100%);">
                        <i class="bi bi-key-fill text-white fs-3"></i>
                    </div>
                    <div>
                        <h5 class="text-white mb-1">{{ 'student.openai.api.key'|trans({}, 'course') }}</h5>
                        <p class="text-secondary mb-0">{{ 'student.openai.api.key.description'|trans({}, 'course') }}</p>
                    </div>
                </div>
                <button type="button"
                        class="btn luminai-btn-primary"
                        data-bs-toggle="modal"
                        data-bs-target="#openaiApiKeyModal">
                    <i class="bi bi-eye me-2"></i>{{ 'student.show.api.key'|trans({}, 'course') }}
                </button>
            </div>
        </div>
    </div>
</div>
{% endif %}

{% if enrollments is empty %}
    <!-- Empty State -->
    <div class="luminai-card p-5 text-center">
        <i class="bi bi-book" style="font-size: 4rem; color: var(--luminai-text-muted);"></i>
        <h3 class="text-white mt-4 mb-3">{{ 'student.no.courses'|trans({}, 'course') }}</h3>
        <p class="text-secondary mb-4">{{ 'student.no.courses.description'|trans({}, 'course') }}</p>
    </div>
{% else %}
    <!-- Courses Grid -->
    <div class="row">
        {% for enrollment in enrollments %}
            {% set course = enrollment.course %}
            {% set progress = enrollment.progressPercentage|round %}
            {% set isCompleted = enrollment.completedAt is not null %}
            {% set totalLectures = 0 %}
            {% for module in course.modules %}
                {% set totalLectures = totalLectures + module.lectures|length %}
            {% endfor %}

            <div class="col-xl-4 col-lg-6 mb-4">
                <div class="luminai-card ai-enhanced p-4 h-100 d-flex flex-column">
                    <!-- Course Header -->
                    <div class="d-flex align-items-start mb-3">
                        <div class="p-2 rounded-3 me-3" style="background: var(--luminai-ai-gradient); background-size: 200% 200%; animation: gradientShift 4s ease infinite;">
                            <i class="bi bi-book text-white fs-4"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="text-white mb-1">{{ course.name }}</h5>
                            <div class="d-flex gap-2 align-items-center flex-wrap">
                                <span class="real-time-badge">
                                    <i class="bi bi-collection me-1"></i>{{ totalLectures }} {{ 'course.lectures'|trans({}, 'course') }}
                                </span>
                                {% if course.totalLengthSeconds > 0 %}
                                    <span class="real-time-badge">
                                        <i class="bi bi-clock me-1"></i>{{ course.totalLengthFormatted }}
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Course Description -->
                    {% if course.description %}
                        <p class="text-secondary mb-3">
                            {{ course.description|slice(0, 120) }}{% if course.description|length > 120 %}...{% endif %}
                        </p>
                    {% else %}
                        <p class="text-muted mb-3 fst-italic">{{ 'empty.no.description'|trans }}</p>
                    {% endif %}

                    <!-- Progress Bar -->
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted">{{ 'student.progress'|trans({}, 'course') }}</small>
                            <small class="text-neon fw-bold">{{ progress }}%</small>
                        </div>
                        <div class="progress" style="height: 8px; background: rgba(255, 255, 255, 0.1);">
                            <div class="progress-bar"
                                 style="background: var(--luminai-ai-gradient); width: {{ progress }}%;"
                                 role="progressbar"
                                 aria-valuenow="{{ progress }}"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                            </div>
                        </div>
                    </div>

                    <!-- Status Badges -->
                    <div class="mb-3">
                        {% if isCompleted %}
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle me-1"></i>{{ 'student.completed'|trans({}, 'course') }}
                            </span>
                            <small class="text-muted ms-2">{{ enrollment.completedAt|format_date('medium') }}</small>
                        {% elseif enrollment.startDate %}
                            <span class="badge bg-primary">
                                <i class="bi bi-play-circle me-1"></i>{{ 'student.in.progress'|trans({}, 'course') }}
                            </span>
                            {% if enrollment.currentLecture %}
                                <small class="text-muted ms-2">{{ 'student.current'|trans({}, 'course') }}: {{ enrollment.currentLecture.name|slice(0, 30) }}</small>
                            {% endif %}
                        {% else %}
                            <span class="badge bg-secondary">
                                <i class="bi bi-hourglass-split me-1"></i>{{ 'student.not.started'|trans({}, 'course') }}
                            </span>
                        {% endif %}
                    </div>

                    <!-- Footer Actions -->
                    <div class="mt-auto pt-3 border-top" style="border-color: rgba(255, 255, 255, 0.1) !important;">
                        <div class="d-flex gap-2">
                            {% if isCompleted %}
                                <a href="{{ path('certificate_course', {id: course.id}) }}"
                                   class="btn luminai-btn-success btn-sm flex-fill"
                                   target="_blank">
                                    <i class="bi bi-award me-1"></i>{{ 'certificate.view.certificate'|trans({}, 'course') }}
                                </a>
                                {# Completed course - Restart #}
                                <a href="{{ path('student_course', {id: course.id}) }}"
                                   class="btn luminai-btn-primary btn-sm flex-fill">
                                    <i class="bi bi-arrow-clockwise me-1"></i>{{ 'student.restart'|trans({}, 'course') }}
                                </a>
                            {% elseif enrollment.currentLecture %}
                                {# In progress - Continue #}
                                <a href="{{ path('student_lecture', {courseId: course.id, lectureId: enrollment.currentLecture.id}) }}"
                                   class="btn luminai-btn-primary btn-sm w-100">
                                    <i class="bi bi-play-fill me-1"></i>{{ 'student.continue'|trans({}, 'course') }}
                                </a>
                            {% else %}
                                {# Not started - Start #}
                                <a href="{{ path('student_course', {id: course.id}) }}"
                                   class="btn luminai-btn-primary btn-sm w-100">
                                    <i class="bi bi-play-circle me-1"></i>{{ 'student.start'|trans({}, 'course') }}
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Summary Stats -->
    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <div class="metric-card">
                <i class="bi bi-book-fill text-neon fs-1"></i>
                <div class="metric-value">{{ enrollments|length }}</div>
                <div class="metric-label">{{ 'student.total.courses'|trans({}, 'course') }}</div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="metric-card">
                <i class="bi bi-check-circle-fill text-success fs-1"></i>
                <div class="metric-value">{{ enrollments|filter(e => e.completedAt is not null)|length }}</div>
                <div class="metric-label">{{ 'student.completed.courses'|trans({}, 'course') }}</div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="metric-card">
                <i class="bi bi-play-circle-fill text-primary fs-1"></i>
                <div class="metric-value">{{ enrollments|filter(e => e.startDate is not null and e.completedAt is null)|length }}</div>
                <div class="metric-label">{{ 'student.in.progress.courses'|trans({}, 'course') }}</div>
            </div>
        </div>
    </div>
{% endif %}

<!-- OpenAI API Key Modal -->
{% if app.user.openAiApiKey %}
<div class="modal fade" id="openaiApiKeyModal" tabindex="-1" aria-labelledby="openaiApiKeyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 600px; margin: 1.75rem auto;">
        <div class="modal-content luminai-card">
            <div class="modal-header border-0">
                <h5 class="modal-title text-gradient" id="openaiApiKeyModalLabel">
                    <i class="bi bi-key-fill me-2"></i>{{ 'student.openai.api.key'|trans({}, 'course') }}
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info border-0 mb-3" style="background: rgba(59, 130, 246, 0.1); border: 1px solid rgba(59, 130, 246, 0.3) !important; color: #60a5fa;">
                    <i class="bi bi-info-circle me-2"></i>
                    <small>{{ 'student.api.key.warning'|trans({}, 'course') }}</small>
                </div>

                <label class="form-label text-white mb-2">{{ 'student.your.api.key'|trans({}, 'course') }}</label>
                <div class="input-group">
                    <input type="text"
                           class="form-control font-monospace"
                           id="apiKeyInput"
                           value="{{ app.user.openAiApiKey }}"
                           readonly
                           style="background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); color: #10A37F; font-size: 0.9rem;">
                    <button class="btn luminai-btn-primary" type="button" id="copyApiKeyBtn">
                        <i class="bi bi-clipboard me-1"></i>{{ 'student.copy'|trans({}, 'course') }}
                    </button>
                </div>

                <div class="mt-3">
                    <small class="text-secondary">
                        <i class="bi bi-shield-check me-1"></i>{{ 'student.api.key.keep.safe'|trans({}, 'course') }}
                    </small>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn luminai-btn-secondary" data-bs-dismiss="modal">
                    {{ 'button.close'|trans }}
                </button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const copyBtn = document.getElementById('copyApiKeyBtn');
    const apiKeyInput = document.getElementById('apiKeyInput');

    if (copyBtn && apiKeyInput) {
        copyBtn.addEventListener('click', function() {
            apiKeyInput.select();
            apiKeyInput.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(apiKeyInput.value).then(function() {
                const originalHtml = copyBtn.innerHTML;
                copyBtn.innerHTML = '<i class="bi bi-check-circle me-1"></i>{{ 'student.copied'|trans({}, 'course') }}';
                copyBtn.classList.add('btn-success');
                copyBtn.classList.remove('luminai-btn-primary');

                setTimeout(function() {
                    copyBtn.innerHTML = originalHtml;
                    copyBtn.classList.remove('btn-success');
                    copyBtn.classList.add('luminai-btn-primary');
                }, 2000);
            });
        });
    }
});

document.addEventListener('turbo:load', function() {
    const copyBtn = document.getElementById('copyApiKeyBtn');
    const apiKeyInput = document.getElementById('apiKeyInput');

    if (copyBtn && apiKeyInput) {
        copyBtn.addEventListener('click', function() {
            apiKeyInput.select();
            apiKeyInput.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(apiKeyInput.value).then(function() {
                const originalHtml = copyBtn.innerHTML;
                copyBtn.innerHTML = '<i class="bi bi-check-circle me-1"></i>{{ 'student.copied'|trans({}, 'course') }}';
                copyBtn.classList.add('btn-success');
                copyBtn.classList.remove('luminai-btn-primary');

                setTimeout(function() {
                    copyBtn.innerHTML = originalHtml;
                    copyBtn.classList.remove('btn-success');
                    copyBtn.classList.add('luminai-btn-primary');
                }, 2000);
            });
        });
    }
});
</script>
{% endif %}
{% endblock %}
