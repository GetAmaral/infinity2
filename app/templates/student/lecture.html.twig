{% extends 'base.html.twig' %}

{% block title %}{{ lecture.name }} - {{ course.name }} - {{ 'student.singular'|trans }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb" style="background: transparent; padding: 0;">
            <li class="breadcrumb-item">
                <a href="{{ path('student_courses') }}" class="text-neon">
                    <i class="bi bi-house-door me-1"></i>{{ 'student.my.courses'|trans }}
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('student_course', {id: course.id}) }}" class="text-neon">
                    {{ course.name }}
                </a>
            </li>
            <li class="breadcrumb-item">
                <span class="text-neon">{{ lecture.courseModule.name }}</span>
            </li>
            <li class="breadcrumb-item active text-white">{{ lecture.name }}</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Video Player Column -->
        <div class="col-lg-9">
            <!-- Video Player Card -->
            <div class="infinity-card p-0 mb-4" style="overflow: hidden;">
                {% if lecture.processingStatus == 'completed' and lecture.videoPath %}
                    <!-- Plyr Video Player with HLS -->
                    <div
                        data-controller="student-video"
                        data-student-video-video-url-value="{{ lecture.videoPath }}"
                        data-student-video-lecture-id-value="{{ lecture.id }}"
                        data-student-video-progress-url-value="{{ path('student_progress_update', {lectureId: lecture.id}) }}"
                        data-student-video-current-position-value="{{ studentProgress ? studentProgress.lastPositionSeconds : 0 }}"
                        data-student-video-completed-value="{{ studentProgress ? studentProgress.completed : false }}"
                        style="position: relative; background: #000;">

                        <video
                            data-student-video-target="player"
                            playsinline
                            crossorigin="anonymous"
                            style="width: 100%; height: auto; display: block;">
                        </video>

                        <div class="video-error-message" style="display: none; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); background: rgba(220, 38, 38, 0.9); color: white; padding: 1rem 2rem; border-radius: 8px; z-index: 1000;"></div>
                    </div>
                {% elseif lecture.processingStatus == 'processing' %}
                    <div class="p-5 text-center" style="background: var(--infinity-card-bg);">
                        <div class="spinner-border text-warning" role="status" style="width: 3rem; height: 3rem;">
                            <span class="visually-hidden">{{ 'course.lecture.processing'|trans }}...</span>
                        </div>
                        <h4 class="text-white mt-4">{{ 'course.lecture.processing'|trans }}...</h4>
                        <p class="text-muted">{{ 'course.lecture.processing.description'|trans }}</p>
                        <button class="btn btn-outline-light mt-3" onclick="window.location.reload()">
                            <i class="bi bi-arrow-clockwise me-2"></i>{{ 'button.refresh'|trans }}
                        </button>
                    </div>
                {% elseif lecture.processingStatus == 'failed' %}
                    <div class="p-5 text-center" style="background: var(--infinity-card-bg);">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                        <h4 class="text-white mt-3">{{ 'course.lecture.failed'|trans }}</h4>
                        <p class="text-muted">{{ 'course.lecture.failed.description'|trans }}</p>
                        {% if lecture.processingError %}
                            <p class="text-danger small">{{ lecture.processingError }}</p>
                        {% endif %}
                    </div>
                {% else %}
                    <div class="p-5 text-center" style="background: var(--infinity-card-bg);">
                        <i class="bi bi-film text-muted" style="font-size: 4rem;"></i>
                        <h4 class="text-white mt-3">{{ 'course.lecture.no.video'|trans }}</h4>
                        <p class="text-muted">{{ 'course.lecture.no.video.description'|trans }}</p>
                    </div>
                {% endif %}

                <!-- Navigation Controls - Always Visible -->
                <div class="video-nav-controls d-flex justify-content-between align-items-center p-3">
                    <div>
                        {% if previousLecture %}
                            <a href="{{ path('student_lecture', {courseId: course.id, lectureId: previousLecture.id}) }}"
                               class="btn btn-outline-light btn-sm"
                               data-bs-toggle="tooltip"
                               data-bs-placement="top"
                               title="{{ previousLecture.name }}">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        {% else %}
                            <button class="btn btn-outline-secondary btn-sm" disabled>
                                <i class="bi bi-chevron-left"></i>
                            </button>
                        {% endif %}
                    </div>

                    <div class="d-flex align-items-center"
                         data-controller="completion-toggle"
                         data-completion-toggle-lecture-id-value="{{ lecture.id }}"
                         data-completion-toggle-url-value="{{ path('student_progress_complete', {lectureId: lecture.id}) }}">
                        <div class="form-check form-switch">
                            <input class="form-check-input"
                                   type="checkbox"
                                   role="switch"
                                   id="completionToggle"
                                   data-completion-toggle-target="toggle"
                                   data-action="change->completion-toggle#toggle"
                                   {% if studentProgress and studentProgress.completed %}checked{% endif %}
                                   style="width: 3rem; height: 1.5rem; cursor: pointer;">
                            <label class="form-check-label ms-2" for="completionToggle">
                                <strong>{{ 'student.completed'|trans }}</strong>
                            </label>
                        </div>
                    </div>

                    <div>
                        {% if nextLecture %}
                            <a href="{{ path('student_lecture', {courseId: course.id, lectureId: nextLecture.id}) }}"
                               class="btn btn-outline-light btn-sm"
                               data-bs-toggle="tooltip"
                               data-bs-placement="top"
                               title="{{ nextLecture.name }}">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        {% else %}
                            <a href="{{ path('student_course', {id: course.id}) }}"
                               class="btn btn-success btn-sm">
                                <i class="bi bi-check-circle me-1"></i>{{ 'student.end.course'|trans }}
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Lecture Info Card -->
            <div class="infinity-card p-4">
                <h2 class="text-gradient mb-3">{{ lecture.name }}</h2>

                {% if lecture.description %}
                    <p class="text-secondary mb-4">{{ lecture.description }}</p>
                {% endif %}

                <!-- Lecture Stats -->
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center p-3 rounded-3" style="background: rgba(79, 70, 229, 0.1);">
                            <i class="bi bi-clock text-neon fs-3 me-3"></i>
                            <div>
                                <small class="text-muted d-block">{{ 'course.lecture.duration'|trans }}</small>
                                <strong class="text-white">
                                    {% if lecture.lengthSeconds %}
                                        {{ lecture.lengthFormatted }}
                                    {% else %}
                                        {{ 'misc.na'|trans }}
                                    {% endif %}
                                </strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center p-3 rounded-3" style="background: rgba(16, 185, 129, 0.1);">
                            <i class="bi bi-bar-chart text-success fs-3 me-3"></i>
                            <div>
                                <small class="text-muted d-block">{{ 'student.your.progress'|trans }}</small>
                                <strong class="text-white lecture-progress-text">
                                    {{ studentProgress ? studentProgress.completionPercentage|round : 0 }}%
                                </strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center p-3 rounded-3" style="background: rgba(234, 179, 8, 0.1);">
                            <i class="bi bi-{{ studentProgress and studentProgress.completed ? 'check-circle-fill text-success' : 'hourglass-split text-warning' }} fs-3 me-3"></i>
                            <div>
                                <small class="text-muted d-block">{{ 'student.status'|trans }}</small>
                                <strong class="text-white">
                                    <span class="lecture-completion-badge badge {% if studentProgress and studentProgress.completed %}bg-success{% elseif studentProgress and studentProgress.lastWatchedAt %}bg-primary{% else %}bg-secondary{% endif %}">
                                        {% if studentProgress and studentProgress.completed %}
                                            {{ 'student.completed'|trans }}
                                        {% elseif studentProgress and studentProgress.lastWatchedAt %}
                                            {{ 'student.in.progress'|trans }}
                                        {% else %}
                                            {{ 'student.not.started'|trans }}
                                        {% endif %}
                                    </span>
                                </strong>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Progress Bar (if watching) -->
                <div class="mt-4" style="{% if not studentProgress or studentProgress.completionPercentage == 0 %}display: none;{% endif %}">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-white">{{ 'student.watch.progress'|trans }}</span>
                        <span class="text-neon fw-bold lecture-progress-text">{{ studentProgress ? studentProgress.completionPercentage|round : 0 }}%</span>
                    </div>
                    <div class="progress" style="height: 10px; background: rgba(255, 255, 255, 0.1);">
                        <div class="progress-bar lecture-progress-bar bg-success"
                             role="progressbar"
                             style="width: {{ studentProgress ? studentProgress.completionPercentage|round : 0 }}%"
                             aria-valuenow="{{ studentProgress ? studentProgress.completionPercentage|round : 0 }}"
                             aria-valuemin="0"
                             aria-valuemax="100">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Course Navigation Sidebar -->
        <div class="col-lg-3">
            <div class="infinity-card p-3 sticky-top" style="top: 1rem;">
                <h6 class="text-neon mb-3">
                    <i class="bi bi-layers me-2"></i>{{ 'course.content'|trans }}
                </h6>

                <div class="accordion" id="sidebarModules">
                    {% for module in modules %}
                        {% set moduleHasCurrentLecture = false %}
                        {% for moduleLecture in module.lectures %}
                            {% if moduleLecture.id.toString == lecture.id.toString %}
                                {% set moduleHasCurrentLecture = true %}
                            {% endif %}
                        {% endfor %}

                        <div class="accordion-item mb-2" style="background: rgba(0, 0, 0, 0.3); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 8px;">
                            <h2 class="accordion-header">
                                <button class="accordion-button {{ moduleHasCurrentLecture ? '' : 'collapsed' }} p-2"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#sidebar-module-{{ module.id }}"
                                        aria-expanded="{{ moduleHasCurrentLecture ? 'true' : 'false' }}"
                                        style="background: transparent; color: white; border: none; font-size: 0.875rem;">
                                    <div class="d-flex align-items-center w-100">
                                        <div class="rounded me-2" style="background: linear-gradient(135deg, #f59e0b, #d97706); width: 24px; height: 24px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                            <span class="text-white fw-bold" style="font-size: 0.7rem;">{{ module.viewOrder }}</span>
                                        </div>
                                        <span class="text-white" style="font-size: 0.85rem;">{{ module.name|slice(0, 20) }}{% if module.name|length > 20 %}{{ 'misc.loading.ellipsis'|trans }}{% endif %}</span>
                                    </div>
                                </button>
                            </h2>
                            <div id="sidebar-module-{{ module.id }}" class="accordion-collapse collapse {{ moduleHasCurrentLecture ? 'show' : '' }}">
                                <div class="accordion-body p-1">
                                    {% for courseLecture in module.lectures %}
                                        {% set isCurrentLecture = courseLecture.id.toString == lecture.id.toString %}
                                        {% set lectureProgress = allLectureProgress[courseLecture.id.toString] ?? null %}
                                        {% set isLectureCompleted = lectureProgress and lectureProgress.completed %}

                                        <a href="{{ path('student_lecture', {courseId: course.id, lectureId: courseLecture.id}) }}"
                                           class="d-block p-2 mb-1 rounded"
                                           style="background: {% if isCurrentLecture %}linear-gradient(135deg, #3b82f6, #2563eb){% else %}transparent{% endif %};
                                                  text-decoration: none;
                                                  border: 1px solid {% if isCurrentLecture %}rgba(59, 130, 246, 0.3){% else %}rgba(255, 255, 255, 0.05){% endif %};
                                                  transition: all 0.2s;"
                                           onmouseover="this.style.background='rgba(59, 130, 246, 0.1)'" onmouseout="this.style.background='{{ isCurrentLecture ? 'linear-gradient(135deg, #3b82f6, #2563eb)' : 'transparent' }}'">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="flex-grow-1">
                                                    <div class="d-flex align-items-center">
                                                        <small class="text-muted me-2" style="font-size: 0.7rem;">{{ courseLecture.viewOrder }}.</small>
                                                        <span class="{% if isCurrentLecture %}text-white fw-bold{% else %}text-white{% endif %}" style="font-size: 0.8rem;">
                                                            {{ courseLecture.name|slice(0, 25) }}{% if courseLecture.name|length > 25 %}{{ 'misc.loading.ellipsis'|trans }}{% endif %}
                                                        </span>
                                                    </div>
                                                    {% if courseLecture.lengthSeconds %}
                                                        <small class="text-muted" style="font-size: 0.7rem;">
                                                            <i class="bi bi-clock me-1"></i>{{ courseLecture.lengthFormatted }}
                                                        </small>
                                                    {% endif %}
                                                </div>
                                                <div class="ms-2">
                                                    {% if isLectureCompleted %}
                                                        <i class="bi bi-check-circle-fill text-success" style="font-size: 0.9rem;"></i>
                                                    {% elseif isCurrentLecture %}
                                                        <i class="bi bi-play-circle-fill text-white" style="font-size: 0.9rem;"></i>
                                                    {% else %}
                                                        <i class="bi bi-play-circle text-muted" style="font-size: 0.9rem;"></i>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </a>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Course Progress Summary -->
                <div class="mt-4 p-3 rounded-3" style="background: rgba(79, 70, 229, 0.1);">
                    <small class="text-muted d-block mb-2">{{ 'course.overall_progress'|trans }}</small>
                    <div class="d-flex justify-content-between align-items-center">
                        <strong class="text-neon course-progress-text">{{ enrollment.progressPercentage|round }}%</strong>
                        <small class="text-muted course-lecture-count">
                            {{ allLectureProgress|filter(p => p.completed)|length }} / {{ allLectures|length }}
                        </small>
                    </div>
                    <div class="progress mt-2" style="height: 6px; background: rgba(255, 255, 255, 0.1);">
                        <div class="progress-bar course-progress-bar"
                             role="progressbar"
                             style="background: var(--infinity-ai-gradient); width: {{ enrollment.progressPercentage|round }}%;"
                             aria-valuenow="{{ enrollment.progressPercentage|round }}"
                             aria-valuemin="0"
                             aria-valuemax="100">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Initialize Bootstrap tooltips
document.addEventListener('DOMContentLoaded', function() {
    console.log('[Init] DOM Content Loaded');

    // Initialize Bootstrap tooltips if bootstrap is available
    if (typeof bootstrap !== 'undefined') {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
        console.log('[Init] Tooltips initialized');
    } else {
        console.warn('[Init] Bootstrap not loaded, skipping tooltip initialization');
    }
});
</script>
{% endblock %}
