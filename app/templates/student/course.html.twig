{% extends 'base.html.twig' %}

{% block title %}{{ course.name }} - {{ 'student.singular'|trans }} - {{ 'page.infinity.suffix'|trans }}{% endblock %}

{% block body %}
<!-- Navigation Breadcrumb -->
<div class="mb-4">
    <a href="{{ path('student_courses') }}" class="btn infinity-btn-ai">
        <i class="bi bi-arrow-left me-2"></i>{{ 'student.back.to.courses'|trans }}
    </a>
</div>

<!-- Course Header -->
<div class="ai-dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div class="d-flex align-items-center">
            <div class="p-3 rounded-3 me-4" style="background: var(--infinity-ai-gradient);">
                <i class="bi bi-book text-white fs-2"></i>
            </div>
            <div>
                <h1 class="text-gradient mb-2">{{ course.name }}</h1>
                {% if course.description %}
                    <p class="text-secondary mb-0 fs-5">{{ course.description }}</p>
                {% endif %}
            </div>
        </div>
        <div class="d-flex gap-2 flex-wrap align-items-center">
            <div class="real-time-badge">
                <i class="bi bi-collection me-1"></i>{{ lectures|length }} {{ 'course.lectures'|trans({'%count%': lectures|length}) }}
            </div>
            {% if course.totalLengthSeconds > 0 %}
                <div class="real-time-badge">
                    <i class="bi bi-clock me-1"></i>{{ course.totalLengthFormatted }}
                </div>
            {% endif %}
            <div class="ai-status-indicator">
                <i class="bi bi-star-fill"></i> {{ enrollment.progressPercentage|round }}% {{ 'student.complete'|trans }}
            </div>
        </div>
    </div>
</div>

<!-- Progress Overview -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="infinity-card p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="text-neon mb-0">
                    <i class="bi bi-bar-chart me-2"></i>{{ 'student.your.progress'|trans }}
                </h5>
                <div class="d-flex gap-2 align-items-center">
                    {% if enrollment.completedAt %}
                        <span class="badge bg-success fs-6">
                            <i class="bi bi-check-circle me-1"></i>{{ 'student.course.completed'|trans }}!
                        </span>
                        <a href="{{ path('certificate_course', {id: course.id}) }}"
                           class="btn btn-success btn-sm"
                           target="_blank">
                            <i class="bi bi-award me-1"></i>{{ 'certificate.view.certificate'|trans }}
                        </a>
                    {% endif %}
                </div>
            </div>

            <!-- Progress Bar -->
            <div class="mb-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-white">{{ 'student.overall_completion'|trans }}</span>
                    <span class="text-neon fw-bold fs-5">{{ enrollment.progressPercentage|round }}%</span>
                </div>
                <div class="progress" style="height: 20px; background: rgba(255, 255, 255, 0.1);">
                    <div class="progress-bar"
                         role="progressbar"
                         style="background: var(--infinity-ai-gradient); font-weight: bold; width: {{ enrollment.progressPercentage|round }}%;"
                         aria-valuenow="{{ enrollment.progressPercentage|round }}"
                         aria-valuemin="0"
                         aria-valuemax="100">
                        {{ enrollment.progressPercentage|round }}%
                    </div>
                </div>
            </div>

            <!-- Progress Stats -->
            <div class="row text-center mt-4">
                <div class="col-4">
                    <div class="text-muted small">{{ 'student.enrolled'|trans }}</div>
                    <div class="text-white fw-bold">{{ enrollment.enrolledAt|format_date('medium') }}</div>
                </div>
                <div class="col-4">
                    <div class="text-muted small">{{ 'student.last.accessed'|trans }}</div>
                    <div class="text-white fw-bold">
                        {% if enrollment.lastDate %}
                            {{ enrollment.lastDate|format_date('medium') }}
                        {% else %}
                            {{ 'student.not_yet'|trans }}
                        {% endif %}
                    </div>
                </div>
                <div class="col-4">
                    <div class="text-muted small">{{ 'student.completed_lectures'|trans }}</div>
                    <div class="text-white fw-bold">
                        {{ lectureProgress|filter(p => p.completed)|length }} / {{ lectures|length }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Course Content - Modules & Lectures -->
<div class="row">
    <div class="col-12">
        <div class="infinity-card p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="text-neon mb-0">
                    <i class="bi bi-layers me-2"></i>{{ 'course.content'|trans }}
                </h5>
            </div>

            {% if modules is empty %}
                <div class="text-center py-5">
                    <i class="bi bi-layers" style="font-size: 3rem; color: var(--infinity-text-muted);"></i>
                    <h5 class="text-white mt-3 mb-2">{{ 'course.no_content'|trans }}</h5>
                    <p class="text-secondary mb-0">{{ 'course.no_content_description'|trans }}</p>
                </div>
            {% else %}
                <div class="accordion" id="modulesAccordion">
                    {% for module in modules %}
                        <div class="accordion-item mb-3" style="background: var(--infinity-card-bg); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 12px; overflow: hidden;">
                            <h2 class="accordion-header">
                                <button class="accordion-button {{ loop.first ? '' : 'collapsed' }}"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#module-{{ module.id }}"
                                        aria-expanded="{{ loop.first ? 'true' : 'false' }}"
                                        style="background: rgba(0, 0, 0, 0.3); color: white; border: none; padding: 1rem 1.25rem;">
                                    <div class="d-flex align-items-center w-100">
                                        <div class="p-2 rounded-3 me-3" style="background: linear-gradient(135deg, #f59e0b, #d97706); min-width: 40px; display: flex; align-items-center; justify-content: center;">
                                            <span class="text-white fw-bold">{{ module.viewOrder }}</span>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0 text-white">{{ module.name }}</h6>
                                            <small class="text-secondary">
                                                {{ module.lectures|length }} {{ 'course.lectures'|trans }}
                                                {% if module.totalLengthSeconds > 0 %}
                                                    â€¢ <i class="bi bi-clock me-1"></i>{{ module.totalLengthFormatted }}
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>
                                </button>
                            </h2>
                            <div id="module-{{ module.id }}" class="accordion-collapse collapse {{ loop.first ? 'show' : '' }}">
                                <div class="accordion-body p-0" style="background: rgba(0, 0, 0, 0.2);">
                                    {% if module.description %}
                                        <p class="text-secondary px-3 pt-3 mb-2">{{ module.description }}</p>
                                    {% endif %}

                                    {% if module.lectures is empty %}
                                        <div class="text-center py-4">
                                            <i class="bi bi-collection text-muted" style="font-size: 2rem;"></i>
                                            <p class="text-secondary mt-2 mb-0">{{ 'empty.no.lectures.in.module'|trans }}</p>
                                        </div>
                                    {% else %}
                                        <div class="list-group list-group-flush">
                                            {% for lecture in module.lectures %}
                                                {% set progress = lectureProgress[lecture.id.toString] ?? null %}
                                                {% set isCompleted = progress and progress.completed %}
                                                {% set progressPercent = progress ? progress.completionPercentage|round : 0 %}
                                                {% set isProcessing = lecture.processingStatus == 'processing' %}
                                                {% set isFailed = lecture.processingStatus == 'failed' %}

                                                <a href="{{ path('student_lecture', {courseId: course.id, lectureId: lecture.id}) }}"
                                                   class="list-group-item list-group-item-action"
                                                   style="background: transparent; border: none; border-bottom: 1px solid rgba(255, 255, 255, 0.05);">
                                                    <div class="d-flex align-items-start py-2">
                                                        <!-- Lecture Number Badge -->
                                                        <div class="me-3 d-flex align-items-center justify-content-center"
                                                             style="min-width: 35px; height: 35px; border-radius: 8px; {% if isCompleted %}background: linear-gradient(135deg, #10b981, #059669);{% else %}background: linear-gradient(135deg, #3b82f6, #2563eb);{% endif %}">
                                                            {% if isCompleted %}
                                                                <i class="bi bi-check-circle-fill text-white"></i>
                                                            {% else %}
                                                                <span class="text-white fw-bold small">{{ lecture.viewOrder }}</span>
                                                            {% endif %}
                                                        </div>

                                                        <!-- Lecture Info -->
                                                        <div class="flex-grow-1">
                                                            <div class="d-flex justify-content-between align-items-start mb-1">
                                                                <h6 class="text-white mb-0">{{ lecture.name }}</h6>
                                                                {% if lecture.lengthSeconds %}
                                                                    <span class="badge bg-secondary">
                                                                        <i class="bi bi-clock me-1"></i>{{ lecture.lengthFormatted }}
                                                                    </span>
                                                                {% endif %}
                                                            </div>

                                                            {% if lecture.description %}
                                                                <p class="text-secondary small mb-2">{{ lecture.description|slice(0, 80) }}{% if lecture.description|length > 80 %}...{% endif %}</p>
                                                            {% endif %}

                                                            <!-- Progress & Status -->
                                                            <div class="d-flex gap-2 align-items-center flex-wrap">
                                                                {% if isCompleted %}
                                                                    <span class="badge bg-success">
                                                                        <i class="bi bi-check-circle me-1"></i>{{ 'student.completed'|trans }}
                                                                    </span>
                                                                {% elseif progressPercent > 0 %}
                                                                    <span class="badge bg-primary">
                                                                        {{ progressPercent }}% {{ 'student.watched'|trans }}
                                                                    </span>
                                                                    <div style="width: 100px;">
                                                                        <div class="progress" style="height: 4px; background: rgba(255, 255, 255, 0.1);">
                                                                            <div class="progress-bar bg-primary"
                                                                                 role="progressbar"
                                                                                 style="width: {{ progressPercent }}%">
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                {% elseif isProcessing %}
                                                                    <span class="badge bg-warning text-dark">
                                                                        <i class="bi bi-hourglass-split me-1"></i>{{ 'course.lecture.processing'|trans }}
                                                                    </span>
                                                                {% elseif isFailed %}
                                                                    <span class="badge bg-danger">
                                                                        <i class="bi bi-exclamation-triangle me-1"></i>{{ 'course.lecture.failed'|trans }}
                                                                    </span>
                                                                {% else %}
                                                                    <span class="badge bg-secondary">
                                                                        <i class="bi bi-play-circle me-1"></i>{{ 'student.not.started'|trans }}
                                                                    </span>
                                                                {% endif %}
                                                            </div>
                                                        </div>

                                                        <!-- Play Button -->
                                                        <div class="ms-3 d-flex align-items-center">
                                                            <i class="bi bi-play-circle-fill text-neon" style="font-size: 1.5rem;"></i>
                                                        </div>
                                                    </div>
                                                </a>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
