{#
/**
 * Filter Warning Button Template
 *
 * Renders a warning filter button
 *
 * @param array config - Button configuration from ButtonConfig
 * @param string filter_value - Filter value
 * @param string|null translation_key - Translation key
 * @param string translation_domain - Translation domain (default: 'messages')
 * @param bool is_active - Is this filter active
 * @param string size - Size class
 */
#}
{% set buttonText = translation_key ?? config.default_translation_key %}
{% set sizeClass = size ? 'btn-' ~ size : '' %}
{% set activeClass = is_active ? 'active' : '' %}

<button type="button"
        class="{{ config.class }} {{ sizeClass }} {{ activeClass }}"
        data-filter="{{ filter_value }}">
    {{ buttonText|trans({}, translation_domain) }}
</button>
