<turbo-stream action="replace" target="talkmessage-{{ talkmessage.id }}">
    <template>
        <tr id="talkmessage-{{ talkmessage.id }}">

            <td>{{ talkmessage.organization }}</td>

            <td>{{ talkmessage.talk }}</td>

            <td>{{ talkmessage.fromContact }}</td>

            <td>{{ talkmessage.fromUser }}</td>

            <td>{{ talkmessage.fromAgent }}</td>

            <td>{{ talkmessage.date }}</td>

            <td>{{ talkmessage.text }}</td>

            <td>{{ talkmessage.messageType }}</td>

            <td>{{ talkmessage.read }}</td>

            <td>{{ talkmessage.readAt }}</td>

            <td>{{ talkmessage.sentiment }}</td>

            <td>{{ talkmessage.parentMessage }}</td>

            <td>{{ talkmessage.edited }}</td>

            <td>{{ talkmessage.notification }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('talk_message_show', {id: talkmessage.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('talk_message_edit', {id: talkmessage.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('talk_message_delete', {id: talkmessage.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ talkmessage.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'TalkMessage'|trans }} updated successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
