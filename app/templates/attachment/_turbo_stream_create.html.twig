<turbo-stream action="prepend" target="attachment-list">
    <template>
        <tr id="attachment-{{ attachment.id }}">

            <td>{{ attachment.filename }}</td>

            <td>{{ attachment.fileType }}</td>

            <td>{{ attachment.fileSize }}</td>

            <td>{{ attachment.url }}</td>

            <td>{{ attachment.talkMessage }}</td>

            <td>{{ attachment.product }}</td>

            <td>{{ attachment.event }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('attachment_show', {id: attachment.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('attachment_edit', {id: attachment.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('attachment_delete', {id: attachment.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ attachment.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'Attachment'|trans }} created successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
