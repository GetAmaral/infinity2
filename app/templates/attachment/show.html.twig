{% extends 'base.html.twig' %}

{% block title %}{{ 'Attachment'|trans }} - {{ attachment }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2>
                            <i class="bi-circle me-2"></i>
                            {{ 'Attachment'|trans }} Details
                        </h2>
                        <div class="btn-group">
                            <a href="{{ path('attachment_edit', {id: attachment.id}) }}"
                               class="btn btn-warning">
                                <i class="bi bi-pencil me-1"></i>
                                {{ 'action.edit'|trans }}
                            </a>
                            <a href="{{ path('attachment_index') }}"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                {{ 'action.back'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-3">{{ 'Filename'|trans }}</dt>
                        <dd class="col-sm-9">{{ attachment.filename }}</dd>

                        <dt class="col-sm-3">{{ 'FileType'|trans }}</dt>
                        <dd class="col-sm-9">{{ attachment.fileType }}</dd>

                        <dt class="col-sm-3">{{ 'FileSize'|trans }}</dt>
                        <dd class="col-sm-9">{{ attachment.fileSize }}</dd>

                        <dt class="col-sm-3">{{ 'Url'|trans }}</dt>
                        <dd class="col-sm-9">{{ attachment.url }}</dd>

                        <dt class="col-sm-3">{{ 'TalkMessage'|trans }}</dt>
                        <dd class="col-sm-9">{{ attachment.talkMessage }}</dd>

                        <dt class="col-sm-3">{{ 'Product'|trans }}</dt>
                        <dd class="col-sm-9">{{ attachment.product }}</dd>

                        <dt class="col-sm-3">{{ 'Event'|trans }}</dt>
                        <dd class="col-sm-9">{{ attachment.event }}</dd>

                        <dt class="col-sm-3">{{ 'field.created_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ attachment.createdAt|date('Y-m-d H:i:s') }}</dd>

                        <dt class="col-sm-3">{{ 'field.updated_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ attachment.updatedAt|date('Y-m-d H:i:s') }}</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form method="post"
                          action="{{ path('attachment_delete', {id: attachment.id}) }}"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ attachment.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>
                            {{ 'action.delete'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
