{% extends '_base_entity_list.html.twig' %}

{# Macro for user action buttons - reusable for grid, list and table views #}
{% macro userActions(user, dropdownOnly) %}
    {% set dropdownOnly = dropdownOnly|default(false) %}

    {% if not dropdownOnly %}
        <div class="d-none d-lg-flex gap-1 align-items-center">
            <a href="{{ path('user_show', {id: user.id}) }}"
               class="btn btn-sm btn-outline-light"
               data-bs-toggle="tooltip"
               data-bs-placement="top"
               data-bs-title="{{ 'user.view_details'|trans }}">
                <i class="bi bi-eye"></i>
            </a>
            {% if is_granted('USER_EDIT', user) %}
                <button type="button"
                        class="btn btn-sm btn-outline-light"
                        data-controller="modal-opener"
                        data-modal-opener-url-value="{{ path('user_edit', {id: user.id}) }}"
                        data-action="click->modal-opener#open"
                        data-bs-toggle="tooltip"
                        data-bs-placement="top"
                        data-bs-title="{{ 'button.edit'|trans }}">
                    <i class="bi bi-pencil"></i>
                </button>
            {% endif %}
            {% if is_granted('USER_DELETE', user) %}
                <button type="button"
                        class="btn btn-sm btn-outline-danger"
                        data-delete-url="{{ path('user_delete', {id: user.id}) }}"
                        data-entity-name="{{ user.name }}"
                        data-csrf-token="{{ csrf_token('delete-user-' ~ user.id) }}"
                        data-bs-toggle="tooltip"
                        data-bs-placement="top"
                        data-bs-title="{{ 'button.delete'|trans }}">
                    <i class="bi bi-trash"></i>
                </button>
            {% endif %}
        </div>
    {% endif %}

    <div class="dropdown {{ dropdownOnly ? '' : 'd-lg-none' }}">
        <button class="btn btn-sm btn-outline-light" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-three-dots-vertical"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark" style="background: var(--infinity-dark-surface); z-index: 1050;">
            <li>
                <a class="dropdown-item" href="{{ path('user_show', {id: user.id}) }}">
                    <i class="bi bi-eye me-2"></i>{{ 'user.view_details'|trans }}
                </a>
            </li>
            {% if is_granted('USER_EDIT', user) %}
            <li>
                <button type="button"
                        class="dropdown-item"
                        data-controller="modal-opener"
                        data-modal-opener-url-value="{{ path('user_edit', {id: user.id}) }}"
                        data-action="click->modal-opener#open">
                    <i class="bi bi-pencil me-2"></i>{{ 'button.edit'|trans }}
                </button>
            </li>
            {% endif %}
            <li>
                <a class="dropdown-item" href="#">
                    <i class="bi bi-chat-dots me-2"></i>{{ 'button.start_ai_chat'|trans }}
                </a>
            </li>
            {% if is_granted('USER_DELETE', user) %}
            <li><hr class="dropdown-divider"></li>
            <li>
                <button type="button"
                        class="dropdown-item text-danger"
                        data-delete-url="{{ path('user_delete', {id: user.id}) }}"
                        data-entity-name="{{ user.name }}"
                        data-csrf-token="{{ csrf_token('delete-user-' ~ user.id) }}">
                    <i class="bi bi-trash me-2"></i>{{ 'button.delete'|trans }}
                </button>
            </li>
            {% endif %}
        </ul>
    </div>
{% endmacro %}

{% import _self as macros %}

{# Customize page appearance #}
{% block page_icon %}<i class="bi bi-people text-neon fs-2 me-3"></i>{% endblock %}

{# Customize header actions #}
{% block header_actions %}
    {% if is_granted('USER_CREATE') %}
        <button type="button"
                class="btn infinity-btn-primary"
                data-controller="modal-opener"
                data-modal-opener-url-value="{{ path('user_new') }}"
                data-action="click->modal-opener#open">
            <i class="bi bi-person-plus me-2"></i>{{ 'button.add_contact'|trans }}
        </button>
    {% endif %}
{% endblock %}

{# Customize filter options #}
{% block filter_options %}
    <li><a class="dropdown-item" href="?filter=active">{{ 'filter.active_users'|trans }}</a></li>
    <li><a class="dropdown-item" href="?filter=organization">{{ 'filter.by_organization'|trans }}</a></li>
    <li><hr class="dropdown-divider"></li>
    <li><a class="dropdown-item" href="{{ path('user_index') }}">{{ 'filter.all'|trans }}</a></li>
{% endblock %}

{# Customize grid item display #}
{% block grid_item %}
    {% set user = entity %}
    <div class="bento-item" id="user-{{ user.id }}">
        <div class="infinity-card ai-enhanced p-4 h-100">
            <div class="d-flex align-items-start mb-3">
                <div class="user-actions me-3">
                    {{ macros.userActions(user, true) }}
                </div>

                <div class="flex-grow-1">
                    <div class="d-flex align-items-center mb-2">
                        <div class="position-relative me-3">
                            <div class="p-2 rounded-3" style="background: linear-gradient(135deg, #22c55e, #16a34a);">
                                <i class="bi bi-person-circle text-white fs-4"></i>
                            </div>
                            <div class="position-absolute top-0 end-0 translate-middle">
                                <span class="badge rounded-pill" style="background: var(--infinity-ai-gradient); font-size: 0.6rem;">{{ 'ui.ai'|trans }}</span>
                            </div>
                        </div>
                        <div>
                            <h5 class="text-white mb-1">{{ user.name }}</h5>
                            <p class="text-secondary mb-1 user-email" style="font-size: 0.875rem;">{{ user.email }}</p>
                            {% if user.organization %}
                                <div class="d-flex align-items-center">
                                    <span class="real-time-badge">
                                        <i class="bi bi-building me-1"></i>{{ user.organization.name }}
                                    </span>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="mb-3 p-3 rounded user-insights" style="background: rgba(0, 245, 255, 0.05); border: 1px solid rgba(0, 245, 255, 0.2);">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-magic text-neon me-2" style="font-size: 0.875rem;"></i>
                            <span class="text-neon" style="font-size: 0.75rem; font-weight: 600;">{{ 'ai.insights'|trans|upper }}</span>
                        </div>
                        <p class="text-secondary mb-0" style="font-size: 0.8rem;">
                            {% set insights = ['High engagement potential', 'Recent activity increase', 'Potential upsell opportunity', 'Strong relationship score', 'Active communicator'] %}
                            {{ insights[random(4)] }}
                            <span class="text-muted">â€¢ Last interaction: {{ random(1, 7) }}d ago</span>
                        </p>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-auto user-footer">
                        <small class="text-muted d-flex align-items-center">
                            <i class="bi bi-calendar me-1"></i>{{ user.createdAt|date('M d, Y') }}
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{# Customize table headers #}
{% block table_headers %}
    <th>{{ 'table.actions'|trans }}</th>
    <th data-sort-field="name">{{ 'user.name'|trans }}</th>
    <th data-sort-field="email">{{ 'user.email'|trans }}</th>
    <th data-sort-field="organization">{{ 'user.organization'|trans }}</th>
    <th data-sort-field="createdAt">{{ 'user.created_at'|trans }}</th>
{% endblock %}

{# Customize table row display #}
{% block table_row %}
    {% set user = entity %}
    <td>
        {{ macros.userActions(user) }}
    </td>
    <td>
        <div class="d-flex align-items-center">
            <div class="p-2 rounded-3 me-3" style="background: linear-gradient(135deg, #22c55e, #16a34a);">
                <i class="bi bi-person-circle text-white"></i>
            </div>
            <strong>{{ user.name }}</strong>
        </div>
    </td>
    <td>{{ user.email }}</td>
    <td>
        {% if user.organization %}
            <span class="badge" style="background: var(--infinity-ai-gradient); color: white;">
                <i class="bi bi-building me-1"></i>{{ user.organization.name }}
            </span>
        {% else %}
            <span class="text-muted fst-italic">{{ 'empty.no_organization'|trans }}</span>
        {% endif %}
    </td>
    <td>{{ user.createdAt|date('M d, Y') }}</td>
{% endblock %}

{# Add user-specific styles #}
{% block additional_styles %}
.list-view .user-email,
.list-view .user-insights,
.list-view .user-footer {
    display: none;
}

.user-actions {
    flex-shrink: 0;
    position: relative;
    z-index: 100;
}

@media (max-width: 991px) {
    .bento-item:has(.dropdown-menu.show) {
        z-index: 1055;
    }
}

/* User badge in table - Theme responsive */
#usersDataTable .badge {
    background: var(--infinity-ai-gradient) !important;
    color: white !important;
}

[data-theme="light"] #usersDataTable .badge {
    background: linear-gradient(135deg, #3b82f6, #8b5cf6) !important;
}

/* User icon gradient - Theme responsive */
#usersDataTable .p-2.rounded-3 {
    background: linear-gradient(135deg, #22c55e, #16a34a) !important;
}

[data-theme="light"] #usersDataTable .p-2.rounded-3 {
    background: linear-gradient(135deg, #10b981, #059669) !important;
}
{% endblock %}