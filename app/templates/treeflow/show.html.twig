{% extends 'base.html.twig' %}

{% block title %}{{ treeflow.name }} - {{ 'treeflow.singular'|trans }} - {{ 'page.infinity.suffix'|trans }}{% endblock %}

{% block body %}
<!-- Navigation -->
<div class="mb-4">
    <a href="{{ path('treeflow_index') }}" class="btn infinity-btn-ai">
        <i class="bi bi-arrow-left me-2"></i>{{ 'treeflow.back.to.list'|trans }}
    </a>
</div>

<!-- TreeFlow Header -->
<div class="ai-dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-start">
        <div class="d-flex align-items-center">
            <div class="p-3 rounded-3 me-4" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
                <i class="bi bi-diagram-3 text-white fs-2"></i>
            </div>
            <div>
                <h1 class="text-gradient mb-2">{{ treeflow.name }}</h1>
                <div class="d-flex gap-2 align-items-center">
                    <span class="badge bg-info">{{ 'treeflow.version'|trans }} {{ treeflow.version }}</span>
                    {% if treeflow.active %}
                        <span class="badge bg-success">{{ 'treeflow.active'|trans }}</span>
                    {% else %}
                        <span class="badge bg-secondary">{{ 'treeflow.inactive'|trans }}</span>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="d-flex gap-2">
            <div class="real-time-badge">
                {{ treeflow.steps|length }} {{ 'treeflow.steps'|trans }}
            </div>
            {% if is_granted('TREEFLOW_EDIT', treeflow) %}
                <button type="button"
                        class="btn infinity-btn-primary btn-sm"
                        data-controller="modal-opener"
                        data-modal-opener-url-value="{{ path('treeflow_edit', {id: treeflow.id}) }}"
                        data-action="click->modal-opener#open">
                    <i class="bi bi-pencil me-1"></i>{{ 'button.edit'|trans }}
                </button>
            {% endif %}
            {% if is_granted('TREEFLOW_DELETE', treeflow) %}
                <form method="post" action="{{ path('treeflow_delete', {id: treeflow.id}) }}" class="d-inline" onsubmit="return confirm('{{ 'confirm.delete.entity'|trans }}');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete-treeflow-' ~ treeflow.id) }}">
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash me-1"></i>{{ 'button.delete'|trans }}
                    </button>
                </form>
            {% endif %}
        </div>
    </div>
</div>

<!-- TreeFlow Stats -->
<div class="bento-grid mb-4">
    <div class="bento-item">
        <div class="metric-card">
            <i class="bi bi-signpost-fill text-neon fs-1"></i>
            <div class="metric-value">{{ treeflow.steps|length }}</div>
            <div class="metric-label">{{ 'treeflow.total.steps'|trans }}</div>
        </div>
    </div>

    <div class="bento-item">
        <div class="metric-card">
            <i class="bi bi-{{ treeflow.active ? 'check-circle-fill' : 'x-circle-fill' }} text-neon fs-1"></i>
            <div class="metric-value">{{ treeflow.active ? 'treeflow.status.active'|trans : 'treeflow.status.inactive'|trans }}</div>
            <div class="metric-label">{{ 'treeflow.status'|trans }}</div>
        </div>
    </div>

    <div class="bento-item">
        <div class="metric-card">
            <i class="bi bi-building text-neon fs-1"></i>
            <div class="metric-value" style="font-size: 1.2rem;">{{ treeflow.organization.name }}</div>
            <div class="metric-label">{{ 'organization.singular'|trans }}</div>
        </div>
    </div>
</div>

<!-- Steps Accordion with All Content -->
<div class="infinity-card p-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-gradient mb-0">{{ 'step.plural'|trans }} ({{ treeflow.steps|length }})</h2>
        {% if is_granted('TREEFLOW_EDIT', treeflow) %}
            <button type="button"
                    class="btn infinity-btn-primary"
                    data-controller="modal-opener"
                    data-modal-opener-url-value="{{ path('step_new', {treeflowId: treeflow.id}) }}"
                    data-action="click->modal-opener#open">
                <i class="bi bi-plus-circle me-2"></i>{{ 'step.add.step'|trans }}
            </button>
        {% endif %}
    </div>

    {% if treeflow.steps|length > 0 %}
        <!-- Steps Accordion -->
        <div class="accordion" id="stepsAccordion">
            {% for step in treeflow.steps %}
                <div class="accordion-item infinity-card mb-3" data-step-id="{{ step.id }}">
                    <h2 class="accordion-header">
                        <button class="accordion-button {{ loop.first ? '' : 'collapsed' }}"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#step-{{ step.id }}"
                                aria-expanded="{{ loop.first ? 'true' : 'false' }}"
                                style="background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(124, 58, 237, 0.2)); color: white; border-radius: 12px;">
                            <span class="drag-handle me-3" style="cursor: move;">
                                <i class="bi bi-grip-vertical"></i>
                            </span>
                            <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                                 style="width: 35px; height: 35px; min-width: 35px; background: linear-gradient(135deg, #10b981, #059669);">
                                <i class="bi bi-signpost text-white"></i>
                            </div>
                            <div class="flex-grow-1">
                                <strong class="me-2">{{ step.name }}</strong>
                                {% if step.first %}
                                    <span class="badge bg-success">{{ 'step.first'|trans }}</span>
                                {% endif %}
                                <div class="d-flex gap-2 mt-1">
                                    <span class="badge bg-primary">{{ step.questions|length }} {{ 'question.plural'|trans }}</span>
                                    <span class="badge bg-success">{{ step.outputs|length }} {{ 'output.plural'|trans }}</span>
                                    <span class="badge bg-warning text-dark">{{ step.inputs|length }} {{ 'input.plural'|trans }}</span>
                                </div>
                            </div>
                            {% if is_granted('TREEFLOW_EDIT', treeflow) %}
                                <div class="dropdown" onclick="event.stopPropagation();">
                                    <button class="btn btn-sm btn-outline-light" data-bs-toggle="dropdown" aria-label="{{ 'button.actions'|trans }}" type="button">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end" style="background: var(--infinity-dark-surface); z-index: 1060;">
                                        <li>
                                            <button type="button"
                                                    class="dropdown-item"
                                                    data-controller="modal-opener"
                                                    data-modal-opener-url-value="{{ path('step_edit', {treeflowId: treeflow.id, stepId: step.id}) }}"
                                                    data-action="click->modal-opener#open">
                                                <i class="bi bi-pencil me-2"></i>{{ 'button.edit'|trans }}
                                            </button>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form method="post" action="{{ path('step_delete', {treeflowId: treeflow.id, stepId: step.id}) }}" class="d-inline" onsubmit="return confirm('{{ 'step.confirm.delete'|trans }}');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete-step-' ~ step.id) }}">
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="bi bi-trash me-2"></i>{{ 'button.delete'|trans }}
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            {% endif %}
                        </button>
                    </h2>
                    <div id="step-{{ step.id }}"
                         class="accordion-collapse collapse {{ loop.first ? 'show' : '' }}"
                         data-bs-parent="#stepsAccordion">
                        <div class="accordion-body" style="background: rgba(30, 41, 59, 0.5); border-radius: 0 0 12px 12px;">

                            {# Step Details #}
                            {% if step.objective %}
                                <div class="mb-4 p-3 rounded" style="background: rgba(139, 92, 246, 0.1); border-left: 3px solid #8b5cf6;">
                                    <small class="text-muted d-block mb-1">{{ 'step.form.objective'|trans }}</small>
                                    <p class="mb-0">{{ step.objective }}</p>
                                </div>
                            {% endif %}

                            {% if step.prompt %}
                                <div class="mb-4 p-3 rounded" style="background: rgba(139, 92, 246, 0.1); border-left: 3px solid #7c3aed;">
                                    <small class="text-muted d-block mb-1">{{ 'step.form.prompt'|trans }}</small>
                                    <p class="mb-0">{{ step.prompt }}</p>
                                </div>
                            {% endif %}

                            {# Questions Section #}
                            <div class="mb-4">
                                <h6 class="text-primary mb-3">
                                    <i class="bi bi-question-circle me-2"></i>{{ 'question.plural'|trans }} ({{ step.questions|length }})
                                </h6>

                                {% if step.questions|length > 0 %}
                                    <div class="list-group list-group-flush">
                                        {% for question in step.questions|sort((a, b) => a.viewOrder <=> b.viewOrder) %}
                                            <div class="list-group-item bg-transparent text-white border-secondary py-3">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <div class="flex-grow-1">
                                                        <div class="d-flex align-items-center gap-2 mb-2">
                                                            <div class="rounded-circle d-flex align-items-center justify-content-center"
                                                                 style="width: 30px; height: 30px; background: linear-gradient(135deg, #3b82f6, #2563eb);">
                                                                <i class="bi bi-question-circle text-white small"></i>
                                                            </div>
                                                            <h6 class="mb-0">{{ question.name }}</h6>
                                                            <span class="badge bg-warning text-dark">{{ 'question.importance'|trans }}: {{ question.importance }}</span>
                                                        </div>
                                                        {% if question.objective %}
                                                            <p class="text-muted mb-1 small ms-5">{{ question.objective }}</p>
                                                        {% endif %}
                                                    </div>
                                                    {% if is_granted('TREEFLOW_EDIT', treeflow) %}
                                                        <div class="dropdown">
                                                            <button class="btn btn-sm btn-outline-light" data-bs-toggle="dropdown" aria-label="{{ 'button.actions'|trans }}">
                                                                <i class="bi bi-three-dots-vertical"></i>
                                                            </button>
                                                            <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end" style="background: var(--infinity-dark-surface); z-index: 1060;">
                                                                <li>
                                                                    <button type="button"
                                                                            class="dropdown-item"
                                                                            data-controller="modal-opener"
                                                                            data-modal-opener-url-value="{{ path('question_edit', {treeflowId: treeflow.id, stepId: step.id, questionId: question.id}) }}"
                                                                            data-action="click->modal-opener#open">
                                                                        <i class="bi bi-pencil me-2"></i>{{ 'button.edit'|trans }}
                                                                    </button>
                                                                </li>
                                                                <li>
                                                                    <button type="button"
                                                                            class="dropdown-item"
                                                                            data-controller="modal-opener"
                                                                            data-modal-opener-url-value="{{ path('fewshot_new', {treeflowId: treeflow.id, stepId: step.id, questionId: question.id}) }}"
                                                                            data-action="click->modal-opener#open">
                                                                        <i class="bi bi-plus-circle me-2"></i>{{ 'fewshot.add.example'|trans }}
                                                                    </button>
                                                                </li>
                                                                <li><hr class="dropdown-divider"></li>
                                                                <li>
                                                                    <form method="post" action="{{ path('question_delete', {treeflowId: treeflow.id, stepId: step.id, questionId: question.id}) }}" class="d-inline" onsubmit="return confirm('{{ 'question.confirm.delete'|trans }}');">
                                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-question-' ~ question.id) }}">
                                                                        <button type="submit" class="dropdown-item text-danger">
                                                                            <i class="bi bi-trash me-2"></i>{{ 'button.delete'|trans }}
                                                                        </button>
                                                                    </form>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    {% endif %}
                                                </div>

                                                {# FewShot Examples #}
                                                {% if question.fewShotExamples|length > 0 %}
                                                    <div class="ms-5 mt-3">
                                                        <div class="small text-muted mb-2">
                                                            <i class="bi bi-lightbulb me-1"></i>{{ 'fewshot.examples'|trans }} ({{ question.fewShotExamples|length }})
                                                        </div>
                                                        <div class="row g-2">
                                                            {% for fewshot in question.fewShotExamples %}
                                                                <div class="col-md-6">
                                                                    <div class="card bg-transparent border-{{ fewshot.type.value == 'positive' ? 'success' : 'danger' }} h-100">
                                                                        <div class="card-body p-2">
                                                                            <div class="d-flex justify-content-between align-items-start mb-1">
                                                                                <div class="d-flex align-items-center gap-2">
                                                                                    <span class="badge bg-{{ fewshot.type.value == 'positive' ? 'success' : 'danger' }}">
                                                                                        {{ ('fewshot.type.' ~ fewshot.type.value)|trans }}
                                                                                    </span>
                                                                                    <small class="text-white">{{ fewshot.name }}</small>
                                                                                </div>
                                                                                {% if is_granted('TREEFLOW_EDIT', treeflow) %}
                                                                                    <div class="dropdown">
                                                                                        <button class="btn btn-sm btn-link text-white p-0" data-bs-toggle="dropdown" aria-label="{{ 'button.actions'|trans }}">
                                                                                            <i class="bi bi-three-dots"></i>
                                                                                        </button>
                                                                                        <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end" style="background: var(--infinity-dark-surface); z-index: 1060;">
                                                                                            <li>
                                                                                                <button type="button"
                                                                                                        class="dropdown-item"
                                                                                                        data-controller="modal-opener"
                                                                                                        data-modal-opener-url-value="{{ path('fewshot_edit', {treeflowId: treeflow.id, stepId: step.id, questionId: question.id, fewshotId: fewshot.id}) }}"
                                                                                                        data-action="click->modal-opener#open">
                                                                                                    <i class="bi bi-pencil me-2"></i>{{ 'button.edit'|trans }}
                                                                                                </button>
                                                                                            </li>
                                                                                            <li><hr class="dropdown-divider"></li>
                                                                                            <li>
                                                                                                <form method="post" action="{{ path('fewshot_delete', {treeflowId: treeflow.id, stepId: step.id, questionId: question.id, fewshotId: fewshot.id}) }}" class="d-inline" onsubmit="return confirm('{{ 'fewshot.confirm.delete'|trans }}');">
                                                                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete-fewshot-' ~ fewshot.id) }}">
                                                                                                    <button type="submit" class="dropdown-item text-danger">
                                                                                                        <i class="bi bi-trash me-2"></i>{{ 'button.delete'|trans }}
                                                                                                    </button>
                                                                                                </form>
                                                                                            </li>
                                                                                        </ul>
                                                                                    </div>
                                                                                {% endif %}
                                                                            </div>
                                                                            {% if fewshot.description %}
                                                                                <small class="text-muted d-block">{{ fewshot.description|u.truncate(60, '...') }}</small>
                                                                            {% endif %}
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            {% endfor %}
                                                        </div>
                                                    </div>
                                                {% else %}
                                                    {% if is_granted('TREEFLOW_EDIT', treeflow) %}
                                                        <div class="ms-5 mt-2">
                                                            <button type="button"
                                                                    class="btn btn-sm btn-outline-warning"
                                                                    data-controller="modal-opener"
                                                                    data-modal-opener-url-value="{{ path('fewshot_new', {treeflowId: treeflow.id, stepId: step.id, questionId: question.id}) }}"
                                                                    data-action="click->modal-opener#open">
                                                                <i class="bi bi-plus-circle me-1"></i>{{ 'fewshot.add.first.example'|trans }}
                                                            </button>
                                                        </div>
                                                    {% endif %}
                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endif %}

                                {% if is_granted('TREEFLOW_EDIT', treeflow) %}
                                    <div class="text-center mt-3">
                                        <button type="button"
                                                class="btn btn-sm infinity-btn-primary"
                                                data-controller="modal-opener"
                                                data-modal-opener-url-value="{{ path('question_new', {treeflowId: treeflow.id, stepId: step.id}) }}"
                                                data-action="click->modal-opener#open">
                                            <i class="bi bi-plus-circle me-2"></i>{{ 'question.add.question'|trans }}
                                        </button>
                                    </div>
                                {% endif %}
                            </div>

                            {# Outputs Section #}
                            <div class="mb-4">
                                <h6 class="text-success mb-3">
                                    <i class="bi bi-arrow-right-circle me-2"></i>{{ 'output.plural'|trans }} ({{ step.outputs|length }})
                                </h6>

                                {% if step.outputs|length > 0 %}
                                    <div class="list-group list-group-flush">
                                        {% for output in step.outputs %}
                                            <div class="list-group-item bg-transparent text-white border-secondary py-3">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="flex-grow-1">
                                                        <div class="d-flex align-items-center gap-2 mb-2">
                                                            <strong>{{ output.name }}</strong>
                                                            {% if output.destinationStep %}
                                                                <span class="badge bg-success">→ {{ output.destinationStep.name }}</span>
                                                            {% endif %}
                                                        </div>
                                                        {% if output.description %}
                                                            <p class="text-muted mb-1 small">{{ output.description }}</p>
                                                        {% endif %}
                                                        {% if output.conditional %}
                                                            <div class="mt-2">
                                                                <small class="text-info">
                                                                    <i class="bi bi-code-slash me-1"></i>
                                                                    <code class="text-info">{{ output.conditional }}</code>
                                                                </small>
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                    {% if is_granted('TREEFLOW_EDIT', treeflow) %}
                                                        <div class="dropdown">
                                                            <button class="btn btn-sm btn-outline-light" data-bs-toggle="dropdown" aria-label="{{ 'button.actions'|trans }}">
                                                                <i class="bi bi-three-dots-vertical"></i>
                                                            </button>
                                                            <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end" style="background: var(--infinity-dark-surface); z-index: 1060;">
                                                                <li>
                                                                    <button type="button"
                                                                            class="dropdown-item"
                                                                            data-controller="modal-opener"
                                                                            data-modal-opener-url-value="{{ path('output_edit', {treeflowId: treeflow.id, stepId: step.id, outputId: output.id}) }}"
                                                                            data-action="click->modal-opener#open">
                                                                        <i class="bi bi-pencil me-2"></i>{{ 'button.edit'|trans }}
                                                                    </button>
                                                                </li>
                                                                <li><hr class="dropdown-divider"></li>
                                                                <li>
                                                                    <form method="post" action="{{ path('output_delete', {treeflowId: treeflow.id, stepId: step.id, outputId: output.id}) }}" class="d-inline" onsubmit="return confirm('{{ 'output.confirm.delete'|trans }}');">
                                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-output-' ~ output.id) }}">
                                                                        <button type="submit" class="dropdown-item text-danger">
                                                                            <i class="bi bi-trash me-2"></i>{{ 'button.delete'|trans }}
                                                                        </button>
                                                                    </form>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endif %}

                                {% if is_granted('TREEFLOW_EDIT', treeflow) %}
                                    <div class="text-center mt-3">
                                        <button type="button"
                                                class="btn btn-sm btn-outline-success"
                                                data-controller="modal-opener"
                                                data-modal-opener-url-value="{{ path('output_new', {treeflowId: treeflow.id, stepId: step.id}) }}"
                                                data-action="click->modal-opener#open">
                                            <i class="bi bi-plus-circle me-2"></i>{{ 'output.add.output'|trans }}
                                        </button>
                                    </div>
                                {% endif %}
                            </div>

                            {# Inputs Section #}
                            <div class="mb-2">
                                <h6 class="text-warning mb-3">
                                    <i class="bi bi-arrow-left-circle me-2"></i>{{ 'input.plural'|trans }} ({{ step.inputs|length }})
                                </h6>

                                {% if step.inputs|length > 0 %}
                                    <div class="list-group list-group-flush">
                                        {% for input in step.inputs %}
                                            <div class="list-group-item bg-transparent text-white border-secondary py-3">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="flex-grow-1">
                                                        <div class="d-flex align-items-center gap-2 mb-2">
                                                            <strong>{{ input.name }}</strong>
                                                            <span class="badge bg-warning text-dark">{{ ('input.type.' ~ input.type.value)|trans }}</span>
                                                            {% if input.sourceStep %}
                                                                <span class="badge bg-secondary">← {{ input.sourceStep.name }}</span>
                                                            {% endif %}
                                                        </div>
                                                        {% if input.prompt %}
                                                            <p class="text-muted mb-0 small">{{ input.prompt|u.truncate(100, '...') }}</p>
                                                        {% endif %}
                                                    </div>
                                                    {% if is_granted('TREEFLOW_EDIT', treeflow) %}
                                                        <div class="dropdown">
                                                            <button class="btn btn-sm btn-outline-light" data-bs-toggle="dropdown" aria-label="{{ 'button.actions'|trans }}">
                                                                <i class="bi bi-three-dots-vertical"></i>
                                                            </button>
                                                            <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end" style="background: var(--infinity-dark-surface); z-index: 1060;">
                                                                <li>
                                                                    <button type="button"
                                                                            class="dropdown-item"
                                                                            data-controller="modal-opener"
                                                                            data-modal-opener-url-value="{{ path('input_edit', {treeflowId: treeflow.id, stepId: step.id, inputId: input.id}) }}"
                                                                            data-action="click->modal-opener#open">
                                                                        <i class="bi bi-pencil me-2"></i>{{ 'button.edit'|trans }}
                                                                    </button>
                                                                </li>
                                                                <li><hr class="dropdown-divider"></li>
                                                                <li>
                                                                    <form method="post" action="{{ path('input_delete', {treeflowId: treeflow.id, stepId: step.id, inputId: input.id}) }}" class="d-inline" onsubmit="return confirm('{{ 'input.confirm.delete'|trans }}');">
                                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-input-' ~ input.id) }}">
                                                                        <button type="submit" class="dropdown-item text-danger">
                                                                            <i class="bi bi-trash me-2"></i>{{ 'button.delete'|trans }}
                                                                        </button>
                                                                    </form>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endif %}

                                {% if is_granted('TREEFLOW_EDIT', treeflow) %}
                                    <div class="text-center mt-3">
                                        <button type="button"
                                                class="btn btn-sm btn-outline-warning"
                                                data-controller="modal-opener"
                                                data-modal-opener-url-value="{{ path('input_new', {treeflowId: treeflow.id, stepId: step.id}) }}"
                                                data-action="click->modal-opener#open">
                                            <i class="bi bi-plus-circle me-2"></i>{{ 'input.add.input'|trans }}
                                        </button>
                                    </div>
                                {% endif %}
                            </div>

                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="bi bi-signpost text-muted" style="font-size: 3rem;"></i>
            <p class="text-muted mt-3 mb-3">{{ 'treeflow.no.steps'|trans }}</p>
            {% if is_granted('TREEFLOW_EDIT', treeflow) %}
                <button type="button"
                        class="btn infinity-btn-primary"
                        data-controller="modal-opener"
                        data-modal-opener-url-value="{{ path('step_new', {treeflowId: treeflow.id}) }}"
                        data-action="click->modal-opener#open">
                    <i class="bi bi-plus-circle me-2"></i>{{ 'step.add.first.step'|trans }}
                </button>
