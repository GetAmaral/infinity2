{% extends 'base.html.twig' %}

{% block title %}{{ 'action.edit'|trans }} {{ treeflow.name }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <a href="{{ path('treeflow_index') }}" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>{{ 'treeflow.back.to.list'|trans({}, 'treeflow') }}
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 col-xl-6 mx-auto">
            <div class="infinity-card p-4">
                <h1 class="mb-4">
                    <i class="bi bi-diagram-3 me-2"></i>
                    {{ 'action.edit'|trans }} {{ treeflow.name }}
                </h1>

                {{ form_start(form) }}
                    <div class="form-group-modern">
                        {{ form_label(form.name, null, {'label_attr': {'class': 'form-label-modern'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-input-modern'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="form-group-modern">
                        <div class="form-check form-switch">
                            {{ form_widget(form.active, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.active, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                        <small class="text-muted">{{ 'treeflow.form.active.help'|trans({}, 'treeflow') }}</small>
                        {{ form_errors(form.active) }}
                    </div>

                    {{ form_rest(form) }}

                    <div class="d-flex gap-2 mt-4">
                        <a href="{{ path('treeflow_index') }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>{{ 'button.cancel'|trans }}
                        </a>
                        <button type="submit" class="btn infinity-btn-success">
                            <i class="bi bi-check2 me-2"></i>{{ 'button.save.changes'|trans }}
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
