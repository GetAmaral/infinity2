{% extends '_base_modal.html.twig' %}

{# Configure modal appearance and behavior #}
{% set entity_type = 'input' %}
{% set icon = 'arrow-left-circle' %}
{% set form_action = (is_edit and input.id) ? path('input_edit', {treeflowId: treeflow.id, stepId: step.id, inputId: input.id}) : path('input_new', {treeflowId: treeflow.id, stepId: step.id}) %}
{% set title_create = 'input.modal.create.title' %}
{% set subtitle_create = 'input.modal.create.subtitle' %}
{% set subtitle_edit = 'input.modal.edit.subtitle' %}
{% set subtitle_domain = 'treeflow' %}
{% set submit_key = is_edit ? 'button.save.changes' : 'input.button.create.input' %}
{% set submit_domain = is_edit ? 'messages' : 'treeflow' %}
{% set entity = input %}

{# Form fields #}
{% block modal_body %}
    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.name) }}</label>
        {{ form_widget(form.name, {
            'attr': {
                'class': 'form-input-modern' ~ (form.name.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'input.form.name.placeholder'|trans({}, 'treeflow'),
                'autofocus': 'autofocus'
            }
        }) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.type) }}</label>
        <div class="d-flex flex-column gap-2 mt-2">
            {% for choice in form.type %}
                <div class="form-check">
                    {{ form_widget(choice, {
                        'attr': {
                            'class': 'form-check-input',
                            'style': 'cursor: pointer;'
                        }
                    }) }}
                    {{ form_label(choice, null, {
                        'label_attr': {
                            'class': 'form-check-label',
                            'style': 'cursor: pointer; margin-left: 0.5rem; color: var(--luminai-text-primary);'
                        }
                    }) }}
                </div>
            {% endfor %}
        </div>
        {{ form_errors(form.type) }}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.prompt) }}</label>
        {{ form_widget(form.prompt, {
            'attr': {
                'class': 'form-input-modern' ~ (form.prompt.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'input.form.prompt.placeholder'|trans({}, 'treeflow'),
                'rows': 4
            }
        }) }}
        <small class="text-muted mt-1 d-block">{{ 'input.form.prompt.help'|trans({}, 'treeflow') }}</small>
        {{ form_errors(form.prompt) }}
    </div>

    {{ form_widget(form._token) }}

    {% if is_edit and input.id %}
        <div class="form-group-modern mt-4 pt-3 border-top">
            <button type="button" class="btn btn-sm btn-danger delete-trigger-btn" data-entity-type="input">
                <i class="bi bi-trash"></i> {{ 'button.delete'|trans }}
            </button>
        </div>
    {% endif %}
{% endblock %}

{% block modal_footer %}
    <div class="modal-footer-actions" id="modal-default-actions-input">
        {{ button_modal_cancel() }}
        {{ button_modal_submit(is_edit, submit_key|default(null), submit_domain|default('messages')) }}
    </div>

    {% if is_edit and input.id %}
    <div class="modal-footer-actions" id="modal-delete-confirmation-input" style="display: none;">
        <div class="text-danger fw-bold">{{ 'confirm.delete.entity'|trans }}</div>
        <button type="button" class="btn btn-sm btn-secondary delete-cancel-btn" data-entity-type="input">
            <i class="bi bi-x-circle"></i> {{ 'button.cancel'|trans }}
        </button>
        <button type="button" class="btn btn-sm btn-danger delete-confirm-btn"
                data-entity-type="input"
                data-delete-url="{{ path('input_delete', {treeflowId: treeflow.id, stepId: step.id, inputId: input.id}) }}"
                data-csrf-token="{{ csrf_token('delete-input-' ~ input.id) }}">
            <i class="bi bi-trash"></i> {{ 'button.confirm'|trans }}
        </button>
    </div>
    {% endif %}
{% endblock %}
