{% extends '_base_modal.html.twig' %}

{# Configure modal appearance and behavior #}
{% set entity_type = 'output' %}
{% set icon = 'arrow-right-circle' %}
{% set form_action = (is_edit and output.id) ? path('output_edit', {treeflowId: treeflow.id, stepId: step.id, outputId: output.id}) : path('output_new', {treeflowId: treeflow.id, stepId: step.id}) %}
{% set title_create = 'output.modal.create.title' %}
{% set subtitle_create = 'output.modal.create.subtitle' %}
{% set subtitle_edit = 'output.modal.edit.subtitle' %}
{% set submit_key = is_edit ? 'button.save.changes' : 'output.button.create.output' %}
{% set submit_domain = is_edit ? 'messages' : 'treeflow' %}
{% set entity = output %}

{# Form fields #}
{% block modal_body %}
    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.name) }}</label>
        {{ form_widget(form.name, {
            'attr': {
                'class': 'form-input-modern' ~ (form.name.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'output.form.name.placeholder'|trans({}, 'treeflow'),
                'autofocus': 'autofocus'
            }
        }) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.description) }}</label>
        {{ form_widget(form.description, {
            'attr': {
                'class': 'form-input-modern' ~ (form.description.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'output.form.description.placeholder'|trans({}, 'treeflow'),
                'rows': 3
            }
        }) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.conditional) }}</label>
        {{ form_widget(form.conditional, {
            'attr': {
                'class': 'form-input-modern' ~ (form.conditional.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'output.form.conditional.placeholder'|trans({}, 'treeflow'),
                'rows': 3
            }
        }) }}
        <small class="text-muted mt-1 d-block">{{ 'output.form.conditional.help'|trans({}, 'treeflow') }}</small>
        {{ form_errors(form.conditional) }}
    </div>

    {{ form_widget(form._token) }}

    {% if is_edit and output.id %}
        <div class="form-group-modern mt-4 pt-3 border-top">
            <button type="button" class="btn btn-sm btn-danger delete-trigger-btn" data-entity-type="output">
                <i class="bi bi-trash"></i> {{ 'button.delete'|trans }}
            </button>
        </div>
    {% endif %}
{% endblock %}

{% block modal_footer %}
    <div class="modal-footer-actions" id="modal-default-actions-output">
        {{ button_modal_cancel() }}
        {{ button_modal_submit(is_edit, submit_key|default(null), submit_domain|default('messages')) }}
    </div>

    <div class="modal-footer-actions" id="modal-delete-confirmation-output" style="display: none;">
        <div class="text-danger fw-bold">{{ 'confirm.delete.entity'|trans }}</div>
        <button type="button" class="btn btn-sm btn-secondary delete-cancel-btn" data-entity-type="output">
            <i class="bi bi-x-circle"></i> {{ 'button.cancel'|trans }}
        </button>
        <button type="button" class="btn btn-sm btn-danger delete-confirm-btn"
                data-entity-type="output"
                data-delete-url="{{ path('output_delete', {treeflowId: treeflow.id, stepId: step.id, outputId: output.id}) }}"
                data-csrf-token="{{ csrf_token('delete-output-' ~ output.id) }}">
            <i class="bi bi-trash"></i> {{ 'button.confirm'|trans }}
        </button>
    </div>
{% endblock %}
