{% extends '_base_modal.html.twig' %}

{# Configure modal appearance and behavior #}
{% set entity_type = 'step' %}
{% set icon = 'signpost' %}
{% set form_action = (is_edit and step.id) ? path('step_edit', {treeflowId: treeflow.id, stepId: step.id}) : path('step_new', {treeflowId: treeflow.id}) %}
{% set title_create = 'step.modal.create.title' %}
{% set subtitle_create = 'step.modal.create.subtitle' %}
{% set subtitle_edit = 'step.modal.edit.subtitle' %}
{% set submit_key = is_edit ? 'button.save.changes' : 'step.button.create.step' %}
{% set submit_domain = is_edit ? 'messages' : 'treeflow' %}
{% set entity = step %}

{# Form fields #}
{% block modal_body %}
    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.name) }}</label>
        {{ form_widget(form.name, {
            'attr': {
                'class': 'form-input-modern' ~ (form.name.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'step.form.name.placeholder'|trans({}, 'treeflow')
            }
        }) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-group-modern">
        <div class="form-check form-switch">
            {{ form_widget(form.first, {
                'attr': {
                    'class': 'form-check-input',
                    'style': 'cursor: pointer;'
                }
            }) }}
            <label class="form-check-label" for="{{ form.first.vars.id }}" style="color: var(--luminai-text-primary); cursor: pointer; margin-left: 0.5rem;">
                {{ form_label(form.first) }}
            </label>
        </div>
        {{ form_errors(form.first) }}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.objective) }}</label>
        {{ form_widget(form.objective, {
            'attr': {
                'class': 'form-input-modern' ~ (form.objective.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'step.form.objective.placeholder'|trans({}, 'treeflow'),
                'rows': 3
            }
        }) }}
        {{ form_errors(form.objective) }}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.prompt) }}</label>
        {{ form_widget(form.prompt, {
            'attr': {
                'class': 'form-input-modern' ~ (form.prompt.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'step.form.prompt.placeholder'|trans({}, 'treeflow'),
                'rows': 5
            }
        }) }}
        {{ form_errors(form.prompt) }}
    </div>

    {{ form_widget(form._token) }}

    {# Hidden fields for continuation context #}
    {% if sourceStepId is defined and sourceStepId %}
        <input type="hidden" name="sourceStepId" value="{{ sourceStepId }}">
    {% endif %}
    {% if sourceOutputId is defined and sourceOutputId %}
        <input type="hidden" name="sourceOutputId" value="{{ sourceOutputId }}">
    {% endif %}
{% endblock %}

{% block modal_footer %}
    <div class="modal-footer-actions" id="modal-default-actions">
        {{ button_modal_cancel() }}
        {{ button_modal_submit(is_edit, submit_key|default(null), submit_domain|default('messages')) }}
        {% if is_edit and step.id %}
            <button type="button" class="btn btn-sm btn-danger ms-2" onclick="showDeleteConfirmation()">
                <i class="bi bi-trash"></i> {{ 'button.delete'|trans }}
            </button>
        {% endif %}
    </div>

    <div class="modal-footer-actions" id="modal-delete-confirmation" style="display: none;">
        <div class="text-danger fw-bold">{{ 'confirm.delete.entity'|trans }}</div>
        <button type="button" class="btn btn-sm btn-secondary" onclick="cancelDelete()">
            <i class="bi bi-x-circle"></i> {{ 'button.cancel'|trans }}
        </button>
        <form method="post" action="{{ path('step_delete', {treeflowId: treeflow.id, stepId: step.id}) }}" style="display: inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete-step-' ~ step.id) }}">
            <button type="submit" class="btn btn-sm btn-danger">
                <i class="bi bi-trash"></i> {{ 'button.confirm.delete'|trans }}
            </button>
        </form>
    </div>

    <script>
        function showDeleteConfirmation() {
            document.getElementById('modal-default-actions').style.display = 'none';
            document.getElementById('modal-delete-confirmation').style.display = 'flex';
        }

        function cancelDelete() {
            document.getElementById('modal-delete-confirmation').style.display = 'none';
            document.getElementById('modal-default-actions').style.display = 'flex';
        }
    </script>
{% endblock %}
