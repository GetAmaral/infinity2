            <div class="modal-footer-bar">
                {{ button_modal_cancel() }}
                {{ button_modal_submit(is_edit, is_edit ? 'button.save.changes' : 'treeflow.button.create.treeflow', is_edit ? 'messages' : 'treeflow') }}
            </div>

        </div>
    </div>

    {{ form_end(form, {'render_rest': false}) }}
