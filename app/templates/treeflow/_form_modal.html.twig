{% extends '_base_modal.html.twig' %}

{# Configure modal appearance and behavior #}
{% set entity_type = 'treeflow' %}
{% set icon = 'diagram-3' %}
{% set form_action = (is_edit and treeflow.id) ? path('treeflow_edit', {id: treeflow.id}) : path('treeflow_new') %}
{% set title_create = 'treeflow.modal.create.title' %}
{% set subtitle_create = 'treeflow.modal.create.subtitle' %}
{% set subtitle_edit = 'treeflow.modal.edit.subtitle' %}
{% set submit_key = is_edit ? 'button.save.changes' : 'treeflow.button.create.treeflow' %}
{% set submit_domain = is_edit ? 'messages' : 'treeflow' %}
{% set entity = treeflow %}

{# Form fields #}
{% block modal_body %}
    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.name) }}</label>
        {{ form_widget(form.name, {
            'attr': {
                'class': 'form-input-modern' ~ (form.name.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'treeflow.form.name.placeholder'|trans({}, 'treeflow'),
                'autofocus': 'autofocus'
            }
        }) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-group-modern">
        <div class="form-check form-switch">
            {{ form_widget(form.active, {
                'attr': {
                    'class': 'form-check-input',
                    'style': 'cursor: pointer;'
                }
            }) }}
            <label class="form-check-label" for="{{ form.active.vars.id }}" style="color: var(--luminai-text-primary); cursor: pointer; margin-left: 0.5rem;">
                {{ form_label(form.active) }}
            </label>
        </div>
        <small class="text-muted mt-1 d-block">{{ 'treeflow.form.active.help'|trans({}, 'treeflow') }}</small>
        {{ form_errors(form.active) }}
    </div>

    {{ form_widget(form._token) }}

    {% if is_edit and treeflow.id %}
        <div class="form-group-modern mt-4 pt-3 border-top">
            <button type="button" class="btn btn-sm btn-danger delete-trigger-btn" data-entity-type="treeflow">
                <i class="bi bi-trash"></i> {{ 'button.delete'|trans }}
            </button>
        </div>
    {% endif %}
{% endblock %}

{% block modal_footer %}
    <div class="modal-footer-actions" id="modal-default-actions-treeflow">
        {{ button_modal_cancel() }}
        {{ button_modal_submit(is_edit, submit_key|default(null), submit_domain|default('messages')) }}
    </div>

    <div class="modal-footer-actions" id="modal-delete-confirmation-treeflow" style="display: none;">
        <div class="text-danger fw-bold">{{ 'confirm.delete.entity'|trans }}</div>
        <button type="button" class="btn btn-sm btn-secondary delete-cancel-btn" data-entity-type="treeflow">
            <i class="bi bi-x-circle"></i> {{ 'button.cancel'|trans }}
        </button>
        <button type="button" class="btn btn-sm btn-danger delete-confirm-btn"
                data-entity-type="treeflow"
                data-delete-url="{{ path('treeflow_delete', {id: treeflow.id}) }}"
                data-csrf-token="{{ csrf_token('delete-treeflow-' ~ treeflow.id) }}">
            <i class="bi bi-trash"></i> {{ 'button.confirm'|trans }}
        </button>
    </div>
{% endblock %}
