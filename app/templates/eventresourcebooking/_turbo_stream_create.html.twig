<turbo-stream action="prepend" target="eventresourcebooking-list">
    <template>
        <tr id="eventresourcebooking-{{ eventresourcebooking.id }}">

            <td>{{ eventresourcebooking.organization }}</td>

            <td>{{ eventresourcebooking.event }}</td>

            <td>{{ eventresourcebooking.resource }}</td>

            <td>{{ eventresourcebooking.responsibleUser }}</td>

            <td>{{ eventresourcebooking.quantity }}</td>

            <td>{{ eventresourcebooking.bookingStatus }}</td>

            <td>{{ eventresourcebooking.notes }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('event_resource_booking_show', {id: eventresourcebooking.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('event_resource_booking_edit', {id: eventresourcebooking.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('event_resource_booking_delete', {id: eventresourcebooking.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ eventresourcebooking.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'EventResourceBooking'|trans }} created successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
