{% extends 'base.html.twig' %}

{% block title %}{{ 'Company'|trans }} - {{ company }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2>
                            <i class="bi-circle me-2"></i>
                            {{ 'Company'|trans }} Details
                        </h2>
                        <div class="btn-group">
                            <a href="{{ path('company_edit', {id: company.id}) }}"
                               class="btn btn-warning">
                                <i class="bi bi-pencil me-1"></i>
                                {{ 'action.edit'|trans }}
                            </a>
                            <a href="{{ path('company_index') }}"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                {{ 'action.back'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-3">{{ 'Name'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.name }}</dd>

                        <dt class="col-sm-3">{{ 'Organization'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.organization }}</dd>

                        <dt class="col-sm-3">{{ 'AccountManager'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.accountManager }}</dd>

                        <dt class="col-sm-3">{{ 'Email'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.email }}</dd>

                        <dt class="col-sm-3">{{ 'Document'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.document }}</dd>

                        <dt class="col-sm-3">{{ 'Address'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.address }}</dd>

                        <dt class="col-sm-3">{{ 'City'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.city }}</dd>

                        <dt class="col-sm-3">{{ 'PostalCode'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.postalCode }}</dd>

                        <dt class="col-sm-3">{{ 'Geo'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.geo }}</dd>

                        <dt class="col-sm-3">{{ 'CelPhone'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.celPhone }}</dd>

                        <dt class="col-sm-3">{{ 'BusinesPhone'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.businesPhone }}</dd>

                        <dt class="col-sm-3">{{ 'ContactName'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.contactName }}</dd>

                        <dt class="col-sm-3">{{ 'Website'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.website }}</dd>

                        <dt class="col-sm-3">{{ 'Industry'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.industry }}</dd>

                        <dt class="col-sm-3">{{ 'CompanySize'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.companySize }}</dd>

                        <dt class="col-sm-3">{{ 'Notes'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.notes }}</dd>

                        <dt class="col-sm-3">{{ 'Status'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.status }}</dd>

                        <dt class="col-sm-3">{{ 'field.created_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.createdAt|date('Y-m-d H:i:s') }}</dd>

                        <dt class="col-sm-3">{{ 'field.updated_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ company.updatedAt|date('Y-m-d H:i:s') }}</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form method="post"
                          action="{{ path('company_delete', {id: company.id}) }}"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ company.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>
                            {{ 'action.delete'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
