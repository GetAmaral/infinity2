{% extends 'base.html.twig' %}

{% block title %}{{ company }} - {{ 'company.singular'|trans({}, 'company') }} - {{ 'page.luminai.suffix'|trans }}{% endblock %}

{% block body %}
{# Navigation #}
<div class="mb-4 d-flex gap-2 align-items-center">
    {{ button_back(path('company_index'), 'company.back.to.list', 'company') }}
{% if true %}
    {% if is_granted(constant('App\\Security\\Voter\\CompanyVoter::EDIT'), company) %}
        {{ button_edit(company.id, path('company_edit', {id: company.id}), 'button.edit', 'messages', null, null, null, '', null, null, false) }}
    {% endif %}
{% else %}
    {{ button_edit(company.id, path('company_edit', {id: company.id}), 'button.edit', 'messages', null, null, null, '', null, null, false) }}
{% endif %}
</div>

{# Entity Header #}
<div class="ai-dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-start">
        <div class="d-flex align-items-center">
            <div class="position-relative me-4">
                <div class="p-3 rounded-3" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
                    <i class="bi bi-building text-white fs-2"></i>
                </div>
                <div class="position-absolute top-0 end-0 translate-middle">
                    <span class="badge rounded-pill" style="background: var(--luminai-ai-gradient); font-size: 0.7rem;">{{ 'ui.ai'|trans }}</span>
                </div>
            </div>
            <div>
                <h1 class="text-gradient mb-2">{{ company }}</h1>
                <p class="text-secondary mb-0 fs-5">{{ 'company.singular'|trans({}, 'company') }}</p>
            </div>
        </div>
        <div class="d-flex gap-2">
            <div class="ai-status-indicator">
                <i class="bi bi-building"></i> {{ 'company.section'|trans({}, 'company') }}
            </div>
            <div class="real-time-badge">
                {{ 'ui.active'|trans }}
            </div>
        </div>
    </div>
</div>

{# Entity Details Bento Grid #}
<div class="bento-grid">
    {# Main Information Card #}
    <div class="bento-item large">
        <div class="luminai-card ai-enhanced p-4 h-100">
            <h5 class="text-neon mb-4">
                <i class="bi bi-info-circle me-2"></i>{{ 'entity.details'|trans }}
            </h5>

            <div class="row g-3">
{% for property in showProperties %}
                <div class="col-md-6">
                    <div class="d-flex align-items-start gap-3">
                        <i class="bi bi-{{ property.icon|default('circle') }} text-neon fs-5"></i>
                        <div class="flex-grow-1">
                            <div class="text-muted small mb-1">{{ property.label|trans }}</div>
                            <div class="text-white">
{% set value = attribute(company, property.getter) %}
{% if property.isRelationship %}
                                {# Relationship: Link with toString or show collection count #}
                                {% if property.isCollection %}
                                    {# Collection relationship (OneToMany, ManyToMany) #}
                                    {% if value|length > 0 %}
                                        <span class="badge bg-info">
                                            {{ value|length }} {{ property.label }}
                                        </span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                {% else %}
                                    {# Single relationship (ManyToOne, OneToOne) #}
                                    {% if value %}
                                        <a href="{{ path(property.relationshipRoute, {id: value.id}) }}"
                                           class="text-white text-decoration-none">
                                            {{ value }}
                                            <i class="bi bi-arrow-right ms-1"></i>
                                        </a>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                {% endif %}
{% elseif property.type == 'boolean' %}
                                {# Boolean: Badge #}
                                {% if value %}
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>{{ 'common.yes'|trans }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle me-1"></i>{{ 'common.no'|trans }}
                                    </span>
                                {% endif %}
{% elseif property.type in ['datetime', 'datetime_immutable'] %}
                                {# DateTime: Full format #}
                                {{ value|date('F j, Y, g:i A') }}
{% elseif property.type == 'date' %}
                                {# Date: Short format #}
                                {{ value|date('M d, Y') }}
{% elseif property.type == 'time' %}
                                {# Time: 24-hour format #}
                                {{ value|date('H:i') }}
{% elseif property.type == 'uuid' %}
                                {# UUID: toString #}
                                <code class="text-muted">{{ value.toString }}</code>
{% elseif property.type == 'text' %}
                                {# Text: Multi-line with preserved formatting #}
                                <div class="text-white" style="white-space: pre-wrap;">{{ value ?? '-' }}</div>
{% elseif property.type == 'json' %}
                                {# JSON: Formatted code block #}
                                <pre class="bg-dark text-white p-2 rounded" style="font-size: 0.85rem;"><code>{{ value|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
{% else %}
                                {# Default: Direct output #}
                                {{ value ?? '-' }}
{% endif %}
                            </div>
                        </div>
                    </div>
                </div>
{% endfor %}
            </div>
        </div>
    </div>

    {# Metadata Card #}
    <div class="bento-item">
        <div class="luminai-card ai-enhanced p-4 h-100">
            <h5 class="text-neon mb-4">
                <i class="bi bi-clock-history me-2"></i>{{ 'entity.metadata'|trans }}
            </h5>

            <div class="d-flex flex-column gap-3">
                <div class="d-flex align-items-start gap-3">
                    <i class="bi bi-calendar-plus text-neon fs-5"></i>
                    <div class="flex-grow-1">
                        <div class="text-muted small mb-1">{{ 'field.created_at'|trans }}</div>
                        <div class="text-white">{{ company.createdAt|date('F j, Y, g:i A') }}</div>
                    </div>
                </div>

                <div class="d-flex align-items-start gap-3">
                    <i class="bi bi-clock-history text-neon fs-5"></i>
                    <div class="flex-grow-1">
                        <div class="text-muted small mb-1">{{ 'field.updated_at'|trans }}</div>
                        <div class="text-white">{{ company.updatedAt|date('F j, Y, g:i A') }}</div>
                    </div>
                </div>

{% if true %}
                <div class="d-flex align-items-start gap-3">
                    <i class="bi bi-building text-neon fs-5"></i>
                    <div class="flex-grow-1">
                        <div class="text-muted small mb-1">{{ 'field.organization'|trans }}</div>
                        <div class="text-white">
                            <a href="{{ path('organization_show', {id: company.organization.id}) }}"
                               class="text-white text-decoration-none">
                                {{ company.organization }}
                                <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
{% endif %}

                <div class="d-flex align-items-start gap-3">
                    <i class="bi bi-key text-neon fs-5"></i>
                    <div class="flex-grow-1">
                        <div class="text-muted small mb-1">{{ 'field.id'|trans }}</div>
                        <div class="text-white">
                            <code class="text-muted" style="font-size: 0.75rem;">{{ company.id.toString }}</code>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
