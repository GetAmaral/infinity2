<turbo-stream action="prepend" target="competitor-list">
    <template>
        <tr id="competitor-{{ competitor.id }}">

            <td>{{ competitor.name }}</td>

            <td>{{ competitor.organization }}</td>

            <td>{{ competitor.description }}</td>

            <td>{{ competitor.strengths }}</td>

            <td>{{ competitor.weaknesses }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('competitor_show', {id: competitor.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('competitor_edit', {id: competitor.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('competitor_delete', {id: competitor.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ competitor.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'Competitor'|trans }} created successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
