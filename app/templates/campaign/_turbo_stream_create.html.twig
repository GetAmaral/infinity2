<turbo-stream action="prepend" target="campaign-list">
    <template>
        <tr id="campaign-{{ campaign.id }}">

            <td>{{ campaign.name }}</td>

            <td>{{ campaign.organization }}</td>

            <td>{{ campaign.description }}</td>

            <td>{{ campaign.campaignStatus }}</td>

            <td>{{ campaign.plannedStartDate }}</td>

            <td>{{ campaign.startDate }}</td>

            <td>{{ campaign.plannedEndDate }}</td>

            <td>{{ campaign.endDate }}</td>

            <td>{{ campaign.plannedDuration }}</td>

            <td>{{ campaign.duration }}</td>

            <td>{{ campaign.manager }}</td>

            <td>{{ campaign.plannedBudget }}</td>

            <td>{{ campaign.actualBudget }}</td>

            <td>{{ campaign.plannedReturn }}</td>

            <td>{{ campaign.actualReturn }}</td>

            <td>{{ campaign.roi }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('campaign_show', {id: campaign.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('campaign_edit', {id: campaign.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('campaign_delete', {id: campaign.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ campaign.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'Campaign'|trans }} created successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
