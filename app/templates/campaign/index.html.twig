{% extends 'base.html.twig' %}

{% block title %}{{ 'Campaigns'|trans }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi-circle me-2"></i>
            {{ 'Campaigns'|trans }}
        </h1>
        <a href="{{ path('campaign_new') }}"
           class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>
            {{ 'action.create'|trans }}
        </a>
    </div>

    {# Search and Filter #}
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" data-turbo="true">
                <div class="row g-3">
                    <div class="col-md-6">
                        <input type="search"
                               name="q"
                               value="{{ app.request.query.get('q') }}"
                               class="form-control"
                               placeholder="{{ 'action.search'|trans }}...">
                    </div>

                    <div class="col-md-3">
                        <button type="submit" class="btn btn-secondary w-100">
                            <i class="bi bi-search me-1"></i>
                            {{ 'action.search'|trans }}
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {# Data Table #}
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'name', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Name'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'organization', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Organization'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'description', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Description'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'socialMedias', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'SocialMedias'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'campaignStatus', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'CampaignStatus'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'plannedStartDate', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'PlannedStartDate'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'startDate', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'StartDate'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'plannedEndDate', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'PlannedEndDate'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'endDate', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'EndDate'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'plannedDuration', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'PlannedDuration'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'duration', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Duration'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'manager', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Manager'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'team', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Team'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'contacts', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Contacts'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'companies', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Companies'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'deals', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Deals'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'talks', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Talks'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'plannedBudget', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'PlannedBudget'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'actualBudget', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'ActualBudget'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'plannedReturn', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'PlannedReturn'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'actualReturn', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'ActualReturn'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('campaign_index', {sort: 'roi', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Roi'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>{{ 'action.label'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody id="campaign-list">
                        {% for item in items %}
                        <tr id="campaign-{{ item.id }}">

                            <td>{{ item.name }}</td>

                            <td>{{ item.organization }}</td>

                            <td>{{ item.description }}</td>

                            <td>{{ item.campaignStatus }}</td>

                            <td>{{ item.plannedStartDate }}</td>

                            <td>{{ item.startDate }}</td>

                            <td>{{ item.plannedEndDate }}</td>

                            <td>{{ item.endDate }}</td>

                            <td>{{ item.plannedDuration }}</td>

                            <td>{{ item.duration }}</td>

                            <td>{{ item.manager }}</td>

                            <td>{{ item.plannedBudget }}</td>

                            <td>{{ item.actualBudget }}</td>

                            <td>{{ item.plannedReturn }}</td>

                            <td>{{ item.actualReturn }}</td>

                            <td>{{ item.roi }}</td>

                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('campaign_show', {id: item.id}) }}"
                                       class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('campaign_edit', {id: item.id}) }}"
                                       class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post"
                                          action="{{ path('campaign_delete', {id: item.id}) }}"
                                          class="d-inline"
                                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Pagination #}
            {% if items.haveToPaginate %}
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    {{ knp_pagination_render(items) }}
                </ul>
            </nav>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
