{% extends 'base.html.twig' %}

{% block title %}{{ campaign }} - {{ 'campaign.singular'|trans({}, 'campaign') }} - {{ 'page.luminai.suffix'|trans }}{% endblock %}

{% block body %}
{# Navigation #}
<div class="mb-4 d-flex gap-2 align-items-center">
    {{ button_back(path('campaign_index'), 'campaign.back.to.list', 'campaign') }}
{% if true %}
    {% if is_granted(constant('App\\Security\\Voter\\CampaignVoter::EDIT'), campaign) %}
        {{ button_edit(campaign.id, path('campaign_edit', {id: campaign.id}), 'button.edit', 'messages', null, null, null, '', null, null, false) }}
    {% endif %}
{% else %}
    {{ button_edit(campaign.id, path('campaign_edit', {id: campaign.id}), 'button.edit', 'messages', null, null, null, '', null, null, false) }}
{% endif %}
</div>

{# Entity Header #}
<div class="ai-dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-start">
        <div class="d-flex align-items-center">
            <div class="position-relative me-4">
                <div class="p-3 rounded-3" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
                    <i class="bi bi-megaphone text-white fs-2"></i>
                </div>
                <div class="position-absolute top-0 end-0 translate-middle">
                    <span class="badge rounded-pill" style="background: var(--luminai-ai-gradient); font-size: 0.7rem;">{{ 'ui.ai'|trans }}</span>
                </div>
            </div>
            <div>
                <h1 class="text-gradient mb-2">{{ campaign }}</h1>
                <p class="text-secondary mb-0 fs-5">{{ 'campaign.singular'|trans({}, 'campaign') }}</p>
            </div>
        </div>
        <div class="d-flex gap-2">
            <div class="ai-status-indicator">
                <i class="bi bi-megaphone"></i> {{ 'campaign.section'|trans({}, 'campaign') }}
            </div>
            <div class="real-time-badge">
                {{ 'ui.active'|trans }}
            </div>
        </div>
    </div>
</div>

{# Entity Details Bento Grid #}
<div class="bento-grid">
    {# Main Information Card #}
    <div class="bento-item large">
        <div class="luminai-card ai-enhanced p-4 h-100">
            <h5 class="text-neon mb-4">
                <i class="bi bi-info-circle me-2"></i>{{ 'entity.details'|trans }}
            </h5>

            <div class="row g-3">
{% for property in showProperties %}
                <div class="col-md-6">
                    <div class="d-flex align-items-start gap-3">
                        <i class="bi bi-{{ property.icon|default('circle') }} text-neon fs-5"></i>
                        <div class="flex-grow-1">
                            <div class="text-muted small mb-1">{{ property.label|trans }}</div>
                            <div class="text-white">
{% if property.isRelationship %}
                                {# Relationship: Link with toString #}
                                {% if campaign.{{ property.getter }}() %}
                                    <a href="{{ path('{{ property.relationshipRoute }}', {id: campaign.{{ property.getter }}().id}) }}"
                                       class="text-white text-decoration-none">
                                        {{ campaign.{{ property.getter }}() }}
                                        <i class="bi bi-arrow-right ms-1"></i>
                                    </a>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
{% elseif property.type == 'boolean' %}
                                {# Boolean: Badge #}
                                {% if campaign.{{ property.getter }}() %}
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>{{ 'common.yes'|trans }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle me-1"></i>{{ 'common.no'|trans }}
                                    </span>
                                {% endif %}
{% elseif property.type in ['datetime', 'datetime_immutable'] %}
                                {# DateTime: Full format #}
                                {{ campaign.{{ property.getter }}()|date('F j, Y, g:i A') }}
{% elseif property.type == 'date' %}
                                {# Date: Short format #}
                                {{ campaign.{{ property.getter }}()|date('M d, Y') }}
{% elseif property.type == 'time' %}
                                {# Time: 24-hour format #}
                                {{ campaign.{{ property.getter }}()|date('H:i') }}
{% elseif property.type == 'uuid' %}
                                {# UUID: toString #}
                                <code class="text-muted">{{ campaign.{{ property.getter }}().toString }}</code>
{% elseif property.type == 'text' %}
                                {# Text: Multi-line with preserved formatting #}
                                <div class="text-white" style="white-space: pre-wrap;">{{ campaign.{{ property.getter }}() ?? '-' }}</div>
{% elseif property.type == 'json' %}
                                {# JSON: Formatted code block #}
                                <pre class="bg-dark text-white p-2 rounded" style="font-size: 0.85rem;"><code>{{ campaign.{{ property.getter }}()|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
{% else %}
                                {# Default: Direct output #}
                                {{ campaign.{{ property.getter }}() ?? '-' }}
{% endif %}
                            </div>
                        </div>
                    </div>
                </div>
{% endfor %}
            </div>
        </div>
    </div>

    {# Metadata Card #}
    <div class="bento-item">
        <div class="luminai-card ai-enhanced p-4 h-100">
            <h5 class="text-neon mb-4">
                <i class="bi bi-clock-history me-2"></i>{{ 'entity.metadata'|trans }}
            </h5>

            <div class="d-flex flex-column gap-3">
                <div class="d-flex align-items-start gap-3">
                    <i class="bi bi-calendar-plus text-neon fs-5"></i>
                    <div class="flex-grow-1">
                        <div class="text-muted small mb-1">{{ 'field.created_at'|trans }}</div>
                        <div class="text-white">{{ campaign.createdAt|date('F j, Y, g:i A') }}</div>
                    </div>
                </div>

                <div class="d-flex align-items-start gap-3">
                    <i class="bi bi-clock-history text-neon fs-5"></i>
                    <div class="flex-grow-1">
                        <div class="text-muted small mb-1">{{ 'field.updated_at'|trans }}</div>
                        <div class="text-white">{{ campaign.updatedAt|date('F j, Y, g:i A') }}</div>
                    </div>
                </div>

{% if true %}
                <div class="d-flex align-items-start gap-3">
                    <i class="bi bi-building text-neon fs-5"></i>
                    <div class="flex-grow-1">
                        <div class="text-muted small mb-1">{{ 'field.organization'|trans }}</div>
                        <div class="text-white">
                            <a href="{{ path('organization_show', {id: campaign.organization.id}) }}"
                               class="text-white text-decoration-none">
                                {{ campaign.organization }}
                                <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
{% endif %}

                <div class="d-flex align-items-start gap-3">
                    <i class="bi bi-key text-neon fs-5"></i>
                    <div class="flex-grow-1">
                        <div class="text-muted small mb-1">{{ 'field.id'|trans }}</div>
                        <div class="text-white">
                            <code class="text-muted" style="font-size: 0.75rem;">{{ campaign.id.toString }}</code>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
