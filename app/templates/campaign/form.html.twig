{% extends 'base.html.twig' %}

{% block title %}
    {% if campaign.id %}
        {{ 'action.edit'|trans }} {{ 'Campaign'|trans }}
    {% else %}
        {{ 'action.create'|trans }} {{ 'Campaign'|trans }}
    {% endif %}
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>
                        {% if campaign.id %}
                            <i class="bi bi-pencil me-2"></i>
                            {{ 'action.edit'|trans }} {{ 'Campaign'|trans }}
                        {% else %}
                            <i class="bi bi-plus-circle me-2"></i>
                            {{ 'action.create'|trans }} {{ 'Campaign'|trans }}
                        {% endif %}
                    </h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'data-turbo': 'true'}}) }}

                    {{ form_errors(form) }}


                    <div class="mb-3">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.campaignStatus) }}
                        {{ form_widget(form.campaignStatus) }}
                        {{ form_errors(form.campaignStatus) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.plannedStartDate) }}
                        {{ form_widget(form.plannedStartDate) }}
                        {{ form_errors(form.plannedStartDate) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.startDate) }}
                        {{ form_widget(form.startDate) }}
                        {{ form_errors(form.startDate) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.plannedEndDate) }}
                        {{ form_widget(form.plannedEndDate) }}
                        {{ form_errors(form.plannedEndDate) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.endDate) }}
                        {{ form_widget(form.endDate) }}
                        {{ form_errors(form.endDate) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.plannedDuration) }}
                        {{ form_widget(form.plannedDuration) }}
                        {{ form_errors(form.plannedDuration) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.duration) }}
                        {{ form_widget(form.duration) }}
                        {{ form_errors(form.duration) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.plannedBudget) }}
                        {{ form_widget(form.plannedBudget) }}
                        {{ form_errors(form.plannedBudget) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.actualBudget) }}
                        {{ form_widget(form.actualBudget) }}
                        {{ form_errors(form.actualBudget) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.plannedReturn) }}
                        {{ form_widget(form.plannedReturn) }}
                        {{ form_errors(form.plannedReturn) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.actualReturn) }}
                        {{ form_widget(form.actualReturn) }}
                        {{ form_errors(form.actualReturn) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.roi) }}
                        {{ form_widget(form.roi) }}
                        {{ form_errors(form.roi) }}

                    </div>


                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('campaign_index') }}"
                           class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>
                            {{ 'action.back'|trans }}
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>
                            {{ 'action.save'|trans }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
