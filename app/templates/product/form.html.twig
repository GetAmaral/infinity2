{% extends 'base.html.twig' %}

{% block title %}
    {% if product.id %}
        {{ 'action.edit'|trans }} {{ 'Product'|trans }}
    {% else %}
        {{ 'action.create'|trans }} {{ 'Product'|trans }}
    {% endif %}
{% endblock %}

