<turbo-stream action="replace" target="product-{{ product.id }}">
    <template>
        <tr id="product-{{ product.id }}">

            <td>{{ product.productCode }}</td>

            <td>{{ product.name }}</td>

            <td>{{ product.organization }}</td>

            <td>{{ product.description }}</td>

            <td>{{ product.shortDescription }}</td>

            <td>{{ product.category }}</td>

            <td>{{ product.productLine }}</td>

            <td>{{ product.productType }}</td>

            <td>{{ product.brand }}</td>

            <td>{{ product.listPrice }}</td>

            <td>{{ product.costPrice }}</td>

            <td>{{ product.minimumPrice }}</td>

            <td>{{ product.maximumDiscount }}</td>

            <td>{{ product.discountAmount }}</td>

            <td>{{ product.discountPercentage }}</td>

            <td>{{ product.commissionRate }}</td>

            <td>{{ product.commissionAmount }}</td>

            <td>{{ product.currency }}</td>

            <td>{{ product.exchangeRate }}</td>

            <td>{{ product.unitOfMeasure }}</td>

            <td>{{ product.weight }}</td>

            <td>{{ product.dimensions }}</td>

            <td>{{ product.taxCategory }}</td>

            <td>{{ product.marginPercentage }}</td>

            <td>{{ product.stockQuantity }}</td>

            <td>{{ product.reservedQuantity }}</td>

            <td>{{ product.availableQuantity }}</td>

            <td>{{ product.warrantyPeriod }}</td>

            <td>{{ product.supportPeriod }}</td>

            <td>{{ product.lifecycleStage }}</td>

            <td>{{ product.launchDate }}</td>

            <td>{{ product.endOfLifeDate }}</td>

            <td>{{ product.active }}</td>

            <td>{{ product.sellable }}</td>

            <td>{{ product.purchasable }}</td>

            <td>{{ product.requiresApproval }}</td>

            <td>{{ product.subscription }}</td>

            <td>{{ product.subscriptionPeriod }}</td>

            <td>{{ product.billingFrequency }}</td>

            <td>{{ product.setupFee }}</td>

            <td>{{ product.recurringFee }}</td>

            <td>{{ product.cancellationFee }}</td>

            <td>{{ product.specifications }}</td>

            <td>{{ product.features }}</td>

            <td>{{ product.customFields }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('product_show', {id: product.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('product_edit', {id: product.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('product_delete', {id: product.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'Product'|trans }} updated successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
