{% extends 'base.html.twig' %}

{% block title %}{{ 'Product'|trans }} - {{ product }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2>
                            <i class="bi-circle me-2"></i>
                            {{ 'Product'|trans }} Details
                        </h2>
                        <div class="btn-group">
                            <a href="{{ path('product_edit', {id: product.id}) }}"
                               class="btn btn-warning">
                                <i class="bi bi-pencil me-1"></i>
                                {{ 'action.edit'|trans }}
                            </a>
                            <a href="{{ path('product_index') }}"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                {{ 'action.back'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-3">{{ 'ProductCode'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.productCode }}</dd>

                        <dt class="col-sm-3">{{ 'Name'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.name }}</dd>

                        <dt class="col-sm-3">{{ 'Organization'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.organization }}</dd>

                        <dt class="col-sm-3">{{ 'Description'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.description }}</dd>

                        <dt class="col-sm-3">{{ 'ShortDescription'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.shortDescription }}</dd>

                        <dt class="col-sm-3">{{ 'Category'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.category }}</dd>

                        <dt class="col-sm-3">{{ 'ProductLine'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.productLine }}</dd>

                        <dt class="col-sm-3">{{ 'ProductType'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.productType }}</dd>

                        <dt class="col-sm-3">{{ 'Brand'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.brand }}</dd>

                        <dt class="col-sm-3">{{ 'ListPrice'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.listPrice }}</dd>

                        <dt class="col-sm-3">{{ 'CostPrice'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.costPrice }}</dd>

                        <dt class="col-sm-3">{{ 'MinimumPrice'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.minimumPrice }}</dd>

                        <dt class="col-sm-3">{{ 'MaximumDiscount'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.maximumDiscount }}</dd>

                        <dt class="col-sm-3">{{ 'DiscountAmount'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.discountAmount }}</dd>

                        <dt class="col-sm-3">{{ 'DiscountPercentage'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.discountPercentage }}</dd>

                        <dt class="col-sm-3">{{ 'CommissionRate'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.commissionRate }}</dd>

                        <dt class="col-sm-3">{{ 'CommissionAmount'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.commissionAmount }}</dd>

                        <dt class="col-sm-3">{{ 'Currency'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.currency }}</dd>

                        <dt class="col-sm-3">{{ 'ExchangeRate'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.exchangeRate }}</dd>

                        <dt class="col-sm-3">{{ 'UnitOfMeasure'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.unitOfMeasure }}</dd>

                        <dt class="col-sm-3">{{ 'Weight'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.weight }}</dd>

                        <dt class="col-sm-3">{{ 'Dimensions'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.dimensions }}</dd>

                        <dt class="col-sm-3">{{ 'TaxCategory'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.taxCategory }}</dd>

                        <dt class="col-sm-3">{{ 'MarginPercentage'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.marginPercentage }}</dd>

                        <dt class="col-sm-3">{{ 'StockQuantity'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.stockQuantity }}</dd>

                        <dt class="col-sm-3">{{ 'ReservedQuantity'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.reservedQuantity }}</dd>

                        <dt class="col-sm-3">{{ 'AvailableQuantity'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.availableQuantity }}</dd>

                        <dt class="col-sm-3">{{ 'WarrantyPeriod'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.warrantyPeriod }}</dd>

                        <dt class="col-sm-3">{{ 'SupportPeriod'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.supportPeriod }}</dd>

                        <dt class="col-sm-3">{{ 'LifecycleStage'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.lifecycleStage }}</dd>

                        <dt class="col-sm-3">{{ 'LaunchDate'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.launchDate }}</dd>

                        <dt class="col-sm-3">{{ 'EndOfLifeDate'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.endOfLifeDate }}</dd>

                        <dt class="col-sm-3">{{ 'Active'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.active }}</dd>

                        <dt class="col-sm-3">{{ 'Sellable'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.sellable }}</dd>

                        <dt class="col-sm-3">{{ 'Purchasable'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.purchasable }}</dd>

                        <dt class="col-sm-3">{{ 'RequiresApproval'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.requiresApproval }}</dd>

                        <dt class="col-sm-3">{{ 'Subscription'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.subscription }}</dd>

                        <dt class="col-sm-3">{{ 'SubscriptionPeriod'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.subscriptionPeriod }}</dd>

                        <dt class="col-sm-3">{{ 'BillingFrequency'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.billingFrequency }}</dd>

                        <dt class="col-sm-3">{{ 'SetupFee'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.setupFee }}</dd>

                        <dt class="col-sm-3">{{ 'RecurringFee'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.recurringFee }}</dd>

                        <dt class="col-sm-3">{{ 'CancellationFee'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.cancellationFee }}</dd>

                        <dt class="col-sm-3">{{ 'Specifications'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.specifications }}</dd>

                        <dt class="col-sm-3">{{ 'Features'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.features }}</dd>

                        <dt class="col-sm-3">{{ 'CustomFields'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.customFields }}</dd>

                        <dt class="col-sm-3">{{ 'field.created_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.createdAt|date('Y-m-d H:i:s') }}</dd>

                        <dt class="col-sm-3">{{ 'field.updated_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ product.updatedAt|date('Y-m-d H:i:s') }}</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form method="post"
                          action="{{ path('product_delete', {id: product.id}) }}"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>
                            {{ 'action.delete'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
