{% extends 'base.html.twig' %}

{% block title %}
    {% if talkType.id %}
        {{ 'action.edit'|trans }} {{ 'talktype.singular'|trans({}, 'talktype') }}
    {% else %}
        {{ 'action.create'|trans }} {{ 'talktype.singular'|trans({}, 'talktype') }}
    {% endif %}
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="luminai-card p-4">
                <div class="mb-4">
                    <h2>
                        {% if talkType.id %}
                            <i class="bi bi-pencil me-2"></i>{{ 'action.edit'|trans }} {{ 'talktype.singular'|trans({}, 'talktype') }}
                        {% else %}
                            <i class="bi bi-plus-circle me-2"></i>{{ 'action.create'|trans }} {{ 'talktype.singular'|trans({}, 'talktype') }}
                        {% endif %}
                    </h2>
                </div>

                {# CRITICAL: Add form-navigation controller for Enter-as-Tab behavior #}
                {{ form_start(form, {
                    'attr': {
                        'data-turbo': 'true',
                        'data-controller': 'form-navigation'
                    }
                }) }}

                {{ form_errors(form) }}

                {# Render all form fields automatically #}
                {% for child in form.children %}
                    {% if child.vars.name not in ['_token'] %}
                        <div class="mb-3">
                            {{ form_row(child) }}
                        </div>
                    {% endif %}
                {% endfor %}

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('talktype_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>{{ 'action.back'|trans }}
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>{{ 'action.save'|trans }}
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
