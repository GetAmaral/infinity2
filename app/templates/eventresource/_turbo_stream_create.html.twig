<turbo-stream action="prepend" target="eventresource-list">
    <template>
        <tr id="eventresource-{{ eventresource.id }}">

            <td>{{ eventresource.name }}</td>

            <td>{{ eventresource.organization }}</td>

            <td>{{ eventresource.description }}</td>

            <td>{{ eventresource.type }}</td>

            <td>{{ eventresource.location }}</td>

            <td>{{ eventresource.city }}</td>

            <td>{{ eventresource.geo }}</td>

            <td>{{ eventresource.capacity }}</td>

            <td>{{ eventresource.equipment }}</td>

            <td>{{ eventresource.bookingRules }}</td>

            <td>{{ eventresource.availabilitySchedule }}</td>

            <td>{{ eventresource.active }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('event_resource_show', {id: eventresource.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('event_resource_edit', {id: eventresource.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('event_resource_delete', {id: eventresource.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ eventresource.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'EventResource'|trans }} created successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
