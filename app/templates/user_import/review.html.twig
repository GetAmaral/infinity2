{% extends 'base.html.twig' %}

{% block title %}{{ 'user.import.review.title'|trans({}, 'user') }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <a href="{{ path('user_import_cancel') }}" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>{{ 'user.import.button.cancel'|trans({}, 'user') }}
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="infinity-card p-4">
                <h1 class="mb-4">
                    <i class="bi bi-eye me-2"></i>
                    {{ 'user.import.review.title'|trans({}, 'user') }}
                </h1>

                {% if organization %}
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-building me-2"></i>
                        <strong>{{ 'user.import.organization_label'|trans({}, 'user') }}:</strong> {{ organization.name }}
                    </div>
                {% endif %}

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card bg-success bg-opacity-10 border-success">
                            <div class="card-body">
                                <h5 class="card-title text-success">
                                    <i class="bi bi-check-circle me-2"></i>{{ 'user.import.review.valid_users'|trans({}, 'user') }}
                                </h5>
                                <p class="display-4 fw-bold text-success mb-0">{{ total_users }}</p>
                                <small class="text-muted">{{ 'user.import.review.ready_to_import'|trans({}, 'user') }}</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-danger bg-opacity-10 border-danger">
                            <div class="card-body">
                                <h5 class="card-title text-danger">
                                    <i class="bi bi-x-circle me-2"></i>{{ 'user.import.review.errors'|trans({}, 'user') }}
                                </h5>
                                <p class="display-4 fw-bold text-danger mb-0">{{ total_errors }}</p>
                                <small class="text-muted">{{ 'user.import.review.rows_with_errors'|trans({}, 'user') }}</small>
                            </div>
                        </div>
                    </div>
                </div>

                {% if total_errors > 0 %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <h4 class="alert-heading">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>{{ 'user.import.review.errors_found'|trans({}, 'user') }}
                        </h4>
                        <hr>
                        <p class="mb-2">{{ 'user.import.review.errors_description'|trans({}, 'user') }}</p>
                        <p class="mb-0">
                            <strong>{{ 'user.import.review.error_actions'|trans({}, 'user') }}</strong>
                        </p>
                        <ul class="mb-0 mt-2">
                            <li>{{ 'user.import.review.error_action_fix'|trans({}, 'user') }}</li>
                            <li>{{ 'user.import.review.error_action_continue'|trans({}, 'user') }}</li>
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                    <div class="card border-danger mb-4">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0"><i class="bi bi-bug me-2"></i>{{ 'user.import.review.errors_table_title'|trans({'%count%': total_errors}, 'user') }}</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 60px;">{{ 'user.import.review.row'|trans({}, 'user') }}</th>
                                            <th>{{ 'user.email'|trans({}, 'user') }}</th>
                                            <th>{{ 'user.name'|trans({}, 'user') }}</th>
                                            <th>{{ 'user.roles'|trans({}, 'user') }}</th>
                                            <th>{{ 'user.import.review.errors'|trans({}, 'user') }}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for error in errors %}
                                            <tr>
                                                <td><span class="badge bg-danger">{{ error.row }}</span></td>
                                                <td><code>{{ error.data.email ?? 'N/A' }}</code></td>
                                                <td>{{ error.data.name ?? 'N/A' }}</td>
                                                <td>
                                                    {% if error.data.roles is not empty %}
                                                        {{ error.data.roles|join(', ') }}
                                                    {% else %}
                                                        <span class="text-muted">-</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <ul class="mb-0 text-danger">
                                                        {% for errorMsg in error.errors %}
                                                            <li>{{ errorMsg }}</li>
                                                        {% endfor %}
                                                    </ul>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                {% endif %}

                {% if total_users > 0 %}
                    <div class="card border-success mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="bi bi-check2-all me-2"></i>{{ 'user.import.review.valid_users_table_title'|trans({'%count%': total_users}, 'user') }}</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 60px;">{{ 'user.import.review.row'|trans({}, 'user') }}</th>
                                            <th>{{ 'user.email'|trans({}, 'user') }}</th>
                                            <th>{{ 'user.name'|trans({}, 'user') }}</th>
                                            <th>{{ 'user.roles'|trans({}, 'user') }}</th>
                                            <th>{{ 'user.form.openai_api_key'|trans({}, 'user') }}</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for user in users %}
                                            <tr>
                                                <td><span class="badge bg-success">{{ user.row }}</span></td>
                                                <td><code>{{ user.data.email }}</code></td>
                                                <td>{{ user.data.name }}</td>
                                                <td>
                                                    {% if user.data.roles is not empty %}
                                                        {% for role in user.data.roles %}
                                                            <span class="badge bg-primary">{{ role }}</span>
                                                        {% endfor %}
                                                    {% else %}
                                                        <span class="text-muted">{{ 'user.import.review.no_roles'|trans({}, 'user') }}</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if user.data.openAiApiKey %}
                                                        <i class="bi bi-check-circle text-success"></i>
                                                    {% else %}
                                                        <span class="text-muted">-</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle me-1"></i>{{ 'user.import.review.verified_status'|trans({}, 'user') }}
                                                    </span>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class="d-flex gap-2 mt-4">
                    <a href="{{ path('user_import_cancel') }}" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>{{ 'user.import.button.cancel'|trans({}, 'user') }}
                    </a>
                    <a href="{{ path('user_import_upload') }}" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-counterclockwise me-2"></i>{{ 'user.import.button.upload_different'|trans({}, 'user') }}
                    </a>
                    {% if total_users > 0 %}
                        <form method="post" action="{{ path('user_import_confirm') }}" class="ms-auto">
                            <button type="submit" class="btn infinity-btn-primary btn-lg">
                                <i class="bi bi-download me-2"></i>{{ 'user.import.button.import'|trans({'%count%': total_users}, 'user') }}
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
