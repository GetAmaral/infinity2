<turbo-stream action="prepend" target="holiday-list">
    <template>
        <tr id="holiday-{{ holiday.id }}">

            <td>{{ holiday.name }}</td>

            <td>{{ holiday.organization }}</td>

            <td>{{ holiday.calendar }}</td>

            <td>{{ holiday.event }}</td>

            <td>{{ holiday.date }}</td>

            <td>{{ holiday.description }}</td>

            <td>{{ holiday.blockSchedule }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('holiday_show', {id: holiday.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('holiday_edit', {id: holiday.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('holiday_delete', {id: holiday.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ holiday.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'Holiday'|trans }} created successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
