<turbo-stream action="replace" target="holidaytemplate-{{ holidaytemplate.id }}">
    <template>
        <tr id="holidaytemplate-{{ holidaytemplate.id }}">

            <td>{{ holidaytemplate.name }}</td>

            <td>{{ holidaytemplate.date }}</td>

            <td>{{ holidaytemplate.recurrenceInterval }}</td>

            <td>{{ holidaytemplate.recurrenceFrequency }}</td>

            <td>{{ holidaytemplate.country }}</td>

            <td>{{ holidaytemplate.city }}</td>

            <td>{{ holidaytemplate.blockSchedule }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('holiday_template_show', {id: holidaytemplate.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('holiday_template_edit', {id: holidaytemplate.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('holiday_template_delete', {id: holidaytemplate.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ holidaytemplate.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'HolidayTemplate'|trans }} updated successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
