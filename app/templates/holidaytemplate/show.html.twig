{% extends 'base.html.twig' %}

{% block title %}{{ 'HolidayTemplate'|trans }} - {{ holidaytemplate }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2>
                            <i class="bi-circle me-2"></i>
                            {{ 'HolidayTemplate'|trans }} Details
                        </h2>
                        <div class="btn-group">
                            <a href="{{ path('holiday_template_edit', {id: holidaytemplate.id}) }}"
                               class="btn btn-warning">
                                <i class="bi bi-pencil me-1"></i>
                                {{ 'action.edit'|trans }}
                            </a>
                            <a href="{{ path('holiday_template_index') }}"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                {{ 'action.back'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-3">{{ 'Name'|trans }}</dt>
                        <dd class="col-sm-9">{{ holidaytemplate.name }}</dd>

                        <dt class="col-sm-3">{{ 'Date'|trans }}</dt>
                        <dd class="col-sm-9">{{ holidaytemplate.date }}</dd>

                        <dt class="col-sm-3">{{ 'RecurrenceInterval'|trans }}</dt>
                        <dd class="col-sm-9">{{ holidaytemplate.recurrenceInterval }}</dd>

                        <dt class="col-sm-3">{{ 'RecurrenceFrequency'|trans }}</dt>
                        <dd class="col-sm-9">{{ holidaytemplate.recurrenceFrequency }}</dd>

                        <dt class="col-sm-3">{{ 'Country'|trans }}</dt>
                        <dd class="col-sm-9">{{ holidaytemplate.country }}</dd>

                        <dt class="col-sm-3">{{ 'City'|trans }}</dt>
                        <dd class="col-sm-9">{{ holidaytemplate.city }}</dd>

                        <dt class="col-sm-3">{{ 'BlockSchedule'|trans }}</dt>
                        <dd class="col-sm-9">{{ holidaytemplate.blockSchedule }}</dd>

                        <dt class="col-sm-3">{{ 'field.created_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ holidaytemplate.createdAt|date('Y-m-d H:i:s') }}</dd>

                        <dt class="col-sm-3">{{ 'field.updated_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ holidaytemplate.updatedAt|date('Y-m-d H:i:s') }}</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form method="post"
                          action="{{ path('holiday_template_delete', {id: holidaytemplate.id}) }}"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ holidaytemplate.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>
                            {{ 'action.delete'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
