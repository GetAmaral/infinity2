{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.register'|trans }}{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="infinity-card p-4">
            <div class="text-center mb-4">
                <div class="d-inline-block p-3 rounded-circle mb-3" style="background: var(--infinity-ai-gradient);">
                    <i class="bi bi-person-plus text-white" style="font-size: 2.5rem;"></i>
                </div>
                <h2 class="text-gradient mb-2">{{ 'auth.create_account'|trans }}</h2>
                <p class="text-secondary">{{ 'auth.join_infinity'|trans }}</p>
            </div>

            <form method="post" action="{{ path('app_register') }}">
                <div class="mb-3">
                    <label for="name" class="form-label text-white">
                        <i class="bi bi-person me-1"></i>{{ 'auth.full_name'|trans }}
                    </label>
                    <input
                        type="text"
                        class="form-control"
                        id="name"
                        name="name"
                        value="{{ name ?? '' }}"
                        required
                        autofocus
                        style="background: var(--infinity-card-bg); border-color: rgba(255, 255, 255, 0.1); color: white;"
                    >
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label text-white">
                        <i class="bi bi-envelope me-1"></i>{{ 'auth.email'|trans }}
                    </label>
                    <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        value="{{ email ?? '' }}"
                        required
                        style="background: var(--infinity-card-bg); border-color: rgba(255, 255, 255, 0.1); color: white;"
                    >
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label text-white">
                        <i class="bi bi-lock me-1"></i>{{ 'auth.password'|trans }}
                    </label>
                    <input
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        required
                        minlength="8"
                        style="background: var(--infinity-card-bg); border-color: rgba(255, 255, 255, 0.1); color: white;"
                    >
                    <small class="text-muted">{{ 'auth.password_requirements'|trans }}</small>
                </div>

                <div class="mb-3">
                    <label for="confirm_password" class="form-label text-white">
                        <i class="bi bi-lock-fill me-1"></i>{{ 'auth.confirm_password'|trans }}
                    </label>
                    <input
                        type="password"
                        class="form-control"
                        id="confirm_password"
                        name="confirm_password"
                        required
                        minlength="8"
                        style="background: var(--infinity-card-bg); border-color: rgba(255, 255, 255, 0.1); color: white;"
                    >
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}">

                <button type="submit" class="btn infinity-btn-primary w-100 mb-3">
                    <i class="bi bi-person-check me-2"></i>{{ 'auth.create_account_button'|trans }}
                </button>

                <div class="text-center">
                    <p class="text-secondary mb-0">
                        {{ 'auth.already_have_account'|trans }}
                        <a href="{{ path('app_login') }}" class="text-neon text-decoration-none">
                            {{ 'auth.sign_in'|trans }}
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}