{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.login'|trans }}{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="infinity-card p-4">
            <div class="text-center mb-4">
                <div class="d-inline-block p-3 rounded-circle mb-3" style="background: var(--infinity-ai-gradient);">
                    <i class="bi bi-shield-lock text-white" style="font-size: 2.5rem;"></i>
                </div>
                <h2 class="text-gradient mb-2">{{ 'auth.welcome_back'|trans }}</h2>
                <p class="text-secondary">{{ 'auth.login_to_continue'|trans }}</p>
            </div>

            {% if error %}
                <div class="alert alert-danger border-0 rounded-3 mb-4" style="background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.3) !important; color: #ef4444;">
                    <i class="bi bi-exclamation-triangle me-2"></i>{{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" action="{{ path('app_login') }}" data-controller="form-navigation">
                <div class="mb-3">
                    <label for="email" class="form-label text-white">
                        <i class="bi bi-envelope me-1"></i>{{ 'auth.email'|trans }}
                    </label>
                    <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        value="{{ last_username }}"
                        required
                        autofocus
                        style="background: var(--infinity-card-bg); border-color: rgba(255, 255, 255, 0.1); color: white;"
                    >
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label text-white">
                        <i class="bi bi-lock me-1"></i>{{ 'auth.password'|trans }}
                    </label>
                    <input
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        required
                        style="background: var(--infinity-card-bg); border-color: rgba(255, 255, 255, 0.1); color: white;"
                    >
                </div>

                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me">
                    <label class="form-check-label text-secondary" for="remember_me">
                        {{ 'auth.remember_me'|trans }}
                    </label>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="btn infinity-btn-primary w-100 mb-3" data-allow-enter-submit>
                    <i class="bi bi-box-arrow-in-right me-2"></i>{{ 'auth.sign_in'|trans }}
                </button>

                <div class="text-center">
                    <p class="text-secondary mb-0">
                        {{ 'auth.no_account'|trans }}
                        <a href="{{ path('app_register') }}" class="text-neon text-decoration-none">
                            {{ 'auth.register_now'|trans }}
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}