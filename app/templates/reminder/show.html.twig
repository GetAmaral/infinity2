{% extends 'base.html.twig' %}

{% block title %}{{ 'Reminder'|trans }} - {{ reminder }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2>
                            <i class="bi-circle me-2"></i>
                            {{ 'Reminder'|trans }} Details
                        </h2>
                        <div class="btn-group">
                            <a href="{{ path('reminder_edit', {id: reminder.id}) }}"
                               class="btn btn-warning">
                                <i class="bi bi-pencil me-1"></i>
                                {{ 'action.edit'|trans }}
                            </a>
                            <a href="{{ path('reminder_index') }}"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                {{ 'action.back'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-3">{{ 'Name'|trans }}</dt>
                        <dd class="col-sm-9">{{ reminder.name }}</dd>

                        <dt class="col-sm-3">{{ 'Event'|trans }}</dt>
                        <dd class="col-sm-9">{{ reminder.event }}</dd>

                        <dt class="col-sm-3">{{ 'CommunicationMethod'|trans }}</dt>
                        <dd class="col-sm-9">{{ reminder.communicationMethod }}</dd>

                        <dt class="col-sm-3">{{ 'MinutesBeforeStart'|trans }}</dt>
                        <dd class="col-sm-9">{{ reminder.minutesBeforeStart }}</dd>

                        <dt class="col-sm-3">{{ 'Default'|trans }}</dt>
                        <dd class="col-sm-9">{{ reminder.default }}</dd>

                        <dt class="col-sm-3">{{ 'field.created_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ reminder.createdAt|date('Y-m-d H:i:s') }}</dd>

                        <dt class="col-sm-3">{{ 'field.updated_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ reminder.updatedAt|date('Y-m-d H:i:s') }}</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form method="post"
                          action="{{ path('reminder_delete', {id: reminder.id}) }}"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reminder.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>
                            {{ 'action.delete'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
