{% extends 'base.html.twig' %}

{% block title %}
    {% if reminder.id %}
        {{ 'action.edit'|trans }} {{ 'Reminder'|trans }}
    {% else %}
        {{ 'action.create'|trans }} {{ 'Reminder'|trans }}
    {% endif %}
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>
                        {% if reminder.id %}
                            <i class="bi bi-pencil me-2"></i>
                            {{ 'action.edit'|trans }} {{ 'Reminder'|trans }}
                        {% else %}
                            <i class="bi bi-plus-circle me-2"></i>
                            {{ 'action.create'|trans }} {{ 'Reminder'|trans }}
                        {% endif %}
                    </h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'data-turbo': 'true'}}) }}

                    {{ form_errors(form) }}


                    <div class="mb-3">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.minutesBeforeStart) }}
                        {{ form_widget(form.minutesBeforeStart) }}
                        {{ form_errors(form.minutesBeforeStart) }}

                    </div>

                    <div class="mb-3">
                        {{ form_label(form.default) }}
                        {{ form_widget(form.default) }}
                        {{ form_errors(form.default) }}

                    </div>


                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('reminder_index') }}"
                           class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>
                            {{ 'action.back'|trans }}
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>
                            {{ 'action.save'|trans }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
