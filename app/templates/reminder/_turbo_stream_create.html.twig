<turbo-stream action="prepend" target="reminder-list">
    <template>
        <tr id="reminder-{{ reminder.id }}">

            <td>{{ reminder.name }}</td>

            <td>{{ reminder.event }}</td>

            <td>{{ reminder.communicationMethod }}</td>

            <td>{{ reminder.minutesBeforeStart }}</td>

            <td>{{ reminder.default }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('reminder_show', {id: reminder.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('reminder_edit', {id: reminder.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('reminder_delete', {id: reminder.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reminder.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'Reminder'|trans }} created successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
