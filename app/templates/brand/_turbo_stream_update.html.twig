<turbo-stream action="replace" target="brand-{{ brand.id }}">
    <template>
        <tr id="brand-{{ brand.id }}">

            <td>{{ brand.name }}</td>

            <td>{{ brand.organization }}</td>

            <td>{{ brand.description }}</td>

            <td>{{ brand.logoUrl }}</td>

            <td>{{ brand.website }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('brand_show', {id: brand.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('brand_edit', {id: brand.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('brand_delete', {id: brand.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ brand.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'Brand'|trans }} updated successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
