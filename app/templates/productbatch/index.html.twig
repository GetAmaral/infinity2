{% extends 'base.html.twig' %}

{% block title %}{{ 'ProductBatchs'|trans }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi-circle me-2"></i>
            {{ 'ProductBatchs'|trans }}
        </h1>
        <a href="{{ path('product_batch_new') }}"
           class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>
            {{ 'action.create'|trans }}
        </a>
    </div>

    {# Search and Filter #}
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" data-turbo="true">
                <div class="row g-3">
                    <div class="col-md-6">
                        <input type="search"
                               name="q"
                               value="{{ app.request.query.get('q') }}"
                               class="form-control"
                               placeholder="{{ 'action.search'|trans }}...">
                    </div>

                    <div class="col-md-3">
                        <button type="submit" class="btn btn-secondary w-100">
                            <i class="bi bi-search me-1"></i>
                            {{ 'action.search'|trans }}
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {# Data Table #}
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'name', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Name'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'organization', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Organization'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'product', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Product'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'listPrice', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'ListPrice'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'costPrice', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'CostPrice'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'minimumPrice', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'MinimumPrice'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'maximumDiscount', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'MaximumDiscount'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'discountAmount', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'DiscountAmount'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'discountPercentage', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'DiscountPercentage'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'commissionRate', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'CommissionRate'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'commissionAmount', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'CommissionAmount'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'currency', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'Currency'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'exchangeRate', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'ExchangeRate'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'marginPercentage', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'MarginPercentage'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'stockQuantity', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'StockQuantity'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'reservedQuantity', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'ReservedQuantity'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'availableQuantity', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'AvailableQuantity'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>

                                <a href="{{ path('product_batch_index', {sort: 'expirationDate', direction: app.request.query.get('direction') == 'asc' ? 'desc' : 'asc'}) }}"
                                   data-turbo="true">
                                    {{ 'ExpirationDate'|trans }}
                                    <i class="bi bi-arrow-down-up"></i>
                                </a>

                            </th>

                            <th>{{ 'action.label'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody id="productbatch-list">
                        {% for item in items %}
                        <tr id="productbatch-{{ item.id }}">

                            <td>{{ item.name }}</td>

                            <td>{{ item.organization }}</td>

                            <td>{{ item.product }}</td>

                            <td>{{ item.listPrice }}</td>

                            <td>{{ item.costPrice }}</td>

                            <td>{{ item.minimumPrice }}</td>

                            <td>{{ item.maximumDiscount }}</td>

                            <td>{{ item.discountAmount }}</td>

                            <td>{{ item.discountPercentage }}</td>

                            <td>{{ item.commissionRate }}</td>

                            <td>{{ item.commissionAmount }}</td>

                            <td>{{ item.currency }}</td>

                            <td>{{ item.exchangeRate }}</td>

                            <td>{{ item.marginPercentage }}</td>

                            <td>{{ item.stockQuantity }}</td>

                            <td>{{ item.reservedQuantity }}</td>

                            <td>{{ item.availableQuantity }}</td>

                            <td>{{ item.expirationDate }}</td>

                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('product_batch_show', {id: item.id}) }}"
                                       class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('product_batch_edit', {id: item.id}) }}"
                                       class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post"
                                          action="{{ path('product_batch_delete', {id: item.id}) }}"
                                          class="d-inline"
                                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Pagination #}
            {% if items.haveToPaginate %}
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    {{ knp_pagination_render(items) }}
                </ul>
            </nav>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
