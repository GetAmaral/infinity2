{% extends 'base.html.twig' %}

{% block title %}{{ 'WorkingHour'|trans }} - {{ workinghour }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2>
                            <i class="bi-circle me-2"></i>
                            {{ 'WorkingHour'|trans }} Details
                        </h2>
                        <div class="btn-group">
                            <a href="{{ path('working_hour_edit', {id: workinghour.id}) }}"
                               class="btn btn-warning">
                                <i class="bi bi-pencil me-1"></i>
                                {{ 'action.edit'|trans }}
                            </a>
                            <a href="{{ path('working_hour_index') }}"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                {{ 'action.back'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-3">{{ 'Description'|trans }}</dt>
                        <dd class="col-sm-9">{{ workinghour.description }}</dd>

                        <dt class="col-sm-3">{{ 'Organization'|trans }}</dt>
                        <dd class="col-sm-9">{{ workinghour.organization }}</dd>

                        <dt class="col-sm-3">{{ 'Calendar'|trans }}</dt>
                        <dd class="col-sm-9">{{ workinghour.calendar }}</dd>

                        <dt class="col-sm-3">{{ 'Event'|trans }}</dt>
                        <dd class="col-sm-9">{{ workinghour.event }}</dd>

                        <dt class="col-sm-3">{{ 'DayOfWeek'|trans }}</dt>
                        <dd class="col-sm-9">{{ workinghour.dayOfWeek }}</dd>

                        <dt class="col-sm-3">{{ 'StartTime'|trans }}</dt>
                        <dd class="col-sm-9">{{ workinghour.startTime }}</dd>

                        <dt class="col-sm-3">{{ 'EndTime'|trans }}</dt>
                        <dd class="col-sm-9">{{ workinghour.endTime }}</dd>

                        <dt class="col-sm-3">{{ 'TimeZone'|trans }}</dt>
                        <dd class="col-sm-9">{{ workinghour.timeZone }}</dd>

                        <dt class="col-sm-3">{{ 'MinimalMinutesEventDuration'|trans }}</dt>
                        <dd class="col-sm-9">{{ workinghour.minimalMinutesEventDuration }}</dd>

                        <dt class="col-sm-3">{{ 'Notes'|trans }}</dt>
                        <dd class="col-sm-9">{{ workinghour.notes }}</dd>

                        <dt class="col-sm-3">{{ 'field.created_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ workinghour.createdAt|date('Y-m-d H:i:s') }}</dd>

                        <dt class="col-sm-3">{{ 'field.updated_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ workinghour.updatedAt|date('Y-m-d H:i:s') }}</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form method="post"
                          action="{{ path('working_hour_delete', {id: workinghour.id}) }}"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ workinghour.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>
                            {{ 'action.delete'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
