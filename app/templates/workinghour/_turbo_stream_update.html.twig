<turbo-stream action="replace" target="workinghour-{{ workinghour.id }}">
    <template>
        <tr id="workinghour-{{ workinghour.id }}">

            <td>{{ workinghour.description }}</td>

            <td>{{ workinghour.organization }}</td>

            <td>{{ workinghour.calendar }}</td>

            <td>{{ workinghour.event }}</td>

            <td>{{ workinghour.dayOfWeek }}</td>

            <td>{{ workinghour.startTime }}</td>

            <td>{{ workinghour.endTime }}</td>

            <td>{{ workinghour.timeZone }}</td>

            <td>{{ workinghour.minimalMinutesEventDuration }}</td>

            <td>{{ workinghour.notes }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('working_hour_show', {id: workinghour.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('working_hour_edit', {id: workinghour.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('working_hour_delete', {id: workinghour.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ workinghour.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'WorkingHour'|trans }} updated successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
