<turbo-stream action="replace" target="flag-{{ flag.id }}">
    <template>
        <tr id="flag-{{ flag.id }}">

            <td>{{ flag.name }}</td>

            <td>{{ flag.organization }}</td>

            <td>{{ flag.sentiment }}</td>

            <td>{{ flag.user }}</td>

            <td>{{ flag.contact }}</td>

            <td>{{ flag.company }}</td>

            <td>{{ flag.color }}</td>

            <td>{{ flag.icon }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('flag_show', {id: flag.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('flag_edit', {id: flag.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('flag_delete', {id: flag.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ flag.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'Flag'|trans }} updated successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
