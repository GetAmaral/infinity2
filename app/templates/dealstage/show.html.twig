{% extends 'base.html.twig' %}

{% block title %}{{ 'DealStage'|trans }} - {{ dealstage }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2>
                            <i class="bi-circle me-2"></i>
                            {{ 'DealStage'|trans }} Details
                        </h2>
                        <div class="btn-group">
                            <a href="{{ path('deal_stage_edit', {id: dealstage.id}) }}"
                               class="btn btn-warning">
                                <i class="bi bi-pencil me-1"></i>
                                {{ 'action.edit'|trans }}
                            </a>
                            <a href="{{ path('deal_stage_index') }}"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                {{ 'action.back'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-3">{{ 'PipelineStage'|trans }}</dt>
                        <dd class="col-sm-9">{{ dealstage.pipelineStage }}</dd>

                        <dt class="col-sm-3">{{ 'Organization'|trans }}</dt>
                        <dd class="col-sm-9">{{ dealstage.organization }}</dd>

                        <dt class="col-sm-3">{{ 'Deal'|trans }}</dt>
                        <dd class="col-sm-9">{{ dealstage.deal }}</dd>

                        <dt class="col-sm-3">{{ 'StartedAt'|trans }}</dt>
                        <dd class="col-sm-9">{{ dealstage.startedAt }}</dd>

                        <dt class="col-sm-3">{{ 'LastUpdatedAt'|trans }}</dt>
                        <dd class="col-sm-9">{{ dealstage.lastUpdatedAt }}</dd>

                        <dt class="col-sm-3">{{ 'EndedAt'|trans }}</dt>
                        <dd class="col-sm-9">{{ dealstage.endedAt }}</dd>

                        <dt class="col-sm-3">{{ 'Notes'|trans }}</dt>
                        <dd class="col-sm-9">{{ dealstage.notes }}</dd>

                        <dt class="col-sm-3">{{ 'DaysInStage'|trans }}</dt>
                        <dd class="col-sm-9">{{ dealstage.daysInStage }}</dd>

                        <dt class="col-sm-3">{{ 'field.created_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ dealstage.createdAt|date('Y-m-d H:i:s') }}</dd>

                        <dt class="col-sm-3">{{ 'field.updated_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ dealstage.updatedAt|date('Y-m-d H:i:s') }}</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form method="post"
                          action="{{ path('deal_stage_delete', {id: dealstage.id}) }}"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dealstage.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>
                            {{ 'action.delete'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
