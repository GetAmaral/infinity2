            </div>

            {# Pagination #}
            {% if items.haveToPaginate %}
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    {{ knp_pagination_render(items) }}
                </ul>
            </nav>
            {% endif %}
