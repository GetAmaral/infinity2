                    </thead>
                    <tbody id="event-list">
                        {% for item in items %}
                        <tr id="event-{{ item.id }}">

                            <td>{{ item.name }}</td>

                            <td>{{ item.organization }}</td>

                            <td>{{ item.calendar }}</td>

                            <td>{{ item.description }}</td>

                            <td>{{ item.location }}</td>

                            <td>{{ item.geo }}</td>

                            <td>{{ item.startTime }}</td>

                            <td>{{ item.endTime }}</td>

                            <td>{{ item.allDay }}</td>

                            <td>{{ item.eventStatus }}</td>

                            <td>{{ item.visibility }}</td>

                            <td>{{ item.priority }}</td>

                            <td>{{ item.recurrenceInterval }}</td>

                            <td>{{ item.recurrenceFrequency }}</td>

                            <td>{{ item.recurrenceEndDate }}</td>

                            <td>{{ item.recurrenceCount }}</td>

                            <td>{{ item.originalStartTime }}</td>

                            <td>{{ item.sequence }}</td>

                            <td>{{ item.parentEvent }}</td>

                            <td>{{ item.organizer }}</td>

                            <td>{{ item.hangoutLink }}</td>

                            <td>{{ item.conferenceData }}</td>

                            <td>{{ item.extendedProperties }}</td>

                            <td>{{ item.source }}</td>

                            <td>{{ item.notes }}</td>

                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('event_show', {id: item.id}) }}"
                                       class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('event_edit', {id: item.id}) }}"
                                       class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post"
                                          action="{{ path('event_delete', {id: item.id}) }}"
                                          class="d-inline"
                                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
