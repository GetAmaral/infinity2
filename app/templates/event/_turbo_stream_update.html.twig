<turbo-stream action="replace" target="event-{{ event.id }}">
    <template>
        <tr id="event-{{ event.id }}">

            <td>{{ event.name }}</td>

            <td>{{ event.organization }}</td>

            <td>{{ event.calendar }}</td>

            <td>{{ event.description }}</td>

            <td>{{ event.location }}</td>

            <td>{{ event.geo }}</td>

            <td>{{ event.startTime }}</td>

            <td>{{ event.endTime }}</td>

            <td>{{ event.allDay }}</td>

            <td>{{ event.eventStatus }}</td>

            <td>{{ event.visibility }}</td>

            <td>{{ event.priority }}</td>

            <td>{{ event.recurrenceInterval }}</td>

            <td>{{ event.recurrenceFrequency }}</td>

            <td>{{ event.recurrenceEndDate }}</td>

            <td>{{ event.recurrenceCount }}</td>

            <td>{{ event.originalStartTime }}</td>

            <td>{{ event.sequence }}</td>

            <td>{{ event.parentEvent }}</td>

            <td>{{ event.organizer }}</td>

            <td>{{ event.hangoutLink }}</td>

            <td>{{ event.conferenceData }}</td>

            <td>{{ event.extendedProperties }}</td>

            <td>{{ event.source }}</td>

            <td>{{ event.notes }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('event_show', {id: event.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('event_edit', {id: event.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('event_delete', {id: event.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'Event'|trans }} updated successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
