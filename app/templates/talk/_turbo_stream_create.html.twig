<turbo-stream action="prepend" target="talk-list">
    <template>
        <tr id="talk-{{ talk.id }}">

            <td>{{ talk.organization }}</td>

            <td>{{ talk.contact }}</td>

            <td>{{ talk.deal }}</td>

            <td>{{ talk.talkType }}</td>

            <td>{{ talk.dateStart }}</td>

            <td>{{ talk.dateLastMessage }}</td>

            <td>{{ talk.status }}</td>

            <td>{{ talk.summary }}</td>

            <td>{{ talk.subject }}</td>

            <td>{{ talk.outcome }}</td>

            <td>{{ talk.priority }}</td>

            <td>{{ talk.channel }}</td>

            <td>{{ talk.durationSeconds }}</td>

            <td>{{ talk.recordingUrl }}</td>

            <td>{{ talk.isArchived }}</td>

            <td>
                <div class="btn-group" role="group">
                    <a href="{{ path('talk_show', {id: talk.id}) }}"
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('talk_edit', {id: talk.id}) }}"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form method="post"
                          action="{{ path('talk_delete', {id: talk.id}) }}"
                          style="display: inline;"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ talk.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </td>
        </tr>
    </template>
</turbo-stream>

<turbo-stream action="update" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            {{ 'Talk'|trans }} created successfully!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </template>
</turbo-stream>
