{% extends 'base.html.twig' %}

{% block title %}{{ 'Talk'|trans }} - {{ talk }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2>
                            <i class="bi-circle me-2"></i>
                            {{ 'Talk'|trans }} Details
                        </h2>
                        <div class="btn-group">
                            <a href="{{ path('talk_edit', {id: talk.id}) }}"
                               class="btn btn-warning">
                                <i class="bi bi-pencil me-1"></i>
                                {{ 'action.edit'|trans }}
                            </a>
                            <a href="{{ path('talk_index') }}"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>
                                {{ 'action.back'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-3">{{ 'Organization'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.organization }}</dd>

                        <dt class="col-sm-3">{{ 'Contact'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.contact }}</dd>

                        <dt class="col-sm-3">{{ 'Deal'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.deal }}</dd>

                        <dt class="col-sm-3">{{ 'TalkType'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.talkType }}</dd>

                        <dt class="col-sm-3">{{ 'DateStart'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.dateStart }}</dd>

                        <dt class="col-sm-3">{{ 'DateLastMessage'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.dateLastMessage }}</dd>

                        <dt class="col-sm-3">{{ 'Status'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.status }}</dd>

                        <dt class="col-sm-3">{{ 'Summary'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.summary }}</dd>

                        <dt class="col-sm-3">{{ 'Subject'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.subject }}</dd>

                        <dt class="col-sm-3">{{ 'Outcome'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.outcome }}</dd>

                        <dt class="col-sm-3">{{ 'Priority'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.priority }}</dd>

                        <dt class="col-sm-3">{{ 'Channel'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.channel }}</dd>

                        <dt class="col-sm-3">{{ 'DurationSeconds'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.durationSeconds }}</dd>

                        <dt class="col-sm-3">{{ 'RecordingUrl'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.recordingUrl }}</dd>

                        <dt class="col-sm-3">{{ 'IsArchived'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.isArchived }}</dd>

                        <dt class="col-sm-3">{{ 'field.created_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.createdAt|date('Y-m-d H:i:s') }}</dd>

                        <dt class="col-sm-3">{{ 'field.updated_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ talk.updatedAt|date('Y-m-d H:i:s') }}</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form method="post"
                          action="{{ path('talk_delete', {id: talk.id}) }}"
                          onsubmit="return confirm('{{ 'action.confirm_delete'|trans }}');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ talk.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>
                            {{ 'action.delete'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
