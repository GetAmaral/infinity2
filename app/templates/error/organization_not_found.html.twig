{% extends 'base.html.twig' %}

{% block title %}{{ 'error.organization.not.found'|trans }}{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5">
    <div class="col-sm-10 col-md-8 col-lg-6">
        <div class="luminai-card p-5 text-center">
            <div class="mb-4">
                <i class="bi bi-building-slash text-danger" style="font-size: 4rem;"></i>
            </div>

            <h2 class="text-danger mb-3">{{ 'error.organization.not.found'|trans }}</h2>

            <p class="text-secondary mb-4">
                {{ 'error.organization.not.found.description'|trans({'%slug%': slug}) }}
            </p>

            <div class="alert alert-warning border-0 rounded-3 mb-4" style="background: rgba(234, 179, 8, 0.1); border: 1px solid rgba(234, 179, 8, 0.3) !important; color: #eab308;">
                <i class="bi bi-info-circle me-2"></i>
                {{ 'error.organization.not.found.help'|trans }}
            </div>

            <div class="d-flex gap-2 justify-content-center">
                <a href="{{ app.request.scheme ~ '://' ~ rootDomain }}" class="btn luminai-btn-primary">
                    <i class="bi bi-house me-2"></i>{{ 'error.go.to.home'|trans }}
                </a>
                <a href="javascript:history.back()" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>{{ 'error.go.back'|trans }}
                </a>
            </div>
        </div>
    </div>
</div>

<style>
/* Light theme support */
[data-theme="light"] .alert-warning {
    background: rgba(234, 179, 8, 0.15) !important;
    border-color: rgba(234, 179, 8, 0.5) !important;
    color: #92400e !important;
}

[data-theme="light"] .text-danger {
    color: #dc2626 !important;
}
</style>
{% endblock %}
