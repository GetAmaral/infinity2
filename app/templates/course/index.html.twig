{% extends '_base_entity_list.html.twig' %}

{#
 # Data-Bind Template System for Course
 # ============================================
 # This template extends the base entity list system with Grid/List/Table views
 # and uses data-bind for client-side rendering via the view-toggle controller.
 #
 # Example API response structure:
 # {
 #   "id": "uuid-here",
{% for property in listProperties|slice(0, 5) %}
 #   "{{ property.name }}": "{{ property.type == 'string' ? 'Example Value' : (property.type == 'boolean' ? 'true' : (property.isRelationship ? '{"id": "uuid", "display": "Related Entity"}' : 'value')) }}",
{% endfor %}
 #   "createdAt": "2025-01-01T00:00:00+00:00",
 #   "createdAtFormatted": "Jan 01, 2025",
 #   "updatedAtFormatted": "Jan 15, 2025"
 # }
#}

{# Customize page icon #}
{% block page_icon %}<i class="bi bi-book text-neon fs-2 me-3"></i>{% endblock %}

{# Grid View Template #}
{% block grid_view_item_template %}
    <div class="col">
        <div class="luminai-card h-100 p-4" style="cursor: pointer;"
             onclick="window.location.href='/course/' + this.closest('[data-entity-id]').dataset.entityId">

            {# Header with dropdown and status badge #}
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div onclick="event.stopPropagation();" class="dropdown card-dropdown">
                    {{ button_dropdown_toggle() }}
                    <ul class="dropdown-menu dropdown-menu-dark" style="background: var(--luminai-dark-surface); z-index: 1060;">
                        <li><a class="dropdown-item" onclick="window.location.href='/course/'+this.closest('[data-entity-id]').dataset.entityId"><i class="bi bi-eye me-2"></i>{{ 'common.action.view.details'|trans }}</a></li>
                        <li>{{ button_edit('{entityId}', '/course/{entityId}/edit', null, 'messages', label='button.edit') }}</li>
                        <li><hr class="dropdown-divider"></li>
                        <li>{{ button_delete('{entityId}', '/course/{entityId}/delete', 'confirm.delete.entity', label='button.delete') }}</li>
                    </ul>
                </div>
                <span class="badge bg-success" data-bind-if="active">
                    <i class="bi bi-check-circle-fill me-1"></i>Active
                </span>
                <span class="badge bg-secondary" data-bind-if="!active">
                    <i class="bi bi-x-circle me-1"></i>Inactive
                </span>
            </div>

            {# Course Icon and Title #}
            <div class="d-flex align-items-start mb-3">
                <div class="rounded-3 d-flex align-items-center justify-content-center me-3 flex-shrink-0"
                     style="width: 56px; height: 56px; background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
                    <i class="bi bi-book text-white fs-4"></i>
                </div>
                <div class="flex-grow-1">
                    <h5 class="mb-2 text-white" data-bind="name" data-bind-text></h5>
                    <p class="text-muted mb-0 small" style="font-size: 0.85rem; line-height: 1.4;" data-bind="description" data-bind-text></p>
                </div>
            </div>

            {# Course Stats #}
            <div class="d-flex flex-wrap gap-3 mb-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-clock text-info me-2"></i>
                    <span class="small text-muted" data-bind="totalLengthFormatted" data-bind-text></span>
                </div>
                <div class="d-flex align-items-center">
                    <i class="bi bi-layers text-primary me-2"></i>
                    <span class="small text-muted">
                        <span data-bind="modulesCount" data-bind-text></span> <span data-bind-if="modulesCount < 2">{{ 'course.module'|trans({}, 'course') }}</span><span data-bind-if="modulesCount > 1">{{ 'course.modules'|trans({}, 'course') }}</span>
                    </span>
                </div>
                <div class="d-flex align-items-center">
                    <i class="bi bi-people text-success me-2"></i>
                    <span class="small text-muted">
                        <span data-bind="enrolledStudentsCount" data-bind-text></span> <span data-bind-if="enrolledStudentsCount < 2">{{ 'student.singular'|trans({}, 'course') }}</span><span data-bind-if="enrolledStudentsCount > 1">{{ 'course.students'|trans({}, 'course') }}</span>
                    </span>
                </div>
            </div>

            {# Footer with instructor and date #}
            <div class="mt-auto pt-3 border-top" style="border-color: rgba(255, 255, 255, 0.1) !important;">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-circle text-muted me-2"></i>
                        <small class="text-muted" data-bind="ownerName" data-bind-text></small>
                    </div>
                    <small class="text-muted">
                        <i class="bi bi-calendar-event me-1"></i>
                        <span data-bind="releaseDateFormatted" data-bind-text data-bind-if="releaseDateFormatted"></span>
                        <span data-bind="createdAtFormatted" data-bind-text data-bind-if="!releaseDateFormatted"></span>
                    </small>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{# List View Template #}
{% block list_view_item_template %}
    <div class="luminai-card mb-3 p-3">
        <div class="d-flex align-items-center gap-3">
            <div onclick="event.stopPropagation();" class="dropdown card-dropdown">
                {{ button_dropdown_toggle() }}
                <ul class="dropdown-menu dropdown-menu-dark" style="background: var(--luminai-dark-surface); z-index: 1060;">
                    <li><a class="dropdown-item" onclick="window.location.href='/course/'+this.closest('[data-entity-id]').dataset.entityId"><i class="bi bi-eye me-2"></i>{{ 'common.action.view.details'|trans }}</a></li>
                    <li>{{ button_edit('{entityId}', '/course/{entityId}/edit', null, 'messages') }}</li>
                    <li><hr class="dropdown-divider"></li>
                    <li>{{ button_delete('{entityId}', '/course/{entityId}/delete', 'confirm.delete.entity') }}</li>
                </ul>
            </div>

            <div class="d-flex align-items-center flex-grow-1" style="cursor: pointer;"
                 onclick="window.location.href='/course/' + this.closest('[data-entity-id]').dataset.entityId">
                <div class="rounded-3 d-flex align-items-center justify-content-center me-3 flex-shrink-0"
                     style="width: 48px; height: 48px; background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
                    <i class="bi bi-book text-white fs-5"></i>
                </div>

                <div class="flex-grow-1">
                    <div class="d-flex align-items-center justify-content-between mb-1">
                        <div class="d-flex align-items-center gap-2">
                            <h6 class="mb-0 text-white" data-bind="name" data-bind-text></h6>
                            <span class="badge bg-success" data-bind-if="active">
                                <i class="bi bi-check-circle-fill"></i>
                            </span>
                            <span class="badge bg-secondary" data-bind-if="!active">
                                <i class="bi bi-x-circle"></i>
                            </span>
                        </div>
                    </div>

                    <div class="d-flex align-items-center gap-4 flex-wrap">
                        <small class="text-muted">
                            <i class="bi bi-clock text-info me-1"></i>
                            <span data-bind="totalLengthFormatted" data-bind-text></span>
                        </small>
                        <small class="text-muted">
                            <i class="bi bi-layers text-primary me-1"></i>
                            <span data-bind="modulesCount" data-bind-text></span> <span data-bind-if="modulesCount < 2">{{ 'course.module'|trans({}, 'course') }}</span><span data-bind-if="modulesCount > 1">{{ 'course.modules'|trans({}, 'course') }}</span>
                        </small>
                        <small class="text-muted">
                            <i class="bi bi-people text-success me-1"></i>
                            <span data-bind="enrolledStudentsCount" data-bind-text></span> <span data-bind-if="enrolledStudentsCount < 2">{{ 'student.singular'|trans({}, 'course') }}</span><span data-bind-if="enrolledStudentsCount > 1">{{ 'course.students'|trans({}, 'course') }}</span>
                        </small>
                        <small class="text-muted">
                            <i class="bi bi-person-circle me-1"></i>
                            <span data-bind="ownerName" data-bind-text></span>
                        </small>
                        <small class="text-muted">
                            <i class="bi bi-calendar-event me-1"></i>
                            <span data-bind="releaseDateFormatted" data-bind-text data-bind-if="releaseDateFormatted"></span>
                            <span data-bind="createdAtFormatted" data-bind-text data-bind-if="!releaseDateFormatted"></span>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{# Table Headers #}
{% block table_headers %}
    <th style="width: 60px;">{{ 'common.label.actions'|trans }}</th>
{% for property in listProperties %}
    <th{% if property.sortable %} data-sort-field="{{ property.name }}"{% endif %}{% if property.type == 'boolean' %} data-field-type="boolean"{% endif %}{% if property.type in ['datetime', 'datetime_immutable', 'date'] %} data-field-type="date"{% endif %}>
        {{ property.label|trans }}
    </th>
{% endfor %}
{% endblock %}

{# Table Row Template #}
{% block table_view_row_template %}
    <tr style="cursor: pointer;"
        onclick="window.location.href='/course/' + this.closest('[data-entity-id]').dataset.entityId">
        <td onclick="event.stopPropagation();">
            <div class="dropdown card-dropdown">
                {{ button_dropdown_toggle() }}
                <ul class="dropdown-menu dropdown-menu-dark" style="background: var(--luminai-dark-surface); z-index: 1060;">
                    <li><a class="dropdown-item" onclick="window.location.href='/course/'+this.closest('[data-entity-id]').dataset.entityId"><i class="bi bi-eye me-2"></i>{{ 'common.action.view.details'|trans }}</a></li>
                    <li>{{ button_edit('{entityId}', '/course/{entityId}/edit', null, 'messages') }}</li>
                    <li><hr class="dropdown-divider"></li>
                    <li>{{ button_delete('{entityId}', '/course/{entityId}/delete', 'confirm.delete.entity') }}</li>
                </ul>
            </div>
        </td>
{% for property in listProperties %}
        <td>
{% if property.isRelationship %}
            <span data-bind="{{ property.name }}.display" data-bind-text></span>
{% elseif property.type == 'boolean' %}
            <span class="badge bg-success" data-bind-if="{{ property.name }}">
                <i class="bi bi-check-circle me-1"></i>{{ 'common.yes'|trans }}
            </span>
            <span class="badge bg-secondary" data-bind-if="!{{ property.name }}">
                <i class="bi bi-x-circle me-1"></i>{{ 'common.no'|trans }}
            </span>
{% else %}
            <span data-bind="{{ property.name }}" data-bind-text></span>
{% endif %}
        </td>
{% endfor %}
    </tr>
{% endblock %}
