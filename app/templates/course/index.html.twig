{% extends '_base_entity_list.html.twig' %}

{# Macro for course action buttons - reusable for grid, list and table views #}
{% macro courseActions(course, dropdownOnly) %}
    {% set dropdownOnly = dropdownOnly|default(false) %}

    {% if not dropdownOnly %}
        <div class="d-none d-lg-flex gap-1 align-items-center">
            <a href="{{ path('course_show', {id: course.id}) }}"
               class="btn btn-sm btn-outline-light"
               data-bs-toggle="tooltip"
               data-bs-placement="top"
               data-bs-title="{{ 'course.view_details'|trans }}">
                <i class="bi bi-eye"></i>
            </a>
            {% if is_granted('COURSE_EDIT', course) %}
                <button type="button"
                        class="btn btn-sm btn-outline-light"
                        data-controller="modal-opener"
                        data-modal-opener-url-value="{{ path('course_edit', {id: course.id}) }}"
                        data-action="click->modal-opener#open"
                        data-bs-toggle="tooltip"
                        data-bs-placement="top"
                        data-bs-title="{{ 'button.edit'|trans }}">
                    <i class="bi bi-pencil"></i>
                </button>
            {% endif %}
            {% if is_granted('COURSE_DELETE', course) %}
                <button type="button"
                        class="btn btn-sm btn-outline-danger"
                        data-delete-url="{{ path('course_delete', {id: course.id}) }}"
                        data-entity-name="{{ course.name }}"
                        data-csrf-token="{{ csrf_token('delete-course-' ~ course.id) }}"
                        data-bs-toggle="tooltip"
                        data-bs-placement="top"
                        data-bs-title="{{ 'button.delete'|trans }}">
                    <i class="bi bi-trash"></i>
                </button>
            {% endif %}
        </div>
    {% endif %}

    <div class="dropdown {{ dropdownOnly ? '' : 'd-lg-none' }}">
        <button class="btn btn-sm btn-outline-light" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-three-dots-vertical"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark" style="background: var(--infinity-dark-surface); z-index: 1050;">
            <li>
                <a class="dropdown-item" href="{{ path('course_show', {id: course.id}) }}">
                    <i class="bi bi-eye me-2"></i>{{ 'course.view_details'|trans }}
                </a>
            </li>
            {% if is_granted('COURSE_EDIT', course) %}
            <li>
                <button type="button"
                        class="dropdown-item"
                        data-controller="modal-opener"
                        data-modal-opener-url-value="{{ path('course_edit', {id: course.id}) }}"
                        data-action="click->modal-opener#open">
                    <i class="bi bi-pencil me-2"></i>{{ 'button.edit'|trans }}
                </button>
            </li>
            {% endif %}
            {% if is_granted('COURSE_DELETE', course) %}
            <li><hr class="dropdown-divider"></li>
            <li>
                <button type="button"
                        class="dropdown-item text-danger"
                        data-delete-url="{{ path('course_delete', {id: course.id}) }}"
                        data-entity-name="{{ course.name }}"
                        data-csrf-token="{{ csrf_token('delete-course-' ~ course.id) }}">
                    <i class="bi bi-trash me-2"></i>{{ 'button.delete'|trans }}
                </button>
            </li>
            {% endif %}
        </ul>
    </div>
{% endmacro %}

{% import _self as macros %}

{# Grid View Template #}
{% block grid_view_item %}
    <div class="col" data-entity-id="{{ entity.id }}">
        <div class="infinity-card h-100 p-4" style="cursor: pointer;" onclick="window.location.href='{{ path('course_show', {id: entity.id}) }}'">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                         style="width: 48px; height: 48px; background: var(--infinity-ai-gradient);">
                        <i class="bi bi-book text-white fs-5"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 text-white">{{ entity.name }}</h5>
                        <div class="text-muted" style="font-size: 0.85rem;">
                            <span class="badge {{ entity.active ? 'bg-success' : 'bg-secondary' }} me-1">
                                {{ entity.active ? 'course.status.active'|trans : 'course.status.inactive'|trans }}
                            </span>
                        </div>
                    </div>
                </div>
                <div onclick="event.stopPropagation();">
                    {{ macros.courseActions(entity, true) }}
                </div>
            </div>
            {% if entity.description %}
                <p class="text-muted mb-3" style="font-size: 0.9rem;">{{ entity.description|length > 100 ? entity.description|slice(0, 100) ~ '...' : entity.description }}</p>
            {% endif %}
            <div class="d-flex justify-content-between align-items-center mt-auto pt-3 border-top" style="border-color: rgba(255, 255, 255, 0.1) !important;">
                <div class="text-muted" style="font-size: 0.85rem;">
                    <i class="bi bi-collection me-1"></i>{{ entity.lecturesCount }} {{ 'course.lectures'|trans }}
                </div>
                <div class="text-muted" style="font-size: 0.85rem;">
                    <i class="bi bi-person me-1"></i>{{ entity.ownerName }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{# List View Template #}
{% block list_view_item %}
    <div class="infinity-card mb-3 p-3" data-entity-id="{{ entity.id }}">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center flex-grow-1" style="cursor: pointer;" onclick="window.location.href='{{ path('course_show', {id: entity.id}) }}'">
                <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                     style="width: 40px; height: 40px; background: var(--infinity-ai-gradient);">
                    <i class="bi bi-book text-white"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="d-flex align-items-center mb-1">
                        <h6 class="mb-0 text-white me-2">{{ entity.name }}</h6>
                        <span class="badge {{ entity.active ? 'bg-success' : 'bg-secondary' }} me-2">
                            {{ entity.active ? 'course.status.active'|trans : 'course.status.inactive'|trans }}
                        </span>
                    </div>
                    <div class="text-muted" style="font-size: 0.85rem;">
                        <i class="bi bi-collection me-1"></i>{{ entity.lecturesCount }} {{ 'course.lectures'|trans }}
                        <span class="mx-2">â€¢</span>
                        <i class="bi bi-person me-1"></i>{{ entity.ownerName }}
                    </div>
                </div>
            </div>
            <div onclick="event.stopPropagation();">
                {{ macros.courseActions(entity, false) }}
            </div>
        </div>
    </div>
{% endblock %}

{# Table View Template #}
{% block table_view_headers %}
    <th>{{ 'course.name'|trans }}</th>
    <th class="d-none d-md-table-cell">{{ 'course.status'|trans }}</th>
    <th class="d-none d-lg-table-cell">{{ 'course.lectures_count'|trans }}</th>
    <th class="d-none d-lg-table-cell">{{ 'course.owner'|trans }}</th>
    <th class="text-end">{{ 'table.actions'|trans }}</th>
{% endblock %}

{% block table_view_row %}
    <tr data-entity-id="{{ entity.id }}" style="cursor: pointer;" onclick="window.location.href='{{ path('course_show', {id: entity.id}) }}'">
        <td>
            <div class="d-flex align-items-center">
                <div class="rounded-circle d-flex align-items-center justify-content-center me-2"
                     style="width: 32px; height: 32px; background: var(--infinity-ai-gradient);">
                    <i class="bi bi-book text-white"></i>
                </div>
                <span class="text-white">{{ entity.name }}</span>
            </div>
        </td>
        <td class="d-none d-md-table-cell">
            <span class="badge {{ entity.active ? 'bg-success' : 'bg-secondary' }}">
                {{ entity.active ? 'course.status.active'|trans : 'course.status.inactive'|trans }}
            </span>
        </td>
        <td class="d-none d-lg-table-cell text-muted">
            <i class="bi bi-collection me-1"></i>{{ entity.lecturesCount }}
        </td>
        <td class="d-none d-lg-table-cell text-muted">
            {{ entity.ownerName }}
        </td>
        <td class="text-end" onclick="event.stopPropagation();">
            {{ macros.courseActions(entity, false) }}
        </td>
    </tr>
{% endblock %}
