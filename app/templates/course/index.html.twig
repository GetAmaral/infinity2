{% extends '_base_entity_list.html.twig' %}

{#
 # Data-Bind Template System
 # =======================
 # Templates use data-bind-* attributes to populate content from API JSON.
 #
 # Available data-bind types:
 # - data-bind="field" data-bind-text          → Sets textContent
 # - data-bind="field" data-bind-html          → Sets innerHTML
 # - data-bind="field" data-bind-href          → Sets href attribute
 # - data-bind="field" data-bind-src           → Sets src attribute
 # - data-bind="field" data-bind-attr="name"   → Sets custom attribute
 # - data-bind="field" data-bind-if="condition" → Conditionally shows element
 #
 # Conditional expressions:
 # - data-bind-if="active"         → Show if active is truthy
 # - data-bind-if="!active"        → Show if active is falsy
 # - data-bind-if="count>0"        → Show if count > 0
 # - data-bind-if="count<10"       → Show if count < 10
 #
 # Nested properties use dot notation:
 # - data-bind="organization.name"
 #
 # Example API response for Course:
 # {
 #   "id": "uuid-here",
 #   "name": "Introduction to PHP",
 #   "description": "Learn PHP basics",
 #   "active": true,
 #   "totalLengthSeconds": 3600,
 #   "totalLengthFormatted": "01:00",
 #   "lecturesCount": 12,
 #   "enrolledStudentsCount": 45,
 #   "ownerName": "John Doe",
 #   "releaseDateFormatted": "Jan 15, 2025",
 #   "createdAtFormatted": "Dec 10, 2024"
 # }
#}

{# Grid View Template #}
{% block grid_view_item_template %}
    <div class="col">
        <div class="luminai-card h-100 p-4" style="cursor: pointer;" onclick="window.location.href='/course/' + this.closest('[data-entity-id]').dataset.entityId">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div onclick="event.stopPropagation();" class="dropdown me-3">
                    {{ button_dropdown_toggle() }}
                    <ul class="dropdown-menu dropdown-menu-dark" style="background: var(--luminai-dark-surface); z-index: 1060;">
                        <li><a class="dropdown-item" onclick="window.location.href='/course/'+this.closest('[data-entity-id]').dataset.entityId"><i class="bi bi-eye me-2"></i>{{ 'common.action.view.details'|trans }}</a></li>
                        <li>{{ button_edit('{entityId}', '/course/{entityId}/edit', null, 'messages', label='button.edit') }}</li>
                        <li><hr class="dropdown-divider"></li>
                        <li>{{ button_delete('{entityId}', '/course/{entityId}/delete', 'confirm.delete.entity', label='button.delete') }}</li>
                    </ul>
                </div>
                <div class="d-flex align-items-center flex-grow-1">
                    <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                         style="width: 48px; height: 48px; background: var(--luminai-ai-gradient);">
                        <i class="bi bi-book text-white fs-5"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h5 class="mb-1 text-white" data-bind="name" data-bind-text></h5>
                        <div class="d-flex gap-1 flex-wrap">
                            <span class="badge bg-success" data-bind-if="active">{{ 'common.status.active'|trans }}</span>
                            <span class="badge bg-secondary" data-bind-if="!active">{{ 'common.status.inactive'|trans }}</span>
                            <span class="badge bg-info" data-bind-if="totalLengthSeconds>0">
                                <i class="bi bi-clock me-1"></i><span data-bind="totalLengthFormatted" data-bind-text></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <p class="text-muted mb-3" style="font-size: 0.9rem;" data-bind="description" data-bind-if="description">
                <span data-bind="description" data-bind-text></span>
            </p>
            <p class="text-muted fst-italic mb-3" style="font-size: 0.9rem;" data-bind="description" data-bind-if="!description">
                {{ 'empty.no.description'|trans }}
            </p>
            <div class="mt-auto">
                <div class="d-flex gap-3 mb-2">
                    <div class="text-muted" style="font-size: 0.85rem;">
                        <i class="bi bi-collection me-1 text-neon"></i><span data-bind="lecturesCount" data-bind-text></span> {{ 'course.lectures'|trans({}, 'course') }}
                    </div>
                    <div class="text-muted" style="font-size: 0.85rem;">
                        <i class="bi bi-people me-1 text-success"></i><span data-bind="enrolledStudentsCount" data-bind-text></span> {{ 'course.students'|trans({}, 'course') }}
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center pt-2 border-top" style="border-color: rgba(255, 255, 255, 0.1) !important; font-size: 0.8rem;">
                    <span class="text-muted">
                        <i class="bi bi-person me-1"></i><span data-bind="ownerName" data-bind-text></span>
                    </span>
                    <span class="text-muted">
                        <span data-bind="releaseDateFormatted" data-bind-if="releaseDateFormatted">
                            <i class="bi bi-calendar-event me-1"></i><span data-bind="releaseDateFormatted" data-bind-text></span>
                        </span>
                        <span data-bind="createdAtFormatted" data-bind-if="!releaseDateFormatted">
                            <i class="bi bi-calendar-plus me-1"></i><span data-bind="createdAtFormatted" data-bind-text></span>
                        </span>
                    </span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{# List View Template #}
{% block list_view_item_template %}
    <div class="luminai-card mb-3 p-3">
        <div class="d-flex align-items-center">
            <div onclick="event.stopPropagation();" class="dropdown me-3">
                {{ button_dropdown_toggle() }}
                <ul class="dropdown-menu dropdown-menu-dark" style="background: var(--luminai-dark-surface); z-index: 1060;">
                    <li><a class="dropdown-item" onclick="window.location.href='/course/'+this.closest('[data-entity-id]').dataset.entityId"><i class="bi bi-eye me-2"></i>{{ 'common.action.view.details'|trans }}</a></li>
                    <li>{{ button_edit('{entityId}', '/course/{entityId}/edit', null, 'messages') }}</li>
                    <li><hr class="dropdown-divider"></li>
                    <li>{{ button_delete('{entityId}', '/course/{entityId}/delete', 'confirm.delete.entity') }}</li>
                </ul>
            </div>
            <div class="d-flex align-items-center flex-grow-1" style="cursor: pointer;" onclick="window.location.href='/course/' + this.closest('[data-entity-id]').dataset.entityId">
                <div class="rounded-circle d-flex align-items-center justify-content-center me-3"
                     style="width: 40px; height: 40px; background: var(--luminai-ai-gradient);">
                    <i class="bi bi-book text-white"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="d-flex align-items-center gap-2 mb-1 flex-wrap">
                        <h6 class="mb-0 text-white" data-bind="name" data-bind-text></h6>
                        <span class="badge bg-success" data-bind-if="active">{{ 'course.status.active'|trans({}, 'course') }}</span>
                        <span class="badge bg-secondary" data-bind-if="!active">{{ 'common.status.inactive'|trans }}</span>
                        <span class="badge bg-info" data-bind-if="totalLengthSeconds>0">
                            <i class="bi bi-clock me-1"></i><span data-bind="totalLengthFormatted" data-bind-text></span>
                        </span>
                    </div>
                    <div class="text-muted d-flex gap-3 flex-wrap" style="font-size: 0.85rem;">
                        <span><i class="bi bi-collection me-1 text-neon"></i><span data-bind="lecturesCount" data-bind-text></span> {{ 'course.lectures'|trans({}, 'course') }}</span>
                        <span><i class="bi bi-people me-1 text-success"></i><span data-bind="enrolledStudentsCount" data-bind-text></span> {{ 'course.students'|trans({}, 'course') }}</span>
                        <span><i class="bi bi-person me-1"></i><span data-bind="ownerName" data-bind-text></span></span>
                        <span data-bind="releaseDateFormatted" data-bind-if="releaseDateFormatted">
                            <i class="bi bi-calendar-event me-1"></i><span data-bind="releaseDateFormatted" data-bind-text></span>
                        </span>
                        <span data-bind="createdAtFormatted" data-bind-if="!releaseDateFormatted">
                            <i class="bi bi-calendar-plus me-1"></i><span data-bind="createdAtFormatted" data-bind-text></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{# Table Headers #}
{% block table_headers %}
    <th style="width: 60px;">{{ 'common.label.actions'|trans }}</th>
    <th data-sort-field="name">{{ 'course.name'|trans({}, 'course') }}</th>
    <th class="text-center" data-sort-field="active" data-field-type="boolean">{{ 'course.status'|trans({}, 'course') }}</th>
    <th class="text-center" data-sort-field="totalLengthSeconds">{{ 'course.duration'|trans({}, 'course') }}</th>
    <th class="text-center" data-sort-field="lecturesCount">{{ 'course.lectures.count'|trans({}, 'course') }}</th>
    <th class="text-center" data-sort-field="enrolledStudentsCount">{{ 'course.students'|trans({}, 'course') }}</th>
    <th data-sort-field="ownerName">{{ 'course.owner'|trans({}, 'course') }}</th>
    <th data-sort-field="releaseDate" data-field-type="date">{{ 'course.date'|trans({}, 'course') }}</th>
{% endblock %}

{# Table Row Template #}
{% block table_view_row_template %}
    <tr style="cursor: pointer;" onclick="window.location.href='/course/' + this.closest('[data-entity-id]').dataset.entityId">
        <td onclick="event.stopPropagation();">
            <div class="dropdown">
                {{ button_dropdown_toggle() }}
                <ul class="dropdown-menu dropdown-menu-dark" style="background: var(--luminai-dark-surface); z-index: 1060;">
                    <li><a class="dropdown-item" onclick="window.location.href='/course/'+this.closest('[data-entity-id]').dataset.entityId"><i class="bi bi-eye me-2"></i>{{ 'common.action.view.details'|trans }}</a></li>
                    <li>{{ button_edit('{entityId}', '/course/{entityId}/edit', null, 'messages') }}</li>
                    <li><hr class="dropdown-divider"></li>
                    <li>{{ button_delete('{entityId}', '/course/{entityId}/delete', 'confirm.delete.entity') }}</li>
                </ul>
            </div>
        </td>
        <td>
            <div class="d-flex align-items-center">
                <div class="rounded-circle d-flex align-items-center justify-content-center me-2"
                     style="width: 32px; height: 32px; background: var(--luminai-ai-gradient);">
                    <i class="bi bi-book text-white"></i>
                </div>
                <span class="text-white" data-bind="name" data-bind-text></span>
            </div>
        </td>
        <td class="text-center">
            <span class="badge bg-success" data-bind-if="active">{{ 'course.status.active'|trans({}, 'course') }}</span>
            <span class="badge bg-secondary" data-bind-if="!active">{{ 'common.status.inactive'|trans }}</span>
        </td>
        <td class="text-center">
            <span class="badge bg-info" data-bind-if="totalLengthSeconds>0">
                <i class="bi bi-clock me-1"></i><span data-bind="totalLengthFormatted" data-bind-text></span>
            </span>
            <span class="text-muted" data-bind-if="totalLengthSeconds<1">-</span>
        </td>
        <td class="text-center text-muted">
            <i class="bi bi-collection me-1 text-neon"></i><span data-bind="lecturesCount" data-bind-text></span>
        </td>
        <td class="text-center text-muted">
            <i class="bi bi-people me-1 text-success"></i><span data-bind="enrolledStudentsCount" data-bind-text></span>
        </td>
        <td class="text-muted" data-bind="ownerName" data-bind-text></td>
        <td class="text-muted" style="font-size: 0.85rem;">
            <span data-bind="releaseDateFormatted" data-bind-if="releaseDateFormatted">
                <i class="bi bi-calendar-event me-1"></i><span data-bind="releaseDateFormatted" data-bind-text></span>
            </span>
            <span data-bind="createdAtFormatted" data-bind-if="!releaseDateFormatted">
                <i class="bi bi-calendar-plus me-1"></i><span data-bind="createdAtFormatted" data-bind-text></span>
            </span>
        </td>
    </tr>
{% endblock %}
