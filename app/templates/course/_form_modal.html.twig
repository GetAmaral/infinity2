{% extends '_base_modal.html.twig' %}

{# Configure modal appearance and behavior #}
{% set entity_type = 'course' %}
{% set icon = 'book' %}
{% set form_action = (is_edit and course.id) ? path('course_edit', {id: course.id}) : path('course_new') %}
{% set title_create = 'course.modal.create.title'|trans({}, 'course') %}
{% set title_edit = 'course.modal.edit.title'|trans({}, 'course') %}
{% set subtitle_create = 'course.modal.create.subtitle'|trans({}, 'course') %}
{% set subtitle_edit = 'course.modal.edit.subtitle'|trans({}, 'course') %}
{% set submit_key = is_edit ? 'button.save.changes' : 'course.button.create.course' %}
{% set submit_domain = is_edit ? 'messages' : 'course' %}
{% set entity = course %}

{# Form fields #}
{% block modal_body %}
    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.name) }}</label>
        {{ form_widget(form.name, {
            'attr': {
                'class': 'form-input-modern' ~ (form.name.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'course.form.name.placeholder'|trans({}, 'course'),
                'autofocus': 'autofocus'
            }
        }) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.description) }}</label>
        {{ form_widget(form.description, {
            'attr': {
                'class': 'form-input-modern' ~ (form.description.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'course.form.description.placeholder'|trans({}, 'course'),
                'rows': 4
            }
        }) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.releaseDate) }}</label>
        {{ form_widget(form.releaseDate, {
            'attr': {
                'class': 'form-input-modern' ~ (form.releaseDate.vars.errors|length > 0 ? ' input-error' : '')
            }
        }) }}
        {{ form_errors(form.releaseDate) }}
    </div>

    <div class="form-group-modern">
        <div class="form-check form-switch">
            {{ form_widget(form.active, {
                'attr': {
                    'class': 'form-check-input',
                    'style': 'cursor: pointer;'
                }
            }) }}
            <label class="form-check-label" for="{{ form.active.vars.id }}" style="color: var(--luminai-text-primary); cursor: pointer; margin-left: 0.5rem;">
                {{ form_label(form.active) }}
            </label>
        </div>
        {{ form_errors(form.active) }}
    </div>

    {{ form_widget(form._token) }}
{% endblock %}
