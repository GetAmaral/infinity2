{% extends '_base_modal.html.twig' %}

{# Configure modal appearance and behavior #}
{% set entity_type = 'lecture' %}
{% set icon = 'collection' %}
{% set form_action = (is_edit and lecture.id) ? path('course_lecture_edit', {courseId: course.id, lectureId: lecture.id}) : path('course_module_lecture_new', {courseId: course.id, moduleId: module.id}) %}
{% set title_create = 'course.lecture.modal.new.title'|trans({}, 'course') %}
{% set title_edit = 'course.lecture.modal.edit.title'|trans({}, 'course') %}
{% set subtitle_create = 'course.lecture.modal.create.subtitle'|trans({}, 'course') %}
{% set subtitle_edit = 'course.lecture.modal.edit.subtitle'|trans({}, 'course') %}
{% set submit_key = is_edit ? 'button.save.changes' : 'course.lecture.button.add.lecture' %}
{% set submit_domain = is_edit ? 'messages' : 'course' %}
{% set entity = lecture %}
{% set enctype = 'multipart/form-data' %}

{# Form fields #}
{% block modal_body %}
    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.name) }}</label>
        {{ form_widget(form.name, {
            'attr': {
                'class': 'form-input-modern' ~ (form.name.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'course.lecture.form.name.placeholder'|trans({}, 'course'),
                'autofocus': 'autofocus'
            }
        }) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.description) }}</label>
        {{ form_widget(form.description, {
            'attr': {
                'class': 'form-input-modern' ~ (form.description.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'course.lecture.form.description.placeholder'|trans({}, 'course'),
                'rows': 3
            }
        }) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.videoFile) }}</label>
        {{ form_widget(form.videoFile, {
            'attr': {
                'class': 'form-input-modern' ~ (form.videoFile.vars.errors|length > 0 ? ' input-error' : '')
            }
        }) }}
        {{ form_errors(form.videoFile) }}
        <small class="form-text text-muted mt-2 d-block">
            <i class="bi bi-info-circle me-1"></i>
            {{ 'upload.video.hint'|trans }}
        </small>

        {% if is_edit and lecture.processingStatus %}
            <div class="mt-2">
                <span class="badge bg-{{ lecture.processingStatus == 'completed' ? 'success' : (lecture.processingStatus == 'failed' ? 'danger' : 'warning') }}">
                    {{ ('course.lecture.status.' ~ lecture.processingStatus)|trans({}, 'course') }}
                </span>
            </div>
        {% endif %}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.viewOrder) }}</label>
        {{ form_widget(form.viewOrder, {
            'attr': {
                'class': 'form-input-modern' ~ (form.viewOrder.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'course.lecture.form.view.order.placeholder'|trans({}, 'course')
            }
        }) }}
        {{ form_errors(form.viewOrder) }}
    </div>

    {{ form_widget(form._token) }}
{% endblock %}
