{% import '_macros/organization_logo.html.twig' as org_logo %}
{% extends '_base_modal.html.twig' %}

{# Configure modal appearance and behavior #}
{% set entity_type = 'organization' %}
{% set icon = 'building' %}
{% set form_action = is_edit ? path('organization_edit', {id: organization.id}) : path('organization_new') %}
{% set enctype = 'multipart/form-data' %}
{% set title_create = 'organization.new.organization'|trans({}, 'organization') %}
{% set subtitle_create = 'organization.modal.create.subtitle'|trans({}, 'organization') %}
{% set subtitle_edit = 'organization.modal.edit.subtitle'|trans({}, 'organization') %}
{% set submit_key = is_edit ? 'button.update.organization' : 'button.create.organization' %}
{% set submit_domain = 'organization' %}
{% set entity = organization %}

{# Custom icon for edit mode - show organization logo #}
{% block modal_icon %}
    {% if is_edit and (organization.logoPath or organization.logoPathDark) %}
        {{ org_logo.logo(organization, 'md') }}
    {% else %}
        <i class="bi bi-{{ icon }}"></i>
    {% endif %}
{% endblock %}

{# Form fields #}
{% block modal_body %}
    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.name) }}</label>
        {{ form_widget(form.name, {
            'attr': {
                'class': 'form-input-modern' ~ (form.name.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'organization.form.name.placeholder'|trans({}, 'organization'),
                'autofocus': 'autofocus'
            }
        }) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.slug) }}</label>
        {{ form_widget(form.slug, {
            'attr': {
                'class': 'form-input-modern' ~ (form.slug.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'organization.form.slug.placeholder'|trans({}, 'organization')
            }
        }) }}
        {% if form.slug.vars.help %}
            <small class="form-help-text">{{ form.slug.vars.help|trans }}</small>
        {% endif %}
        {{ form_errors(form.slug) }}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.description) }}</label>
        {{ form_widget(form.description, {
            'attr': {
                'class': 'form-input-modern form-textarea-modern' ~ (form.description.vars.errors|length > 0 ? ' input-error' : ''),
                'placeholder': 'organization.form.description.placeholder'|trans({}, 'organization'),
                'rows': '4'
            }
        }) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.logoFileLight) }}</label>
        {{ form_widget(form.logoFileLight, {
            'attr': {
                'class': 'form-input-modern' ~ (form.logoFileLight.vars.errors|length > 0 ? ' input-error' : '')
            }
        }) }}
        {% if form.logoFileLight.vars.help %}
            <small class="form-help-text">{{ form.logoFileLight.vars.help|trans }}</small>
        {% endif %}
        {{ form_errors(form.logoFileLight) }}
        {% if is_edit and organization.logoPath %}
            <div class="mt-2">
                <small class="text-muted">{{ 'organization.form.current.logo'|trans({}, 'organization') }}</small>
                <img src="{{ organization.logoPath }}" alt="{{ 'organization.form.current.logo'|trans({}, 'organization') }}" style="max-width: 100px; max-height: 50px; display: block; margin-top: 0.5rem;">
            </div>
        {% endif %}
    </div>

    <div class="form-group-modern">
        <label class="form-label-modern">{{ form_label(form.logoFileDark) }}</label>
        {{ form_widget(form.logoFileDark, {
            'attr': {
                'class': 'form-input-modern' ~ (form.logoFileDark.vars.errors|length > 0 ? ' input-error' : '')
            }
        }) }}
        {% if form.logoFileDark.vars.help %}
            <small class="form-help-text">{{ form.logoFileDark.vars.help|trans }}</small>
        {% endif %}
        {{ form_errors(form.logoFileDark) }}
        {% if is_edit and organization.logoPathDark %}
            <div class="mt-2">
                <small class="text-muted">{{ 'organization.form.current.logo'|trans({}, 'organization') }}</small>
                <img src="{{ organization.logoPathDark }}" alt="{{ 'organization.form.current.dark.logo'|trans({}, 'organization') }}" style="max-width: 100px; max-height: 50px; display: block; margin-top: 0.5rem;">
            </div>
        {% endif %}
    </div>

    <div class="form-group-modern">
        <div class="form-check">
            {{ form_widget(form.isActive, {
                'attr': {
                    'class': 'form-check-input'
                }
            }) }}
            <label class="form-check-label" for="{{ form.isActive.vars.id }}">
                {{ form_label(form.isActive) }}
            </label>
        </div>
        {% if form.isActive.vars.help %}
            <small class="form-help-text">{{ form.isActive.vars.help|trans }}</small>
        {% endif %}
    </div>

    {{ form_widget(form._token) }}
{% endblock %}
