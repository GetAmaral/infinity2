{% extends 'base.html.twig' %}

{# Macro for user action buttons #}
{% macro userActions(user, dropdownOnly) %}
    {% set dropdownOnly = dropdownOnly|default(false) %}

    {% if not dropdownOnly %}
        <div class="d-none d-lg-flex gap-1 align-items-center">
            <a href="{{ path('user_show', {id: user.id}) }}"
               class="btn btn-sm btn-outline-light"
               data-bs-toggle="tooltip"
               data-bs-placement="top"
               data-bs-title="{{ 'user.view_details'|trans }}">
                <i class="bi bi-eye"></i>
            </a>
            {% if is_granted('USER_EDIT', user) %}
                <button type="button"
                        class="btn btn-sm btn-outline-light"
                        data-controller="modal-opener"
                        data-modal-opener-url-value="{{ path('user_edit', {id: user.id}) }}"
                        data-action="click->modal-opener#open"
                        data-bs-toggle="tooltip"
                        data-bs-placement="top"
                        data-bs-title="{{ 'button.edit'|trans }}">
                    <i class="bi bi-pencil"></i>
                </button>
            {% endif %}
            {% if is_granted('USER_DELETE', user) %}
                <button type="button"
                        class="btn btn-sm btn-outline-danger"
                        data-delete-url="{{ path('user_delete', {id: user.id}) }}"
                        data-entity-name="{{ user.name }}"
                        data-csrf-token="{{ csrf_token('delete-user-' ~ user.id) }}"
                        data-bs-toggle="tooltip"
                        data-bs-placement="top"
                        data-bs-title="{{ 'button.delete'|trans }}">
                    <i class="bi bi-trash"></i>
                </button>
            {% endif %}
        </div>
    {% endif %}

    <div class="dropdown {{ dropdownOnly ? '' : 'd-lg-none' }}">
        <button class="btn btn-sm btn-outline-light" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-three-dots-vertical"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark" style="background: var(--infinity-dark-surface);">
            <li>
                <a class="dropdown-item" href="{{ path('user_show', {id: user.id}) }}">
                    <i class="bi bi-eye me-2"></i>{{ 'user.view_details'|trans }}
                </a>
            </li>
            {% if is_granted('USER_EDIT', user) %}
            <li>
                <button type="button"
                        class="dropdown-item"
                        data-controller="modal-opener"
                        data-modal-opener-url-value="{{ path('user_edit', {id: user.id}) }}"
                        data-action="click->modal-opener#open">
                    <i class="bi bi-pencil me-2"></i>{{ 'button.edit'|trans }}
                </button>
            </li>
            {% endif %}
            {% if is_granted('USER_DELETE', user) %}
            <li><hr class="dropdown-divider"></li>
            <li>
                <button type="button"
                        class="dropdown-item text-danger"
                        data-delete-url="{{ path('user_delete', {id: user.id}) }}"
                        data-entity-name="{{ user.name }}"
                        data-csrf-token="{{ csrf_token('delete-user-' ~ user.id) }}">
                    <i class="bi bi-trash me-2"></i>{{ 'button.delete'|trans }}
                </button>
            </li>
            {% endif %}
        </ul>
    </div>
{% endmacro %}

{% import _self as macros %}

{% block title %}{{ organization.name }} - Manage Users - Infinity{% endblock %}

{% block body %}
<!-- Navigation -->
<div class="mb-4">
    <a href="{{ path('organization_show', {id: organization.id}) }}" class="btn infinity-btn-ai">
        <i class="bi bi-arrow-left me-2"></i>{{ 'organization.back_to_organization'|trans }}
    </a>
</div>

<!-- Organization Header -->
<div class="ai-dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-start">
        <div class="d-flex align-items-center">
            <div class="p-3 rounded-3 me-4" style="background: var(--infinity-ai-gradient);">
                <i class="bi bi-building text-white fs-2"></i>
            </div>
            <div>
                <h1 class="text-gradient mb-2">{{ organization.name }}</h1>
                <p class="text-secondary mb-0 fs-5">{{ 'organization.manage_users'|trans }} ({{ users|length }})</p>
            </div>
        </div>
        <div class="d-flex gap-2">
            {% if is_granted('USER_CREATE') %}
                <button type="button"
                        class="btn infinity-btn-primary"
                        data-controller="modal-opener"
                        data-modal-opener-url-value="{{ path('user_new') }}"
                        data-action="click->modal-opener#open">
                    <i class="bi bi-person-plus me-2"></i>{{ 'button.add_user'|trans }}
                </button>
            {% endif %}
        </div>
    </div>
</div>

<!-- View Toggle Controller Wrapper -->
<div data-controller="view-toggle" data-view-toggle-default-value="table">
    <!-- View Toggle -->
    <div class="mb-4 d-flex justify-content-end">
        <div class="btn-group" role="group">
            <button type="button"
                    class="btn btn-outline-secondary"
                    data-view="grid"
                    data-action="view-toggle#setView"
                    data-view-toggle-target="gridButton"
                    title="{{ 'view.grid'|trans }}">
                <i class="bi bi-grid-3x3-gap"></i>
            </button>
            <button type="button"
                    class="btn btn-outline-secondary"
                    data-view="list"
                    data-action="view-toggle#setView"
                    data-view-toggle-target="listButton"
                    title="{{ 'view.list'|trans }}">
                <i class="bi bi-list-ul"></i>
            </button>
            <button type="button"
                    class="btn btn-outline-secondary active"
                    data-view="table"
                    data-action="view-toggle#setView"
                    data-view-toggle-target="tableButton"
                    title="{{ 'view.table'|trans }}">
                <i class="bi bi-table"></i>
            </button>
        </div>
    </div>

    <!-- Grid/List View -->
    <div id="users-grid"
         class="bento-grid"
         data-view-toggle-target="container"
         style="display: none;">
        {% if users is not empty %}
            {% for user in users %}
                <div class="bento-item" id="user-{{ user.id }}">
                    <div class="infinity-card ai-enhanced p-4 h-100">
                        <div class="d-flex align-items-start mb-3">
                            <div class="user-actions me-3">
                                {{ macros.userActions(user, true) }}
                            </div>

                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="p-2 rounded-3 me-3" style="background: linear-gradient(135deg, #22c55e, #16a34a);">
                                        <i class="bi bi-person-circle text-white fs-4"></i>
                                    </div>
                                    <div>
                                        <h5 class="text-white mb-1">{{ user.name }}</h5>
                                        <p class="text-secondary mb-0" style="font-size: 0.875rem;">{{ user.email }}</p>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <small class="text-muted d-flex align-items-center">
                                        <i class="bi bi-calendar me-1"></i>{{ user.createdAt|date('M d, Y') }}
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="bento-item large">
                <div class="infinity-card p-5 text-center">
                    <i class="bi bi-person-plus" style="font-size: 4rem; color: var(--infinity-text-muted);"></i>
                    <h3 class="text-white mt-4 mb-3">{{ 'empty.no_users_yet'|trans }}</h3>
                    <p class="text-secondary mb-4">{{ 'empty.organization_users_description'|trans }}</p>
                    {% if is_granted('USER_CREATE') %}
                        <button type="button"
                                class="btn infinity-btn-primary"
                                data-controller="modal-opener"
                                data-modal-opener-url-value="{{ path('user_new') }}"
                                data-action="click->modal-opener#open">
                            <i class="bi bi-person-plus me-2"></i>{{ 'button.add_first_user'|trans }}
                        </button>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>

    <!-- Table View -->
    <div id="users-table"
         class="table-view"
         data-view-toggle-target="tableContainer">
        <div class="infinity-card table-card p-4">
            <div class="table-responsive">
                <table id="usersDataTable" class="table table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>{{ 'table.actions'|trans }}</th>
                            <th data-sort-field="name">{{ 'user.name'|trans }}</th>
                            <th data-sort-field="email">{{ 'user.email'|trans }}</th>
                            <th data-sort-field="createdAt">{{ 'user.created_at'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr id="user-row-{{ user.id }}">
                                <td>
                                    {{ macros.userActions(user) }}
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="p-2 rounded-3 me-3" style="background: linear-gradient(135deg, #22c55e, #16a34a);">
                                            <i class="bi bi-person-circle text-white"></i>
                                        </div>
                                        <strong>{{ user.name }}</strong>
                                    </div>
                                </td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.createdAt|date('M d, Y') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Card -->
<div class="mt-4">
    <div class="infinity-card p-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h6 class="text-neon mb-2">
                    <i class="bi bi-graph-up me-2"></i>{{ 'organization.statistics'|trans }}
                </h6>
                <div class="d-flex gap-4">
                    <div>
                        <div class="text-white fs-4 fw-bold">{{ users|length }}</div>
                        <div class="text-secondary small">{{ 'organization.total_users'|trans }}</div>
                    </div>
                </div>
            </div>
            <a href="{{ path('organization_show', {id: organization.id}) }}" class="btn infinity-btn-ai">
                <i class="bi bi-arrow-left me-2"></i>{{ 'organization.back_to_details'|trans }}
            </a>
        </div>
    </div>
</div>

<style>
@keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

/* List View Styles */
