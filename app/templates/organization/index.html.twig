{% extends '_base_entity_list.html.twig' %}

{# Macro for organization action buttons - reusable for grid, list and table views #}
{% macro organizationActions(org, dropdownOnly) %}
    {% set dropdownOnly = dropdownOnly|default(false) %}

    {% if not dropdownOnly %}
        <div class="d-none d-lg-flex gap-1 align-items-center">
            <a href="{{ path('organization_show', {id: org.id}) }}"
               class="btn btn-sm btn-outline-light"
               data-bs-toggle="tooltip"
               data-bs-placement="top"
               data-bs-title="{{ 'organization.view_details'|trans }}">
                <i class="bi bi-eye"></i>
            </a>
            {% if is_granted('ORGANIZATION_EDIT', org) %}
                <button type="button"
                        class="btn btn-sm btn-outline-light"
                        data-controller="modal-opener"
                        data-modal-opener-url-value="{{ path('organization_edit', {id: org.id}) }}"
                        data-action="click->modal-opener#open"
                        data-bs-toggle="tooltip"
                        data-bs-placement="top"
                        data-bs-title="{{ 'button.edit'|trans }}">
                    <i class="bi bi-pencil"></i>
                </button>
            {% endif %}
            {% if is_granted('ORGANIZATION_DELETE', org) %}
                <form method="post"
                      action="{{ path('organization_delete', {id: org.id}) }}"
                      class="d-inline"
                      data-controller="confirm-delete"
                      data-confirm-delete-message-value="{{ 'organization.confirm_delete'|trans({'%name%': org.name}) }}"
                      data-confirm-delete-has-users-value="{{ org.users|length > 0 ? 'true' : 'false' }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete-organization-' ~ org.id) }}">
                    <button type="submit"
                            class="btn btn-sm btn-outline-danger"
                            data-bs-toggle="tooltip"
                            data-bs-placement="top"
                            data-bs-title="{{ 'button.delete'|trans }}">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>
            {% endif %}
        </div>
    {% endif %}

    <div class="dropdown {{ dropdownOnly ? '' : 'd-lg-none' }}">
        <button class="btn btn-sm btn-outline-light" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-three-dots-vertical"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark" style="background: var(--infinity-dark-surface);">
            <li>
                <a class="dropdown-item" href="{{ path('organization_show', {id: org.id}) }}">
                    <i class="bi bi-eye me-2"></i>{{ 'organization.view_details'|trans }}
                </a>
            </li>
            {% if is_granted('ORGANIZATION_EDIT', org) %}
            <li>
                <button type="button"
                        class="dropdown-item"
                        data-controller="modal-opener"
                        data-modal-opener-url-value="{{ path('organization_edit', {id: org.id}) }}"
                        data-action="click->modal-opener#open">
                    <i class="bi bi-pencil me-2"></i>{{ 'button.edit'|trans }}
                </button>
            </li>
            <li>
                <a class="dropdown-item" href="{{ path('organization_users', {id: org.id}) }}">
                    <i class="bi bi-people me-2"></i>{{ 'organization.manage_users'|trans }}
                </a>
            </li>
            {% endif %}
            {% if is_granted('ORGANIZATION_DELETE', org) %}
            <li><hr class="dropdown-divider"></li>
            <li>
                <form method="post"
                      action="{{ path('organization_delete', {id: org.id}) }}"
                      class="d-inline"
                      data-controller="confirm-delete"
                      data-confirm-delete-message-value="{{ 'organization.confirm_delete'|trans({'%name%': org.name}) }}"
                      data-confirm-delete-has-users-value="{{ org.users|length > 0 ? 'true' : 'false' }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete-organization-' ~ org.id) }}">
                    <button type="submit" class="dropdown-item text-danger">
                        <i class="bi bi-trash me-2"></i>{{ 'button.delete'|trans }}
                    </button>
                </form>
            </li>
            {% endif %}
        </ul>
    </div>
{% endmacro %}

{% import _self as macros %}

{# Customize page appearance #}
{% block page_icon %}<i class="bi bi-building text-neon fs-2 me-3"></i>{% endblock %}

{# Customize filter options #}
{% block filter_options %}
    <li><a class="dropdown-item" href="?filter=active">{{ 'filter.active_organizations'|trans }}</a></li>
    <li><a class="dropdown-item" href="?filter=empty">{{ 'filter.empty_organizations'|trans }}</a></li>
    <li><hr class="dropdown-divider"></li>
    <li><a class="dropdown-item" href="{{ path('organization_index') }}">{{ 'filter.all'|trans }}</a></li>
{% endblock %}

{# Customize grid item display #}
{% block grid_item %}
    {% set org = entity %}
    <div class="bento-item {% if loop.index0 % 3 == 0 %}large{% endif %}" id="organization-{{ org.id }}">
        <div class="infinity-card ai-enhanced p-4 h-100">
            <div class="d-flex align-items-start mb-3">
                <div class="org-actions me-3">
                    {{ macros.organizationActions(org, true) }}
                </div>

                <div class="flex-grow-1">
                    <div class="d-flex align-items-center mb-2">
                        <div class="p-2 rounded-3 me-3" style="background: var(--infinity-ai-gradient); background-size: 200% 200%; animation: gradientShift 4s ease infinite;">
                            <i class="bi bi-building text-white fs-4"></i>
                        </div>
                        <div>
                            <h5 class="text-white mb-1">{{ org.name }}</h5>
                            <div class="d-flex gap-2 align-items-center">
                                <span class="real-time-badge">
                                    {% if org.users|length == 0 %}
                                        {{ 'organization.no_users'|trans }}
                                    {% else %}
                                        {{ 'organization.users_count'|trans({'%count%': org.users|length}, 'messages', null, org.users|length) }}
                                    {% endif %}
                                </span>
                                {% if org.users|length > 5 %}
                                    <span class="ai-status-indicator" style="font-size: 0.7rem; padding: 0.2rem 0.5rem;">
                                        <i class="bi bi-star-fill"></i> Active
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% if org.description %}
                        <p class="text-secondary mb-3 org-description">{{ org.description|slice(0, 100) }}{% if org.description|length > 100 %}...{% endif %}</p>
                    {% else %}
                        <p class="text-muted mb-3 fst-italic org-description">{{ 'empty.no_description'|trans }}</p>
                    {% endif %}
                    <div class="d-flex justify-content-between align-items-center mt-auto org-footer">
                        <small class="text-muted d-flex align-items-center">
                            <i class="bi bi-calendar me-1"></i>{{ org.createdAt|date('M d, Y') }}
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{# Customize table headers #}
{% block table_headers %}
    <th>{{ 'table.actions'|trans }}</th>
    <th data-sort-field="name">{{ 'organization.name'|trans }}</th>
    <th data-sort-field="description">{{ 'organization.description'|trans }}</th>
    <th data-sort-field="userCount">{{ 'organization.users_count'|trans({'%count%': 0}) }}</th>
    <th data-sort-field="createdAt">{{ 'organization.created_at'|trans }}</th>
{% endblock %}

{# Customize table row display #}
{% block table_row %}
    {% set org = entity %}
    <td>
        {{ macros.organizationActions(org) }}
    </td>
    <td>
        <div class="d-flex align-items-center">
            <div class="p-2 rounded-3 me-3" style="background: var(--infinity-ai-gradient); background-size: 200% 200%; animation: gradientShift 4s ease infinite;">
                <i class="bi bi-building text-white"></i>
            </div>
            <strong>{{ org.name }}</strong>
        </div>
    </td>
    <td>
        {% if org.description %}
            {{ org.description|slice(0, 80) }}{% if org.description|length > 80 %}...{% endif %}
        {% else %}
            <span class="text-muted fst-italic">{{ 'empty.no_description'|trans }}</span>
        {% endif %}
    </td>
    <td>
        <span class="badge" style="background: var(--infinity-ai-gradient); color: white;">
            {{ org.users|length }}
        </span>
    </td>
    <td>{{ org.createdAt|date('M d, Y') }}</td>
{% endblock %}

{# Add organization-specific styles #}
{% block additional_styles %}
.list-view .org-description,
.list-view .org-footer {
    display: none;
}

.org-actions {
    flex-shrink: 0;
    position: relative;
    z-index: 100;
}

@media (max-width: 991px) {
    .bento-item:has(.dropdown-menu.show) {
        z-index: 1055;
    }
}

/* Organization badge in table - Theme responsive */
#organizationsDataTable .badge {
    background: var(--infinity-ai-gradient) !important;
    color: white !important;
}

[data-theme="light"] #organizationsDataTable .badge {
    background: linear-gradient(135deg, #3b82f6, #8b5cf6) !important;
}

/* Organization icon gradient - Theme responsive */
#organizationsDataTable .p-2.rounded-3 {
    background: var(--infinity-ai-gradient) !important;
    background-size: 200% 200% !important;
    animation: gradientShift 4s ease infinite !important;
}

[data-theme="light"] #organizationsDataTable .p-2.rounded-3 {
    background: linear-gradient(135deg, #3b82f6, #8b5cf6) !important;
    background-size: 200% 200% !important;
}
{% endblock %}