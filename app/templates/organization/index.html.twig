{% extends '_base_entity_list.html.twig' %}
{% import '_macros/organization_logo.html.twig' as org_logo %}

{#
 # Data-Bind Template System for Organizations
 # ============================================
 # Example API response for Organization:
 # {
 #   "id": "uuid-here",
 #   "name": "Acme Corporation",
 #   "slug": "acme-corporation",
 #   "description": "Leading tech company",
 #   "userCount": 45,
 #   "verifiedUserCount": 40,
 #   "courseCount": 12,
 #   "activeCourseCount": 8,
 #   "isActive": true,
 #   "createdAt": "2025-01-01T00:00:00+00:00",
 #   "createdAtFormatted": "Jan 01, 2025",
 #   "updatedAt": "2025-01-15T00:00:00+00:00",
 #   "updatedAtFormatted": "Jan 15, 2025",
 #   "createdByName": "John Doe",
 #   "updatedByName": "Jane Smith"
 # }
#}

{# Customize page icon #}
{% block page_icon %}<i class="bi bi-building text-neon fs-2 me-3"></i>{% endblock %}

{# Grid View Template #}
{% block grid_view_item_template %}
    <div class="col">
        <div class="infinity-card h-100 p-4" style="cursor: pointer;" onclick="window.location.href='/organization/' + this.closest('[data-entity-id]').dataset.entityId">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div onclick="event.stopPropagation();" class="dropdown card-dropdown me-3">
                    <button class="btn btn-sm btn-outline-light" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-dark" style="background: var(--infinity-dark-surface); z-index: 1060;">
                        <li><a class="dropdown-item" onclick="window.location.href='/organization/'+this.closest('[data-entity-id]').dataset.entityId"><i class="bi bi-eye me-2"></i>{{ 'common.action.view_details'|trans }}</a></li>
                        <li><button type="button" class="dropdown-item" data-controller="modal-opener" data-action="click->modal-opener#open" onclick="this.dataset.modalOpenerUrlValue='/organization/'+this.closest('[data-entity-id]').dataset.entityId+'/edit'"><i class="bi bi-pencil me-2"></i>{{ 'button.edit'|trans }}</button></li>
                        <li><a class="dropdown-item" onclick="window.location.href='/organization/'+this.closest('[data-entity-id]').dataset.entityId+'/users'"><i class="bi bi-people me-2"></i>{{ 'organization.manage.users'|trans }}</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><button type="button" class="dropdown-item text-danger" onclick="if(confirm('{{ 'confirm.delete.entity'|trans }}')){ fetch('/organization/'+this.closest('[data-entity-id]').dataset.entityId+'/delete', {method:'POST'}).then(()=>location.reload())}"><i class="bi bi-trash me-2"></i>{{ 'button.delete'|trans }}</button></li>
                    </ul>
                </div>
                <div class="d-flex align-items-center flex-grow-1">
                    {# Logo container - show if has logo #}
                    <div class="org-logo-container me-3" style="width: 48px; height: 48px;" data-bind-if="logoPath">
                        <img data-bind="logoPath" data-bind-src class="org-logo-light" alt="Organization logo" style="width: 100%; height: 100%; object-fit: contain;" data-bind-if="logoPath">
                        <img data-bind="logoPathDark" data-bind-src class="org-logo-dark" alt="Organization logo" style="width: 100%; height: 100%; object-fit: contain;" data-bind-if="logoPathDark">
                    </div>
                    {# Fallback icon - show if no logo #}
                    <div class="org-icon-fallback me-3" style="width: 48px; height: 48px;" data-bind-if="!logoPath">
                        <i class="bi bi-building fs-5"></i>
                    </div>
                    <div class="flex-grow-1">
                        <div class="d-flex align-items-center gap-2 mb-1">
                            <h5 class="mb-0 text-white" data-bind="name" data-bind-text></h5>
                            <span class="badge bg-success" data-bind-if="isActive">
                                <i class="bi bi-check-circle-fill me-1"></i>{{ 'common.status.active'|trans }}
                            </span>
                            <span class="badge bg-secondary" data-bind-if="!isActive">
                                <i class="bi bi-pause-circle me-1"></i>{{ 'common.status.inactive'|trans }}
                            </span>
                        </div>
                        <p class="text-muted mb-2" style="font-size: 0.75rem;">
                            <i class="bi bi-link-45deg me-1"></i><span data-bind="slug" data-bind-text></span>
                        </p>
                        <div class="d-flex gap-1 flex-wrap">
                            <span class="badge bg-info">
                                <i class="bi bi-people me-1"></i><span data-bind="userCount" data-bind-text></span> {{ 'organization.users'|trans }}
                            </span>
                            <span class="badge bg-primary" data-bind-if="courseCount>0">
                                <i class="bi bi-book me-1"></i><span data-bind="courseCount" data-bind-text></span> {{ 'organization.courses'|trans }}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <p class="text-muted mb-3" style="font-size: 0.9rem;" data-bind-if="description">
                <span data-bind="description" data-bind-text></span>
            </p>
            <p class="text-muted fst-italic mb-3" style="font-size: 0.9rem;" data-bind-if="!description">
                {{ 'empty.no.description'|trans }}
            </p>
            <div class="mt-auto">
                <div class="d-flex justify-content-between align-items-center mb-2" data-bind-if="createdByName">
                    <small class="text-muted">
                        <i class="bi bi-person-plus me-1"></i>{{ 'organization.created.by'|trans }}: <span data-bind="createdByName" data-bind-text></span>
                    </small>
                </div>
                <div class="pt-2 border-top" style="border-color: rgba(255, 255, 255, 0.1) !important;">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="bi bi-calendar-plus me-1"></i><span data-bind="createdAtFormatted" data-bind-text></span>
                        </small>
                        <small class="text-muted">
                            <i class="bi bi-clock-history me-1"></i><span data-bind="updatedAtFormatted" data-bind-text></span>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{# List View Template #}
{% block list_view_item_template %}
    <div class="infinity-card mb-3 p-3">
        <div class="d-flex align-items-center">
            <div onclick="event.stopPropagation();" class="dropdown card-dropdown me-3">
                <button class="btn btn-sm btn-outline-light" data-bs-toggle="dropdown">
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-dark" style="background: var(--infinity-dark-surface); z-index: 1060;">
                    <li><a class="dropdown-item" onclick="window.location.href='/organization/'+this.closest('[data-entity-id]').dataset.entityId"><i class="bi bi-eye me-2"></i>{{ 'common.action.view_details'|trans }}</a></li>
                    <li><button type="button" class="dropdown-item" data-controller="modal-opener" data-action="click->modal-opener#open" onclick="this.dataset.modalOpenerUrlValue='/organization/'+this.closest('[data-entity-id]').dataset.entityId+'/edit'"><i class="bi bi-pencil me-2"></i>{{ 'button.edit'|trans }}</button></li>
                    <li><a class="dropdown-item" onclick="window.location.href='/organization/'+this.closest('[data-entity-id]').dataset.entityId+'/users'"><i class="bi bi-people me-2"></i>{{ 'organization.manage.users'|trans }}</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><button type="button" class="dropdown-item text-danger" onclick="if(confirm('{{ 'confirm.delete.entity'|trans }}')){ fetch('/organization/'+this.closest('[data-entity-id]').dataset.entityId+'/delete', {method:'POST'}).then(()=>location.reload())}"><i class="bi bi-trash me-2"></i>{{ 'button.delete'|trans }}</button></li>
                </ul>
            </div>
            <div class="d-flex align-items-center flex-grow-1" style="cursor: pointer;" onclick="window.location.href='/organization/' + this.closest('[data-entity-id]').dataset.entityId">
                {# Logo container - show if has logo #}
                <div class="org-logo-container me-3" style="width: 40px; height: 40px;" data-bind-if="logoPath">
                    <img data-bind="logoPath" data-bind-src class="org-logo-light" alt="Organization logo" style="width: 100%; height: 100%; object-fit: contain;" data-bind-if="logoPath">
                    <img data-bind="logoPathDark" data-bind-src class="org-logo-dark" alt="Organization logo" style="width: 100%; height: 100%; object-fit: contain;" data-bind-if="logoPathDark">
                </div>
                {# Fallback icon - show if no logo #}
                <div class="org-icon-fallback me-3" style="width: 40px; height: 40px;" data-bind-if="!logoPath">
                    <i class="bi bi-building"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="d-flex align-items-center gap-2 mb-1 flex-wrap">
                        <h6 class="mb-0 text-white" data-bind="name" data-bind-text></h6>
                        <span class="badge bg-success" data-bind-if="isActive"><i class="bi bi-check-circle-fill"></i></span>
                        <span class="badge bg-secondary" data-bind-if="!isActive"><i class="bi bi-pause-circle"></i></span>
                        <span class="badge bg-info">
                            <i class="bi bi-people me-1"></i><span data-bind="userCount" data-bind-text></span>
                        </span>
                        <span class="badge bg-primary" data-bind-if="courseCount>0">
                            <i class="bi bi-book me-1"></i><span data-bind="courseCount" data-bind-text></span>
                        </span>
                    </div>
                    <div class="text-muted" style="font-size: 0.85rem;">
                        <i class="bi bi-link-45deg me-1"></i><span data-bind="slug" data-bind-text></span>
                        <span class="mx-2" data-bind-if="createdByName">•</span>
                        <span data-bind-if="createdByName">
                            <i class="bi bi-person-plus me-1"></i><span data-bind="createdByName" data-bind-text></span>
                        </span>
                        <span class="mx-2">•</span>
                        <i class="bi bi-clock-history me-1"></i><span data-bind="updatedAtFormatted" data-bind-text></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{# Table Headers #}
{% block table_headers %}
    <th style="width: 60px;">{{ 'common.label.actions'|trans }}</th>
    <th data-sort-field="name">{{ 'organization.name'|trans }}</th>
    <th class="text-center" data-sort-field="isActive" data-field-type="boolean">{{ 'organization.status'|trans }}</th>
    <th class="text-center" data-sort-field="userCount">{{ 'organization.users'|trans }}</th>
    <th class="text-center" data-sort-field="courseCount">{{ 'organization.courses'|trans }}</th>
    <th class="d-none d-xl-table-cell" data-sort-field="createdByName">{{ 'organization.created.by'|trans }}</th>
{% endblock %}

{# Table Row Template #}
{% block table_view_row_template %}
    <tr style="cursor: pointer;" onclick="window.location.href='/organization/' + this.closest('[data-entity-id]').dataset.entityId">
        <td onclick="event.stopPropagation();">
            <div class="dropdown card-dropdown">
                <button class="btn btn-sm btn-outline-light" data-bs-toggle="dropdown">
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-dark" style="background: var(--infinity-dark-surface); z-index: 1060;">
                    <li><a class="dropdown-item" onclick="window.location.href='/organization/'+this.closest('[data-entity-id]').dataset.entityId"><i class="bi bi-eye me-2"></i>{{ 'common.action.view_details'|trans }}</a></li>
                    <li><button type="button" class="dropdown-item" data-controller="modal-opener" data-action="click->modal-opener#open" onclick="this.dataset.modalOpenerUrlValue='/organization/'+this.closest('[data-entity-id]').dataset.entityId+'/edit'"><i class="bi bi-pencil me-2"></i>{{ 'button.edit'|trans }}</button></li>
                    <li><a class="dropdown-item" onclick="window.location.href='/organization/'+this.closest('[data-entity-id]').dataset.entityId+'/users'"><i class="bi bi-people me-2"></i>{{ 'organization.manage.users'|trans }}</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><button type="button" class="dropdown-item text-danger" onclick="if(confirm('{{ 'confirm.delete.entity'|trans }}')){ fetch('/organization/'+this.closest('[data-entity-id]').dataset.entityId+'/delete', {method:'POST'}).then(()=>location.reload())}"><i class="bi bi-trash me-2"></i>{{ 'button.delete'|trans }}</button></li>
                </ul>
            </div>
        </td>
        <td>
            <div class="d-flex align-items-center gap-2">
                {# Logo container - show if has logo #}
                <div class="org-logo-container" style="width: 32px; height: 32px;" data-bind-if="logoPath">
                    <img data-bind="logoPath" data-bind-src class="org-logo-light" alt="Organization logo" style="width: 100%; height: 100%; object-fit: contain;" data-bind-if="logoPath">
                    <img data-bind="logoPathDark" data-bind-src class="org-logo-dark" alt="Organization logo" style="width: 100%; height: 100%; object-fit: contain;" data-bind-if="logoPathDark">
                </div>
                {# Fallback icon - show if no logo #}
                <div class="org-icon-fallback" style="width: 32px; height: 32px;" data-bind-if="!logoPath">
                    <i class="bi bi-building"></i>
                </div>
                <div>
                    <div class="text-white" data-bind="name" data-bind-text></div>
                    <div class="text-muted" style="font-size: 0.75rem;">
                        <i class="bi bi-link-45deg me-1"></i><span data-bind="slug" data-bind-text></span>
                    </div>
                </div>
            </div>
        </td>
        <td class="text-center">
            <span class="badge bg-success" data-bind-if="isActive">
                <i class="bi bi-check-circle-fill me-1"></i>{{ 'organization.active'|trans }}
            </span>
            <span class="badge bg-secondary" data-bind-if="!isActive">
                <i class="bi bi-pause-circle me-1"></i>{{ 'common.status.inactive'|trans }}
            </span>
        </td>
        <td class="text-center">
            <span class="badge bg-info">
                <i class="bi bi-people me-1"></i><span data-bind="userCount" data-bind-text></span>
            </span>
        </td>
        <td class="text-center">
            <span class="badge bg-primary" data-bind-if="courseCount>0">
                <i class="bi bi-book me-1"></i><span data-bind="courseCount" data-bind-text></span>
            </span>
            <span class="text-muted" data-bind-if="courseCount<1">-</span>
        </td>
        <td class="d-none d-xl-table-cell text-muted" style="font-size: 0.85rem;">
            <span data-bind-if="createdByName">
                <i class="bi bi-person-plus me-1"></i><span data-bind="createdByName" data-bind-text></span>
            </span>
            <span data-bind-if="!createdByName" class="fst-italic">-</span>
        </td>
    </tr>
{% endblock %}
